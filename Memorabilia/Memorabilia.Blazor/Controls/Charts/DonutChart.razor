@inherits Chart

<MudPaper Class="pa-4">
    <MudChart ChartType="ChartType.Donut"
              Height="@Height"
              InputData="@Data"
              InputLabels="@Labels"
              Width="@Width">
        <CustomGraphics>
            <text class="donut-inner-text"
                  dominant-baseline="middle"
                  fill="black"
                  font-family="Helvetica"
                  font-size="2"
                  text-anchor="middle"
                  x="47%"
                  y="35%">Total</text>
            <text class="donut-inner-text"
                  dominant-baseline="middle"
                  fill="black"
                  font-family="Helvetica"
                  font-size="5"
                  text-anchor="middle"
                  x="47%"
                  y="50%">@Summary</text>
        </CustomGraphics>
    </MudChart>
</MudPaper>
