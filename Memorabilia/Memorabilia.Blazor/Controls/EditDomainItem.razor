<EditPage ContinueNavigationPath="@_viewModel.NavigationPath"
          DomainImageRootPath="@DomainImageRootPath"
          EditMode="_viewModel.EditModeType"
          ExitNavigationPath="@_viewModel.NavigationPath"
          ImageFileName="@_viewModel.ImageFileName"
          ItemName="@_viewModel.DomainTypeName"
          Model="_viewModel"
          OnLoad="Load"
          OnSave="Save"
          PageFooterNavigationPath="@_viewModel.PageFooterNavigationPath"
          PageTitle="@_viewModel.PageTitle"
          TItem="SaveDomainViewModel">
    <Content>
        <DivRowCol3>
            <Content>
                <TextField Label="Name"
                           MaxLength="@MaxNameLength"
                           SelectedText="@_viewModel.Name"
                           SelectedTextChanged="@((p) => _viewModel.Name = p)" />
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <TextField Label="Abbreviation"
                           MaxLength="@MaxAbbreviationLength"
                           SelectedText="@_viewModel.Abbreviation"
                           SelectedTextChanged="@((p) => _viewModel.Abbreviation = p)" />
            </Content>
        </DivRowCol3>
    </Content>
</EditPage>


