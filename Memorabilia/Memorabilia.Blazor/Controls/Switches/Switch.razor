<MudSwitch Checked="Checked"
           CheckedChanged="CheckedChanged"
           Disabled="Disabled"
           Label="@Label"
           Style="@_style"
           T="bool"
           ThumbIcon="@(Checked ? Icons.Material.Filled.Done : Icons.Material.Filled.Close)"
           ThumbIconColor="@(Checked ? MudBlazor.Color.Success : MudBlazor.Color.Error)">
    @ChildContent
</MudSwitch>
