<Condition Evaluation="@(!ImageData.IsNullOrEmpty())">
    <Match>
        <MudImage @onclick="@(_ => NavigationManager.NavigateTo(NavigationPath))"
                  Class="rounded-lg can-click"
                  Elevation="5"
                  Height="200"
                  ObjectFit="@ObjectFit.Cover"
                  Src="@ImageData"
                  Width="200" />
    </Match>
    <NotMatch>
        <MudImage Class="rounded-lg"
                  Elevation="5"
                  Height="200"
                  ObjectFit="@ObjectFit.Cover"
                  Src="images/spinner.gif"
                  Width="200" />
    </NotMatch>
</Condition>
