<HiddenControl TooltipText="@TooltipText" 
               Visible="Visible">
    <Condition Evaluation="@(!ImageData.IsNullOrEmpty())">
        <Match>
            <Image Class="@Class"
                   Elevation="Elevation"
                   Height="Height"
                   ImageData="@ImageData"
                   ObjectFit="ObjectFit"
                   OnClick="OnImageClick"
                   TooltipText="@TooltipText"
                   Width="Width" />
        </Match>
        <NotMatch>
            <MudProgressCircular Color="MudBlazor.Color.Info"
                                 Indeterminate="true" />
        </NotMatch>
    </Condition>
</HiddenControl>