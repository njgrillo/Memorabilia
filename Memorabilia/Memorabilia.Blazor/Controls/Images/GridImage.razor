<HiddenControl TooltipText="@TooltipText" 
               Visible="Visible">
    <Image Class="@Class"
           Elevation="Elevation"
           Height="Height"
           ImageData="@ImageData"
           ObjectFit="ObjectFit"
           OnClick="OnImageClick"
           TooltipText="@TooltipText"
           Visible="@(!ImageData.IsNullOrEmpty())"
           Width="Width" />
    <HiddenControl Visible="@(ImageData.IsNullOrEmpty())">
        <MudProgressCircular Color="MudBlazor.Color.Info"
                             Indeterminate="true" />
    </HiddenControl>
</HiddenControl>