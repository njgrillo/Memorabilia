<Condition Evaluation="Visible">
    <Match>
        <Condition Evaluation="@(!TooltipText.IsNullOrEmpty())">
            <Match>
                <MudTooltip Text="@TooltipText">
                    <MudImage @onclick="OnImageClick"
                              Class="@Class"
                              Elevation="Elevation"
                              Height="Height"
                              ObjectFit="ObjectFit"
                              Src="@ImageData"
                              Width="Width" />
                </MudTooltip>
            </Match>
            <NotMatch>
                <MudImage @onclick="OnImageClick"
                          Class="@Class"
                          Elevation="Elevation"
                          Height="Height"
                          ObjectFit="ObjectFit"
                          Src="@ImageData"
                          Width="Width" />
            </NotMatch>
        </Condition>        
    </Match>
</Condition>
