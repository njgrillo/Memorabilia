<DivRowCol3>
    <Content>
        <InternationalHallOfFameTypeDropDown Disabled="@(!_canEditInternationalHallOfFameType)"
                                             Label="Type" 
                                             SelectedValue="_viewModel.InternationalHallOfFameTypeId"
                                             SelectionChanged="(p) => _viewModel.InternationalHallOfFameTypeId = p" />
    </Content>
    <ContentColumn2>
        <NullableIntField Label="Induction Year"
                          Value="_viewModel.Year"
                          ValueChanged="@((p) => _viewModel.Year = p)" />
    </ContentColumn2>
</DivRowCol3>
<DivLeftAlign>
    <Content>
        <MudButton hidden="@(!_canAdd)"
                   ButtonType="MudBlazor.ButtonType.Button" 
                   Color="MudBlazor.Color.Secondary"
                   OnClick="Add"
                   Size="MudBlazor.Size.Medium"                                  
                   Variant="Variant.Filled">Add</MudButton>
        <MudButton hidden="@(!_canUpdate)"
                   ButtonType="MudBlazor.ButtonType.Button" 
                   Color="MudBlazor.Color.Secondary"
                   OnClick="Update"
                   Size="MudBlazor.Size.Medium"                                  
                   Variant="Variant.Filled">Update</MudButton>
    </Content>
</DivLeftAlign>
<DivRowCol6>
    <Content>
         <MudTable Bordered="false"
                   Dense="false" 
                   Hover="true"
                   Items="@InternationalHallOfFames.Where(hof => !hof.IsDeleted).ToList()"    
                   Striped="true">
            <HeaderContent>
                <MudTh>Type</MudTh>
                <MudTh>Induction Year</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Type">@context.InternationalHallOfFameTypeName</MudTd>
                <MudTd DataLabel="Induction Year">@context.Year</MudTd>
                <MudTd DataLabel="">
                    <MudTooltip Text="Edit">
                        <MudFab Color="MudBlazor.Color.Primary"                                
                                Icon="@Icons.Outlined.ModeEditOutline"
                                OnClick="@(_ => Edit(context))" />
                    </MudTooltip> 
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Outlined.DeleteOutline"
                                OnClick="@(_ => context.IsDeleted = true)" />
                    </MudTooltip>  
                </MudTd>
            </RowTemplate>
        </MudTable>
    </Content>
</DivRowCol6>

