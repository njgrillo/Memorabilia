<DivRowCol3>
    <Content>
        <OccupationDropDown Disabled="@(!_canEditOccupation)" 
                            SelectedValue="_viewModel.OccupationId"
                            SelectionChanged="(p) => _viewModel.OccupationId = p" />
    </Content>
    <ContentColumn2>
        <OccupationTypeDropDown SelectedValue="_viewModel.OccupationTypeId"
                                SelectionChanged="(p) => _viewModel.OccupationTypeId = p" />
    </ContentColumn2>
</DivRowCol3>
<DivLeftAlign>
    <Content>
        <DivHidden Hidden="@(!_canAdd)">
            <Content>
                <AddButton OnClick="Add" />
            </Content>
        </DivHidden>
        <DivHidden Hidden="@(!_canUpdate)">
            <Content>
                <UpdateButton OnClick="Update" />
            </Content>
        </DivHidden>
    </Content>    
</DivLeftAlign>
<DivRowCol6>
    <Content>
        <MudTable Bordered="false"
                  Dense="false" 
                  Hover="true"
                  Items="@Occupations.Where(occupation => !occupation.IsDeleted).OrderBy(x => x.OccupationName).ToList()"    
                  Striped="true">
            <HeaderContent>
                <MudTh>Occupation</MudTh>
                <MudTh>Occupation Type</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Occupation">@context.OccupationName</MudTd>
                <MudTd DataLabel="Occupation Type">@context.OccupationTypeName</MudTd>
                <MudTd DataLabel="">
                    <MudTooltip Text="Edit">
                        <MudFab Color="MudBlazor.Color.Primary"                                
                                Icon="@Icons.Outlined.ModeEditOutline"
                                OnClick="@(_ => Edit(context))" />
                    </MudTooltip> 
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Outlined.DeleteOutline"
                                OnClick="@(_ => context.IsDeleted = true)" />
                    </MudTooltip>  
                </MudTd>
            </RowTemplate>
        </MudTable>
    </Content>
</DivRowCol6>
