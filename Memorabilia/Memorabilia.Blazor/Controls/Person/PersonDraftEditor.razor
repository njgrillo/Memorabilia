<DivRowCol3>
    <Content>
        <FranchiseDropDown Disabled="@(!_canEditFranchise)"
                           SelectedValue="_viewModel.FranchiseId"
                           SelectionChanged="(p) => _viewModel.FranchiseId = p"
                           SportIds="_viewModel.SportIds" />
    </Content>
</DivRowCol3>
<DivRowCol3>
    <Content>
        <NullableIntField Label="Year"
                          Value="_viewModel.Year"
                          ValueChanged="@((p) => _viewModel.Year = p)" />
    </Content>
    <ContentColumn2>
        <NullableIntField Label="Round"
                          Value="_viewModel.Round"
                          ValueChanged="@((p) => _viewModel.Round = p)" />
    </ContentColumn2>
    <ContentColumn3>
        <NullableIntField Label="Pick"
                          Value="_viewModel.Pick"
                          ValueChanged="@((p) => _viewModel.Pick = p)" />
    </ContentColumn3>
    <ContentColumn4>
        <NullableIntField Label="Overall"
                          Value="_viewModel.Overall"
                          ValueChanged="@((p) => _viewModel.Overall = p)" />
    </ContentColumn4>
</DivRowCol3>
<DivLeftAlign>
    <Content>
        <MudButton hidden="@(!_canAdd)"
                   ButtonType="MudBlazor.ButtonType.Button" 
                   Color="MudBlazor.Color.Secondary"
                   OnClick="Add"
                   Size="MudBlazor.Size.Medium"                                  
                   Variant="Variant.Filled">Add</MudButton>
        <MudButton hidden="@(!_canUpdate)"
                   ButtonType="MudBlazor.ButtonType.Button" 
                   Color="MudBlazor.Color.Secondary"
                   OnClick="Update"
                   Size="MudBlazor.Size.Medium"                                  
                   Variant="Variant.Filled">Update</MudButton>
    </Content>
</DivLeftAlign>
<DivRowCol6>
    <Content>
         <MudTable Bordered="false"
                   Dense="false" 
                   Hover="true"
                   Items="@Drafts.Where(draft => !draft.IsDeleted).ToList()"    
                   Striped="true">
            <HeaderContent>
                <MudTh>Franchise</MudTh>
                <MudTh>Year</MudTh>
                <MudTh>Round</MudTh>
                <MudTh>Pick</MudTh>
                <MudTh>Overall</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Franchise">@context.FranchiseName</MudTd>
                <MudTd DataLabel="Year">@context.Year</MudTd>
                <MudTd DataLabel="Round">@context.Round</MudTd>
                <MudTd DataLabel="Pick">@context.Pick</MudTd>
                <MudTd DataLabel="Overall">@context.Overall</MudTd>
                <MudTd DataLabel="">
                    <MudTooltip Text="Edit">
                        <MudFab Color="MudBlazor.Color.Primary"                                
                                Icon="@Icons.Outlined.ModeEditOutline"
                                OnClick="@(_ => Edit(context))" />
                    </MudTooltip> 
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Outlined.DeleteOutline"
                                OnClick="@(_ => context.IsDeleted = true)" />
                    </MudTooltip>  
                </MudTd>
            </RowTemplate>
        </MudTable>
    </Content>
</DivRowCol6>


