<DivRowCol6>
    <Content>
        <SportAutoComplete SelectedValue="_viewModel.Sport"
                           SelectionChanged="(p) => _viewModel.Sport = p" />
    </Content>    
    <ContentColumn2>
        <MudSwitch Checked="_viewModel.IsPrimary"
                   CheckedChanged="(p) => _viewModel.IsPrimary = p"
                   Color="MudBlazor.Color.Success"
                   Label="Is Primary?"
                   T="bool" />
    </ContentColumn2>
</DivRowCol6>
<DivLeftAlign>
    <Content>
        <AddButton OnClick="Add" />
    </Content>    
</DivLeftAlign>
<DivRowCol12>
    <Content>
        <MudTable Bordered="false"
                  Dense="false" 
                  Hover="true"
                  Items="@Sports.Where(sport => !sport.IsDeleted).OrderBy(sport => sport.SportName).ToList()"    
                  Striped="true">
            <HeaderContent>
                <MudTh>Sport</MudTh>
                <MudTh>Type</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Sport">@context.SportName</MudTd>
                <MudTd DataLabel="Type">@context.TypeName</MudTd>
                <MudTd DataLabel="">
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Outlined.DeleteOutline"
                                OnClick="@(_ => Delete(context))" />
                    </MudTooltip>  
                </MudTd>
            </RowTemplate>
        </MudTable>
    </Content>
</DivRowCol12>
