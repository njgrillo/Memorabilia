<DivRowCol3>
    <Content>
        <SportDropDown SelectedValue="@_viewModel.SportId"
                       SelectionChanged="(p) => _viewModel.SportId = p" />
    </Content>
</DivRowCol3>
<DivLeftAlign>
    <Content>
        <MudButton ButtonType="MudBlazor.ButtonType.Button" 
                   Color="MudBlazor.Color.Secondary"
                   OnClick="Add"
                   Size="MudBlazor.Size.Medium"                                  
                   Variant="Variant.Filled">Add</MudButton>
    </Content>    
</DivLeftAlign>
<DivRowCol6>
    <Content>
        <MudTable Bordered="false"
                  Dense="false" 
                  Hover="true"
                  Items="@Sports.Where(sport => !sport.IsDeleted).OrderBy(sport => sport.SportName).ToList()"    
                  Striped="true">
            <HeaderContent>
                <MudTh>Sport</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Sport">@context.SportName</MudTd>
                <MudTd DataLabel="">
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Outlined.DeleteOutline"
                                OnClick="@(_ => Remove(context.SportId))" />
                    </MudTooltip>  
                </MudTd>
            </RowTemplate>
        </MudTable>
    </Content>
</DivRowCol6>
