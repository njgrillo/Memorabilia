<DivRowCol3>
    <Content>
        <SportAutoComplete SelectedValue="_viewModel.Sport"
                           SelectionChanged="(p) => _viewModel.Sport = p" />
    </Content>
</DivRowCol3>
<DivLeftAlign>
    <Content>
        <AddButton OnClick="Add" />
    </Content>    
</DivLeftAlign>
<DivRowCol6>
    <Content>
        <MudTable Bordered="false"
                  Dense="false" 
                  Hover="true"
                  Items="@Sports.Where(sport => !sport.IsDeleted).OrderBy(sport => sport.SportName).ToList()"    
                  Striped="true">
            <HeaderContent>
                <MudTh>Sport</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Sport">@context.SportName</MudTd>
                <MudTd DataLabel="">
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Outlined.DeleteOutline"
                                OnClick="@(_ => context.IsDeleted = true)" />
                    </MudTooltip>  
                </MudTd>
            </RowTemplate>
        </MudTable>
    </Content>
</DivRowCol6>
