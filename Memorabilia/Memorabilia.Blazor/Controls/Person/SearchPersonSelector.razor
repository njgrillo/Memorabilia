<div class="d-flex ms-1 flex-row" 
     style="margin-top: 1%; margin-bottom: 1%;">
     <div>
        <PersonSearchAutoComplete IsCulturalSearch="true"
                                  SelectedValue="SelectedPerson"
                                  SelectionChanged="(p) => SelectedPerson = p" />
     </div>
    <div style="padding-left: 10px; padding-top: 12px;">
        <MudButton ButtonType="MudBlazor.ButtonType.Button"
                   Color="MudBlazor.Color.Success"
                   OnClick="Add"
                   Size="MudBlazor.Size.Medium"
                   Variant="Variant.Filled">Add Person</MudButton>
     </div>
</div>
<div class="d-flex ms-1 flex-row"
     style="margin-top: 3%; margin-bottom: 1%;">
    <MudTable Bordered="false"
              Dense="false"
              Hover="true"
              Items="@SelectedPeople.ToList()"              
              Striped="true">
        <HeaderContent>
            <MudTh>Selected People</MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Person">@context.DisplayName</MudTd>
            <MudTd DataLabel="">
                <MudTooltip Text="Delete">
                    <MudFab Color="MudBlazor.Color.Secondary"
                            Icon="@Icons.Outlined.DeleteOutline"
                            OnClick="@(_ => RemovePerson(context))" />
                </MudTooltip>
            </MudTd>
        </RowTemplate>
    </MudTable>
</div>