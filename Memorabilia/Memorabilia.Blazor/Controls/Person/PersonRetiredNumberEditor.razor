<DivRowCol3>
    <Content>
        <FranchiseAutoComplete Disabled="@(!_canEditFranchise)"
                               SelectedValue="_viewModel.Franchise"
                               SelectionChanged="(p) => _viewModel.Franchise = p"
                               SportIds="SportIds" />
    </Content>
    <ContentColumn2>
        <NullableIntField Label="Number"
                          Value="_viewModel.PlayerNumber"
                          ValueChanged="@((p) => _viewModel.PlayerNumber = p)" />
    </ContentColumn2>
</DivRowCol3>
<DivLeftAlign>
    <Content>
        <DivHidden Hidden="@(!_canAdd)">
            <Content>
                <AddButton OnClick="Add" />
            </Content>
        </DivHidden>
        <DivHidden Hidden="@(!_canUpdate)">
            <Content>
                <UpdateButton OnClick="Update" />
            </Content>
        </DivHidden>
    </Content>
</DivLeftAlign>
<DivRowCol6>
    <Content>
         <MudTable Bordered="false"
                   Dense="false" 
                   Hover="true"
                   Items="@RetiredNumbers.Where(retiredNumber => !retiredNumber.IsDeleted).ToList()"    
                   Striped="true">
            <HeaderContent>
                <MudTh>Franchise</MudTh>
                <MudTh>Number</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Franchise">@context.FranchiseName</MudTd>
                <MudTd DataLabel="Number">@context.PlayerNumber</MudTd>
                <MudTd DataLabel="">
                    <MudTooltip Text="Edit">
                        <MudFab Color="MudBlazor.Color.Primary"                                
                                Icon="@Icons.Outlined.ModeEditOutline"
                                OnClick="@(_ => Edit(context))" />
                    </MudTooltip> 
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Outlined.DeleteOutline"
                                OnClick="@(_ => context.IsDeleted = true)" />
                    </MudTooltip>  
                </MudTd>
            </RowTemplate>
        </MudTable>
    </Content>
</DivRowCol6>

