<DivRowCol3>
    <Content>
        <AwardTypeDropDown SelectedValue="_viewModel.AwardTypeId"
                           SelectionChanged="(p) => _viewModel.AwardTypeId = p" />
    </Content>
    <ContentColumn2>
        <MudTextField @bind-Value="_years" 
                      HelperText="Ex. 1999 or 1999-2002 or 2003, 2005-2008"
                      Label="Years"
                      Variant="Variant.Outlined" />
    </ContentColumn2>
</DivRowCol3>
<DivLeftAlign>
    <Content>
        <MudButton ButtonType="MudBlazor.ButtonType.Button" 
                   Color="MudBlazor.Color.Secondary"
                   OnClick="Add"
                   Size="MudBlazor.Size.Medium"                                  
                   Variant="Variant.Filled">Add</MudButton>
    </Content>
</DivLeftAlign>
<DivRowCol6>
    <Content>
         <MudTable Bordered="false"
                   Dense="false" 
                   Hover="true"
                   Items="@Awards.Where(award => !award.IsDeleted).ToList()"    
                   Striped="true">
            <HeaderContent>
                <MudTh>Award</MudTh>
                <MudTh>Year</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Award">@context.AwardTypeName</MudTd>
                <MudTd DataLabel="Year">@context.Year</MudTd>
                <MudTd DataLabel=""> 
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Outlined.DeleteOutline"
                                OnClick="@(_ => Remove(context.AwardTypeId, context.Year))" />
                    </MudTooltip>  
                </MudTd>
            </RowTemplate>
        </MudTable>
    </Content>
</DivRowCol6>

