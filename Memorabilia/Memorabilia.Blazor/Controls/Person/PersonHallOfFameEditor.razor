<DivRowCol3>
    <Content>
        <SportLeagueLevelDropDown Disabled="@(!_canEditSportLeagueLevel)" 
                                  SelectedValue="_viewModel.SportLeagueLevelId"
                                  SelectionChanged="(p) => _viewModel.SportLeagueLevelId = p" />
    </Content>
    <ContentColumn2>
        <MudNumericField @bind-Value="_viewModel.InductionYear" 
                         Label="Induction Year"
                         Variant="Variant.Outlined" />
    </ContentColumn2>
</DivRowCol3>
<DivRowCol3>
    <Content>
        <MudNumericField @bind-Value="_viewModel.VotePercentage" 
                         Label="Vote Percentage"
                         Max="100"
                         Variant="Variant.Outlined" />
    </Content>
    <ContentColumn2>
        <BallotNumberDropDown SelectedValue="_viewModel.BallotNumber"
                              SelectionChanged="(p) => _viewModel.BallotNumber = p" />
    </ContentColumn2>
</DivRowCol3>
<DivLeftAlign>
    <Content>
        <MudButton hidden="@(!_canAddHallOfFame)"
                   ButtonType="MudBlazor.ButtonType.Button" 
                   Color="MudBlazor.Color.Secondary"
                   OnClick="Add"
                   Size="MudBlazor.Size.Medium"                                  
                   Variant="Variant.Filled">Add</MudButton>
        <MudButton hidden="@(!_canUpdateHallOfFame)"
                   ButtonType="MudBlazor.ButtonType.Button" 
                   Color="MudBlazor.Color.Secondary"
                   OnClick="Update"
                   Size="MudBlazor.Size.Medium"                                  
                   Variant="Variant.Filled">Update</MudButton>
    </Content>
</DivLeftAlign>
<DivRowCol6>
    <Content>
         <MudTable Bordered="false"
                   Dense="false" 
                   Hover="true"
                   Items="@HallOfFames.Where(hof => !hof.IsDeleted).ToList()"    
                   Striped="true">
            <HeaderContent>
                <MudTh>Sport</MudTh>
                <MudTh>Induction Year</MudTh>
                <MudTh>Vote Percentage</MudTh>
                <MudTh>Ballot</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Sport">@context.SportName</MudTd>
                <MudTd DataLabel="Induction Year">@context.InductionYear</MudTd>
                <MudTd DataLabel="Vote Percentage">@context.VotePercentage</MudTd>
                <MudTd DataLabel="Ballot">@context.BallotNumberName</MudTd>
                <MudTd DataLabel="">
                    <MudTooltip Text="Edit">
                        <MudFab Color="MudBlazor.Color.Primary"                                
                                Icon="@Icons.Outlined.ModeEditOutline"
                                OnClick="@(_ => Edit(context))" />
                    </MudTooltip> 
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Outlined.DeleteOutline"
                                OnClick="@(_ => context.IsDeleted = true)" />
                    </MudTooltip>  
                </MudTd>
            </RowTemplate>
        </MudTable>
    </Content>
</DivRowCol6>

