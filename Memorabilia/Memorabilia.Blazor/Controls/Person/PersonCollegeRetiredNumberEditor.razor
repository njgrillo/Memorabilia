<DivRowCol3>
    <Content>
        <CollegeAutoComplete Colleges="Colleges" 
                             Disabled="@(!_canEditCollege)"
                             SelectedValue="_viewModel.College"
                             SelectionChanged="(p) => _viewModel.College = p" />
    </Content>
    <ContentColumn2>
        <NullableIntField Label="Number"
                          Value="_viewModel.PlayerNumber"
                          ValueChanged="@((p) => _viewModel.PlayerNumber = p)" />
    </ContentColumn2>
</DivRowCol3>
<DivLeftAlign>
    <Content>
        <DivHidden Hidden="@(!_canAdd)">
            <Content>
                <AddButton OnClick="Add" />
            </Content>
        </DivHidden>
        <DivHidden Hidden="@(!_canUpdate)">
            <Content>
                <UpdateButton OnClick="Update" />
            </Content>
        </DivHidden>
    </Content>
</DivLeftAlign>
<DivRowCol6>
    <Content>
        <MudTable Bordered="false"
                  Dense="false"
                  Hover="true"
                  Items="@CollegeRetiredNumbers.Where(retiredNumber => !retiredNumber.IsDeleted).ToList()"
                  Striped="true">
            <HeaderContent>
                <MudTh>College</MudTh>
                <MudTh>Number</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="College">@context.CollegeName</MudTd>
                <MudTd DataLabel="Number">@context.PlayerNumber</MudTd>
                <MudTd DataLabel="">
                    <MudTooltip Text="Edit">
                        <MudFab Color="MudBlazor.Color.Primary"
                                Icon="@Icons.Material.Outlined.ModeEditOutline"
                                OnClick="@(_ => Edit(context))" />
                    </MudTooltip>
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Material.Outlined.DeleteOutline"
                                OnClick="@(_ => context.IsDeleted = true)" />
                    </MudTooltip>
                </MudTd>
            </RowTemplate>
        </MudTable>
    </Content>
</DivRowCol6>

