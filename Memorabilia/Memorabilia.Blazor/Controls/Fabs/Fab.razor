<Condition Evaluation="Visible">
    <Match>
        <Condition Evaluation="@(!TooltipText.IsNullOrEmpty())">
            <Match>
                <MudTooltip Text="@TooltipText">
                    <MudFab Color="Color"
                            Label="@Label"
                            OnClick="FabClicked"
                            Size="Size"
                            StartIcon="@StartIcon" />
                </MudTooltip>
            </Match>
            <NotMatch>
                <MudFab Color="Color"
                        Label="@Label"
                        OnClick="FabClicked"
                        Size="Size"
                        StartIcon="@StartIcon" />
            </NotMatch>
        </Condition>
    </Match>
</Condition>
