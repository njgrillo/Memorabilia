<Condition Evaluation="@DisplayPageHeader">
    <Match>
        <PageHeader PageTitle="@PageTitle" />
    </Match>
</Condition>
@ChildContent
<Condition Evaluation="@DisplayAddButton">
    <Match>
        <DivRowCol12Center>
            <Fab Color="MudBlazor.Color.Primary"
                 OnClick="@(_ => NavigationManager.NavigateTo(@AddRoute))"
                 StartIcon="@Icons.Material.Outlined.AddCircleOutline"
                 TooltipText="@AddTitle" />
        </DivRowCol12Center>
    </Match>
</Condition>
<Condition Evaluation="@DisplayPageFooter">
    <Match>
        <PageFooter NavigationPath="@NavigationPath"
                    NavigationPathText="@NavigationPathText" />
    </Match>
</Condition>

