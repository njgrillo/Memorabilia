<Page OnLoad="Load">
    <Content>
        <Condition Evaluation="@DisplayPageHeader">
            <Match>
                <PageHeader PageTitle="@PageTitle" />
            </Match>
        </Condition>
        @Content
        <Condition Evaluation="@DisplayAddButton">
            <Match>
                <DivRowCol12Center>
                    <Content>
                        <MudTooltip Text="@AddTitle">
                            <MudFab Color="MudBlazor.Color.Primary"
                                    Icon="@Icons.Material.Outlined.AddCircleOutline"
                                    OnClick="@(_ => NavigationManager.NavigateTo(@AddRoute))" />
                        </MudTooltip>
                    </Content>
                </DivRowCol12Center>
            </Match>
        </Condition>
        <PageFooter NavigationPath="@NavigationPath"
                    NavigationPathText="@NavigationPathText" />
    </Content>
</Page>
