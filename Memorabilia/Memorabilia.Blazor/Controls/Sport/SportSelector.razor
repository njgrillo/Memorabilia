<PrettyBlazor.Condition Evaluation="CanToggle">
    <Match>
        <DivRowCol3>
            <Content>
                <MudCheckBox Checked="@_hasSport"
                             CheckedChanged="SportCheckboxClicked"
                             Label="@_itemTypeNameLabel"
                             T="bool" />  
            </Content>
        </DivRowCol3>
    </Match>
</PrettyBlazor.Condition>
<DivRowCol3 Hidden="@(!_displaySports)">
    <Content>
        <SportDropDown SelectedValue="@SelectedValue"
                       SelectionChanged="(p) => OnInputChange(p)" />      
    </Content>
</DivRowCol3>
