<PrettyBlazor.Condition Evaluation="CanToggle">
    <Match>
        <DivRowCol3>
            <Content>
                <MudCheckBox Checked="@_hasTeams"
                             CheckedChanged="TeamCheckboxClicked"
                             Label="@_itemTypeNameLabel"
                             T="bool" />  
            </Content>
        </DivRowCol3>
    </Match>    
</PrettyBlazor.Condition> 
<DivRowCol6 Hidden="@(!_displayTeams)"
            LeftPadding="10">
    <Content>
        <TeamAutoComplete ResetValueOnEmptyText="false" 
                          SelectedValue="_viewModel"
                          SelectionChanged="(p) => _viewModel = p"
                          SportLeagueLevel="SportLeagueLevel" />
    </Content>
</DivRowCol6>
<DivRowCol6 Hidden="@(!_displayTeams)"
            LeftPadding="10">
    <Content>
        <DivLeftAlign>
            <Content>
                <MudButton ButtonType="MudBlazor.ButtonType.Button" 
                            Color="MudBlazor.Color.Secondary"
                            OnClick="Add"
                            Size="MudBlazor.Size.Medium"                                  
                            Variant="Variant.Filled">Add Team</MudButton>
            </Content>
        </DivLeftAlign> 
        <MudTable Bordered="false"
                    Dense="false" 
                    Hover="true"
                    Items="@Teams.Where(team => !team.IsDeleted).ToList()"    
                    Striped="true">
            <HeaderContent>
                <MudTh>Team</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Team">@context.DisplayName</MudTd>
                <MudTd DataLabel="">
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Outlined.DeleteOutline"
                                OnClick="@(_ => context.IsDeleted = true)" />
                    </MudTooltip>  
                </MudTd>
            </RowTemplate>
        </MudTable>
    </Content>
</DivRowCol6>