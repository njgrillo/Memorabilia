<DivRowCol3>
    <Content>
        <LeagueDropDown SelectedValue="_viewModel.LeagueId"
                        SelectionChanged="(p) => _viewModel.LeagueId = p"
                        SportLeagueLevel="@SportLeagueLevel" />  
    </Content>
</DivRowCol3>
<DivRowCol3>
    <Content>
        <NullableIntField Label="Begin Year"
                          Value="_viewModel.BeginYear"
                          ValueChanged="@((p) => _viewModel.BeginYear = p)" />
    </Content>
    <ContentColumn2>
        <NullableIntField Label="End Year"
                          Value="_viewModel.EndYear"
                          ValueChanged="@((p) => _viewModel.EndYear = p)" />
    </ContentColumn2>
</DivRowCol3>
<DivLeftAlign>
    <Content>
        <MudButton ButtonType="MudBlazor.ButtonType.Button" 
                   Color="MudBlazor.Color.Secondary"
                   OnClick="Add"
                   Size="MudBlazor.Size.Medium"                                  
                   Variant="Variant.Filled">Add</MudButton>
    </Content>
</DivLeftAlign>
<DivRowCol3>
    <Content>
        <MudTable Bordered="false"
                  Dense="false" 
                  Hover="true"
                  Items="@Leagues.Where(league => !league.IsDeleted).OrderBy(league => league.BeginYear).ToList()"    
                  Striped="true">
            <HeaderContent>
                <MudTh>League</MudTh>
                <MudTh>Begin Year</MudTh>
                <MudTh>End Year</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="League">@context.LeagueName</MudTd>
                <MudTd DataLabel="Begin Year">@context.BeginYear</MudTd>
                <MudTd DataLabel="End Year">@context.EndYear</MudTd>
                <MudTd DataLabel="">
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Outlined.DeleteOutline"
                                OnClick="@(_ => context.IsDeleted = true)" />
                    </MudTooltip>  
                </MudTd>
            </RowTemplate>
        </MudTable>
    </Content>
</DivRowCol3>