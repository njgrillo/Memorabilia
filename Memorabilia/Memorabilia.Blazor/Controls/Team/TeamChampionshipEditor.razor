<DivRowCol3>
    <Content>
        <ChampionshipTypeDropDown SelectedValue="_viewModel.ChampionshipTypeId"
                                  SelectionChanged="(p) => _viewModel.ChampionshipTypeId = p"
                                  SportLeagueLevel="SportLeagueLevel" />  
    </Content>
</DivRowCol3>
<DivRowCol3>
    <Content>
        <TextField HelperText="Ex. 1999 or 1999-2002 or 2003, 2005-2008"
                   Label="Years"
                   SelectedText="@_years"
                   SelectedTextChanged="@((p) => _years = p)"/>
    </Content>
</DivRowCol3>
<DivLeftAlign>
    <Content>
        <AddButton OnClick="Add" />
    </Content>
</DivLeftAlign>
<DivRowCol3>
    <Content>
        <MudTable Bordered="false"
                  Dense="false" 
                  Hover="true"
                  Items="@Championships.Where(championship => !championship.IsDeleted).OrderBy(championship => championship.Year).ToList()"    
                  Striped="true">
            <HeaderContent>
                <MudTh>Championship Type</MudTh>
                <MudTh>Year</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Championship Type">@context.ChampionshipTypeName</MudTd>
                <MudTd DataLabel="Year">@context.Year</MudTd>
                <MudTd DataLabel="">
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Material.Outlined.DeleteOutline"
                                OnClick="@(_ => context.IsDeleted = true)" />
                    </MudTooltip>  
                </MudTd>
            </RowTemplate>
        </MudTable>
    </Content>
</DivRowCol3>