<DivRowCol3>
    <Content>
        <ChampionshipTypeDropDown SelectedValue="_viewModel.ChampionshipTypeId"
                                  SelectionChanged="(p) => _viewModel.ChampionshipTypeId = p" />  
    </Content>
</DivRowCol3>
<DivRowCol3>
    <Content>
        <MudNumericField @bind-Value="_viewModel.Year" 
                         Label="Begin Year"
                         Variant="Variant.Outlined" />
    </Content>
</DivRowCol3>
<DivLeftAlign>
    <Content>
        <MudButton ButtonType="MudBlazor.ButtonType.Button" 
                   Color="MudBlazor.Color.Secondary"
                   OnClick="Add"
                   Size="MudBlazor.Size.Medium"                                  
                   Variant="Variant.Filled">Add</MudButton>
    </Content>
</DivLeftAlign>
<DivRowCol3>
    <Content>
        <MudTable Bordered="false"
                  Dense="false" 
                  Hover="true"
                  Items="@Championships.Where(championship => !championship.IsDeleted).OrderBy(championship => championship.Year).ToList()"    
                  Striped="true">
            <HeaderContent>
                <MudTh>Championship Type</MudTh>
                <MudTh>Year</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Championship Type">@context.ChampionshipTypeName</MudTd>
                <MudTd DataLabel="Year">@context.Year</MudTd>
                <MudTd DataLabel="">
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Outlined.DeleteOutline"
                                OnClick="@(_ => context.IsDeleted = true)" />
                    </MudTooltip>  
                </MudTd>
            </RowTemplate>
        </MudTable>
    </Content>
</DivRowCol3>