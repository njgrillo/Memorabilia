<MudTable Bordered="false"
          Dense="false"
          Filter="new Func<SuggestedInscriptionViewModel,bool>(FilterFunc1)"
          Hover="true"
          Items="@_viewModel.Items"
          Striped="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Suggested Inscriptions</MudText>
        <MudSpacer />
        <MudTextField @bind-Value="_search"
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      Class="mt-0"
                      IconSize="MudBlazor.Size.Medium"
                      Placeholder="Search" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Type</MudTh>
        <MudTh>Text</MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate Context="inscription">
        <MudTd DataLabel="Type">@inscription.InscriptionTypeName</MudTd>
        <MudTd DataLabel="Text">@inscription.Text</MudTd>
        <MudTd DataLabel="">
            <MudTooltip Text="Add">
                <MudFab Color="MudBlazor.Color.Primary"
                        Icon="@Icons.Outlined.AddCircleOutline"
                        OnClick="@(_ => Add(inscription))" />
            </MudTooltip>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
