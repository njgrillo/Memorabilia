<Condition Evaluation="@(!TooltipText.IsNullOrEmpty())">
    <Match>
        <MudTooltip Text="@TooltipText">
            <MudFab Color="Color"
                    OnClick="@(_ => NavigationManager.NavigateTo(NavigationPath))"
                    Size="Size"
                    StartIcon="@StartIcon" />
        </MudTooltip>
    </Match>
    <NotMatch>
        <MudFab Color="Color"
                OnClick="@(_ => NavigationManager.NavigateTo(NavigationPath))"
                Size="Size"
                StartIcon="@StartIcon" />
    </NotMatch>
</Condition>


