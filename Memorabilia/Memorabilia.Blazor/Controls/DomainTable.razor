<DivPad2>
    <Content>
        <MudTable Bordered="false"
                  Dense="false"
                  Filter="new Func<DomainViewModel,bool>(FilterFunc1)"
                  Hover="true"
                  Items="@DomainEntities.OrderBy(item => item.Name)"
                  Striped="true">
            <ToolBarContent>
                <MudText Typo="Typo.h6">@DomainItemTitle</MudText>
                <MudSpacer />
                <TextField Adornment="Adornment.Start" 
                           AdornmentIcon="@Icons.Material.Filled.Search"
                           Class="mt-0"
                           IconSize="MudBlazor.Size.Medium"
                           Label="Note"
                           Lines="10"
                           PlaceHolder="Search"
                           SelectedText="@_search"
                           SelectedTextChanged="@((p) => _search = p)" />
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Name</MudTh>
                <MudTh>Abbreviation</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="Abbreviation">@context.Abbreviation</MudTd>
                <MudTd DataLabel="">
                    <MudTooltip Text="Edit">
                        <MudFab Color="MudBlazor.Color.Primary"
                                Icon="@Icons.Outlined.ModeEditOutline"
                                OnClick="@(_ => NavigationManager.NavigateTo($"{RoutePrefix}/{EditModeType.Update.Name}/{context.Id}"))" />
                    </MudTooltip>
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Outlined.DeleteOutline"
                                OnClick="@(_ => ShowDeleteConfirm(context.Id))" />
                    </MudTooltip>
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </Content>
</DivPad2>
<DivRowCol12Center>
    <Content>
        <MudTooltip Text="@AddText">
            <MudFab Color="MudBlazor.Color.Primary"
                    Icon="@Icons.Outlined.AddCircleOutline"
                    OnClick="@(_ => NavigationManager.NavigateTo(@AddRoute))" />
        </MudTooltip>
    </Content>
</DivRowCol12Center>
<PageFooter NavigationPath="Admin/EditDomainItems" />