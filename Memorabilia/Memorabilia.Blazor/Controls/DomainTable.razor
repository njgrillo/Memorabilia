<DivPad2>
    <MudTable Bordered="false"
              Dense="false"
              Filter="new Func<DomainModel,bool>(FilterFunc1)"
              Hover="true"
              Items="@DomainEntities.OrderBy(item => item.Name)"
              Striped="true">
        <ToolBarContent>
            <ToolbarTitle Text="@DomainItemTitle" />
            <MudSpacer />
            <ToolbarSearchField SearchText="@_search"
                                SearchTextChanged="@((p) => _search = p)" />
        </ToolBarContent>
        <HeaderContent>
            <MudTh>Name</MudTh>
            <MudTh>Abbreviation</MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Name">@context.Name</MudTd>
            <MudTd DataLabel="Abbreviation">@context.Abbreviation</MudTd>
            <MudTd DataLabel="">
                <EditGridButton OnEdit="@(_ => NavigationManager.NavigateTo($"{RoutePrefix}/{EditModeType.Update.Name}/{context.Id}"))" />
                <DeleteGridButton ConfirmMessage="@DeleteText" 
                                  OnDelete="@(_ => Delete(context.Id))"
                                  ShowConfirm="true" />
            </MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
</DivPad2>
<DivRowCol12Center>
    <AddMudFab OnAdd="@(_ => NavigationManager.NavigateTo(AddRoute))" 
               TooltipText="@AddText" />
</DivRowCol12Center>
<PageFooter NavigationPath="Admin/EditDomainItems" />