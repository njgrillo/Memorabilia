<DivPad2>
    <MudTable Bordered="false"
              Dense="false"
              Filter="new Func<DomainModel,bool>(FilterFunc1)"
              Hover="true"
              Items="@DomainEntities.OrderBy(item => item.Name)"
              Striped="true">
        <ToolBarContent>
            <ToolbarTitle Text="@DomainItemTitle" />
            <MudSpacer />
            <MudTextField @bind-Value="_search"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search"
                          Class="mt-0"
                          IconSize="MudBlazor.Size.Medium"
                          Placeholder="Search" />
        </ToolBarContent>
        <HeaderContent>
            <MudTh>Name</MudTh>
            <MudTh>Abbreviation</MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Name">@context.Name</MudTd>
            <MudTd DataLabel="Abbreviation">@context.Abbreviation</MudTd>
            <MudTd DataLabel="">
                <MudTooltip Text="Edit">
                    <MudFab Color="MudBlazor.Color.Primary"
                            StartIcon="@Icons.Material.Outlined.ModeEditOutline"
                            OnClick="@(_ => NavigationManager.NavigateTo($"{RoutePrefix}/{EditModeType.Update.Name}/{context.Id}"))" />
                </MudTooltip>
                <DeleteGridButton ConfirmMessage="@DeleteText" 
                                  OnDelete="@(_ => Delete(context.Id))"
                                  ShowConfirm="true" />
            </MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
</DivPad2>
<DivRowCol12Center>
    <MudTooltip Text="@AddText">
        <MudFab Color="MudBlazor.Color.Primary"
                StartIcon="@Icons.Material.Outlined.AddCircleOutline"
                OnClick="@(_ => NavigationManager.NavigateTo(@AddRoute))" />
    </MudTooltip>
</DivRowCol12Center>
<PageFooter NavigationPath="Admin/EditDomainItems" />