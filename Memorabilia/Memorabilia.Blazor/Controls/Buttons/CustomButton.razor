<Condition Evaluation="Visible">
    <Match>
        <Condition Evaluation="@(!TooltipText.IsNullOrEmpty())">
            <Match>
                <MudTooltip Text="@TooltipText">
                    <MudButton ButtonType="ButtonType"
                               Color="Color"
                               OnClick="OnClick"
                               Size="Size"
                               StartIcon="@StartIcon"
                               Variant="Variant">
                        @Text
                    </MudButton>
                </MudTooltip>
            </Match>
            <NotMatch>
                <MudButton ButtonType="ButtonType"
                           Color="Color"
                           OnClick="OnClick"
                           Size="Size"
                           StartIcon="@StartIcon"
                           Variant="Variant">
                    @Text
                </MudButton>
            </NotMatch>
        </Condition>        
    </Match>
</Condition>


