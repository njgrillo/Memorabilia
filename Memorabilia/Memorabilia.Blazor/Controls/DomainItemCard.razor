<DivPad5>
    <Content>
        <MudCard>
            <MudCardMedia Height="300" Image="@ImagePath" />
            <MudCardContent>
                <MudText Typo="Typo.h5">@Title</MudText>
                <MudText Typo="Typo.body2">@Description</MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton @onclick="OnClick" 
                           Color="MudBlazor.Color.Primary" 
                           Variant="Variant.Text">View</MudButton>
            </MudCardActions>
        </MudCard>
    </Content>
</DivPad5>
