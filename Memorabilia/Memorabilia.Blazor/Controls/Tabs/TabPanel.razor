<HiddenControl Visible="Visible">
    <HiddenControl Visible="DisplayBadge">
        <MudTabPanel BadgeColor="BadgeColor"
                     BadgeData="BadgeData"
                     Text="@Text">
            @ChildContent
        </MudTabPanel>
    </HiddenControl>
    <HiddenControl Visible="@(!DisplayBadge)">
        <MudTabPanel Text="@Text">
            @ChildContent
        </MudTabPanel>
    </HiddenControl>
</HiddenControl>
