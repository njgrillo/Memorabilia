<Condition Evaluation="Visible">
    <Match>
        <Condition Evaluation="DisplayBadge">
            <Match>
                <MudTabPanel BadgeColor="BadgeColor"
                             BadgeData="BadgeData"
                             Text="@Text">
                    @ChildContent
                </MudTabPanel>
            </Match>
            <NotMatch>
                <MudTabPanel Text="@Text">
                    @ChildContent
                </MudTabPanel>
            </NotMatch>
        </Condition>        
    </Match>
</Condition>
