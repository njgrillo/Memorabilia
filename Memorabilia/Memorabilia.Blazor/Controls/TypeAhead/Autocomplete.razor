@inherits CommandQuery

@typeparam TItem

<HiddenControl Visible="Visible">
    <Skeleton Height="50px"
              Type="SkeletonType.Rectangle"
              Visible="DisplaySkeleton" />
    <HiddenControl Visible="@(!DisplaySkeleton)">
        <MudAutocomplete AdornmentColor="AdornmentColor"
                         AdornmentIcon="@AdornmentIcon"
                         Class="@Class"
                         Disabled="Disabled"
                         Label="@Label"
                         HelperText="@HelperText"
                         Placeholder="@Placeholder"
                         ResetValueOnEmptyText="ResetValueOnEmptyText"
                         SearchFunc="Search"
                         T="TItem"
                         Text="@GetDisplayText(SelectedValue)"
                         Value="SelectedValue"
                         ValueChanged="SelectionChanged"
                         Variant="Variant">
            <ItemSelectedTemplate Context="item">
                @GetItemSelectedText(item)
            </ItemSelectedTemplate>
            <ItemTemplate Context="item">
                @GetItemText(item)
            </ItemTemplate>
            <MoreItemsTemplate>
                <MudText Align="Align.Center"
                         Class="px-4 py-1">
                    @MoreItemsText
                </MudText>
            </MoreItemsTemplate>
        </MudAutocomplete>
    </HiddenControl>
</HiddenControl>