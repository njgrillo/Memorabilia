@inherits CommandQuery

@typeparam TItem

<Condition Evaluation="DisplaySkeleton">
    <Match>
        <MudSkeleton Height="50px"
                     SkeletonType="SkeletonType.Rectangle" />
    </Match>
    <NotMatch>
        <MudAutocomplete AdornmentColor="@AdornmentColor"
                         AdornmentIcon="@AdornmentIcon"
                         Disabled="@Disabled"
                         Label="@Label"
                         HelperText="@HelperText"
                         Placeholder="@Placeholder"
                         ResetValueOnEmptyText="@ResetValueOnEmptyText"
                         SearchFunc="@Search"
                         T="TItem"
                         Text="@GetDisplayText(SelectedValue)"
                         Value="SelectedValue"
                         ValueChanged="SelectionChanged"
                         Variant="@Variant">
            <ItemSelectedTemplate Context="item">
                @GetItemSelectedText(item)
            </ItemSelectedTemplate>
            <ItemTemplate Context="item">
                @GetItemText(item)
            </ItemTemplate>
        </MudAutocomplete>
    </NotMatch>
</Condition>