<MudCard>
    <MudCardMedia Height="300" 
                  Image="@(ImageService.GetImageData(ImageRootType, ImageFileName))" />
    <MudCardContent>
        <MudText Typo="Typo.h5">@ImageType.Name</MudText>
    </MudCardContent>
    <MudCardActions>
        <DivHidden Hidden="@(!HasPrimary || IsPrimary)">
            <Content>
                <CustomButton ButtonType="ButtonType.Button" 
                              OnClick="@(_ => SetPrimary(ImageFileName))"
                              Text="Make Primary"
                              Variant="Variant.Text" />
            </Content>
        </DivHidden>
        <DivHidden Hidden="@(!CanRemove)">
            <Content>
                <CustomButton OnClick="@(_ => Remove(ImageFileName))"
                              Text="Remove"
                              Variant="Variant.Text" />
            </Content>
        </DivHidden>
    </MudCardActions>
</MudCard>
