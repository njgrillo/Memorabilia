<MudDialog Style="max-height:85vh;overflow-y:auto;">
    <DialogContent>
        <Condition Evaluation="@_loggedIn">
            <Match>
                <SubscribeComponent />
            </Match>
            <NotMatch>
                <div style="margin-left:2%;margin-top:2%;margin-bottom:2%;">
                    <h1>Sorry</h1>
                    <p>You're not authorized to reach this page. You need to log in or register.</p>
                    <LoginRegisterControl />
                </div>
            </NotMatch>
        </Condition>        
    </DialogContent>
    <DialogActions>
        <CancelButton OnClick="Cancel" />
    </DialogActions>
</MudDialog>
