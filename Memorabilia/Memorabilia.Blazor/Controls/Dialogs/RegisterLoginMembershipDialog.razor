<MudDialog Style="@($"{Style.Dialog}{Style.VertificalScrollbar}")">
    <DialogContent>
        <HiddenControl Visible="_loggedIn">
            <SubscribeComponent />
        </HiddenControl>
        <Div Style="@Style.MarginPad2"
             Visible="@(!_loggedIn)">
            <Text Typography="Typo.h6">
                Sorry
            </Text>
            <Text Typography="Typo.body1">
                You're not authorized to reach this page. You need to log in or register.
            </Text>
            <LoginRegisterControl />
        </Div>       
    </DialogContent>
    <DialogActions>
        <CancelButton OnClick="Cancel" />
    </DialogActions>
</MudDialog>
