<div style="border: 1px solid black; margin-top: 2%; margin-bottom: 2%; margin-left: 2%; margin-right: 2%;">
    <div class="row" style="margin-top: 5%; margin-bottom: 5%; margin-left: 5%; margin-right: 5%;">
        <div class="col-lg-12" style="text-align: center;">
            <h3>@DashboardItem.Name</h3>
        </div>
    </div>
    <div class="row" style="margin-top: 1%; margin-bottom: 1%; margin-left: 1%; margin-right: 1%;">
        <div class="col-lg-12" style="text-align: center;">
            <PrettyBlazor.Condition Evaluation="DashboardItem.DashboardChartType == DashboardChartType.Donut">
                <Match>
                    @*<Memorabilia.Blazor.Controls.Charts.DonutChart InputData="@Data"  
                                InputLabels="@Labels" />*@
                </Match>
            </PrettyBlazor.Condition>
            <PrettyBlazor.Condition Evaluation="DashboardItem?.DashboardChartType == DashboardChartType.Pie">
                <Match>
                    @*<Memorabilia.Blazor.Controls.Charts.PieChart InputData="Data"
                              InputLabels="@Labels" />*@
                </Match>
            </PrettyBlazor.Condition>            
        </div>
    </div>
    <div class="row" style="margin-top: 1%; margin-bottom: 1%; margin-left: 1%; margin-right: 1%;">
        <div class="col-lg-12" style="text-align: center;">
            <p>@DashboardItem?.Description</p>
        </div>
    </div>
</div>
