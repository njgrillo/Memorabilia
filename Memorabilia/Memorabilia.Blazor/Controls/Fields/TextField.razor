@inherits Field

<HiddenControl Visible="Visible">
    <Skeleton Height="50px"
              Type="SkeletonType.Rectangle"
              Visible="DisplaySkeleton" />
    <HiddenControl Visible="@(!DisplaySkeleton)">
        <MudTextField @onblur="@((p) => OnBlur.InvokeAsync(p))"
                      @onfocus="@((p) => OnFocus.InvokeAsync(p))"
                      Disabled="Disabled"
                      HelperText="@HelperText"
                      id="@Id"
                      InputType="InputType"
                      Label="@Label"
                      Lines="Lines"
                      MaxLength="MaxLength"
                      Placeholder="@PlaceHolder"
                      T="string"
                      Text="@SelectedText"
                      TextChanged="SelectedTextChanged"
                      Variant="Variant" />
    </HiddenControl>
</HiddenControl>




