@typeparam TType

@inherits Field

<HiddenControl Visible="Visible">
    <Condition Evaluation="DisplaySkeleton">
        <Match>
            <MudSkeleton Height="50px"
                         SkeletonType="SkeletonType.Rectangle" />
        </Match>
        <NotMatch>
            <MudNumericField Disabled="@Disabled"
                             HideSpinButtons="@HideSpinButtons"
                             Label="@Label"
                             Max="@Maximum"
                             T="TType"
                             Value="@Value"
                             ValueChanged="@ValueChanged"
                             Variant="@Variant" />
        </NotMatch>
    </Condition>
</HiddenControl>

