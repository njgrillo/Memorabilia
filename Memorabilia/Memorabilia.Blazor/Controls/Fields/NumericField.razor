@typeparam TType

@inherits Field

<HiddenControl Visible="Visible">
    <Skeleton Height="50px"
              Type="SkeletonType.Rectangle"
              Visible="DisplaySkeleton" />
    <HiddenControl Visible="@(!DisplaySkeleton)">
        <MudNumericField Disabled="Disabled"
                         HideSpinButtons="HideSpinButtons"
                         Label="@Label"
                         Max="Maximum"
                         T="TType"
                         Value="Value"
                         ValueChanged="ValueChanged"
                         Variant="Variant" />
    </HiddenControl>
</HiddenControl>

