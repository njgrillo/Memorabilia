<DivRowFormGroup>
    <MudStack Class="col-12"
              Row="true"
              Style="margin-bottom:1%;">
        <FranchiseAutoComplete Disabled="@(EditMode == EditModeType.Update)"
                               SelectedValue="Model.Franchise"
                               SelectionChanged="(p) => Model.Franchise = p"
                               Sports="Sports" />
        <NullableIntField Label="Number"
                          Value="Model.PlayerNumber"
                          ValueChanged="@((p) => Model.PlayerNumber = p)" />
        <Condition Evaluation="@(EditMode == EditModeType.Update)">
            <Match>
                <UpdateMudFab OnUpdate="Update" />
            </Match>
            <NotMatch>
                <AddMudFab OnAdd="Add" />
            </NotMatch>
        </Condition>
    </MudStack>
</DivRowFormGroup>
<Div Class="row">
    <Div Class="col-12">
         <MudTable Bordered="false"
                   Dense="false" 
                   Hover="true"
                   Items="@RetiredNumbers.Where(retiredNumber => !retiredNumber.IsDeleted).ToList()"    
                   Striped="true">
            <HeaderContent>
                <MudTh>Franchise</MudTh>
                <MudTh>Number</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Franchise">@context.FranchiseName</MudTd>
                <MudTd DataLabel="Number">@context.PlayerNumber</MudTd>
                <MudTd DataLabel="">
                    <MudTooltip Text="Edit">
                        <MudFab Color="MudBlazor.Color.Primary"                                
                                Icon="@Icons.Material.Outlined.ModeEditOutline"
                                OnClick="@(_ => Edit(context))" />
                    </MudTooltip> 
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Material.Outlined.DeleteOutline"
                                OnClick="@(_ => context.IsDeleted = true)" />
                    </MudTooltip>  
                </MudTd>
            </RowTemplate>
        </MudTable>
    </Div>
</Div>

