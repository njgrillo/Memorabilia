<Div Class="row">
    <Div Class="col-3">
        <InternationalHallOfFameTypeDropDown Disabled="@(!_canEditInternationalHallOfFameType)"
                                             Label="Type" 
                                             SelectedValue="Model.InternationalHallOfFameTypeId"
                                             SelectionChanged="(p) => Model.InternationalHallOfFameTypeId = p" />
    </Div>
    <Div Class="col-3">
        <NullableIntField Label="Induction Year"
                          Value="Model.Year"
                          ValueChanged="@((p) => Model.Year = p)" />
    </Div>
</Div>
<DivLeftAlign>
    <Div Hidden="@(!_canAdd)">
        <AddButton OnClick="Add" />
    </Div>
    <Div Hidden="@(!_canUpdate)">
        <UpdateButton OnClick="Update" />
    </Div>
</DivLeftAlign>
<br />
<Div Class="row">
    <Div Class="col-6">
         <MudTable Bordered="false"
                   Dense="false" 
                   Hover="true"
                   Items="@InternationalHallOfFames.Where(hof => !hof.IsDeleted).ToList()"    
                   Striped="true">
            <HeaderContent>
                <MudTh>Type</MudTh>
                <MudTh>Induction Year</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Type">@context.InternationalHallOfFameTypeName</MudTd>
                <MudTd DataLabel="Induction Year">@context.Year</MudTd>
                <MudTd DataLabel="">
                    <MudTooltip Text="Edit">
                        <MudFab Color="MudBlazor.Color.Primary"                                
                                Icon="@Icons.Material.Outlined.ModeEditOutline"
                                OnClick="@(_ => Edit(context))" />
                    </MudTooltip> 
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Material.Outlined.DeleteOutline"
                                OnClick="@(_ => context.IsDeleted = true)" />
                    </MudTooltip>  
                </MudTd>
            </RowTemplate>
        </MudTable>
    </Div>
</Div>

