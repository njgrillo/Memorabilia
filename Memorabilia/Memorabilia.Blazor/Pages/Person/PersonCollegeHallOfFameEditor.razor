<DivRowFormGroup>
    <MudStack Class="col-12"
              Row="true"
              Style="margin-bottom:1%;">
        <CollegeAutoComplete Disabled="@(EditMode == EditModeType.Update)"
                             ResetValueOnEmptyText="false"
                             SelectedValue="Model.College"
                             SelectionChanged="(p) => Model.College = p" />
        <SportAutoComplete SelectedValue="Model.Sport"
                           SelectionChanged="(p) => Model.Sport = p" />
        <NullableIntField Label="Induction Year"
                          Value="Model.Year"
                          ValueChanged="@((p) => Model.Year = p)" />
        <AddUpdateMudFab EditMode="EditMode"
                         OnAdd="Add"
                         OnUpdate="Update" />
    </MudStack>
</DivRowFormGroup>
<Div Class="row">
    <Div Class="col-12">
        <MudTable Bordered="false"
                  Dense="false"
                  Hover="true"
                  Items="@CollegeHallOfFames.Where(hof => !hof.IsDeleted).ToList()"
                  Striped="true">
            <HeaderContent>
                <MudTh>College</MudTh>
                <MudTh>Sport</MudTh>
                <MudTh>Year</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="College">@context.CollegeName</MudTd>
                <MudTd DataLabel="Sport">@context.SportName</MudTd>
                <MudTd DataLabel="Year">@context.Year</MudTd>
                <MudTd DataLabel="">
                    <MudTooltip Text="Edit">
                        <MudFab Color="MudBlazor.Color.Primary"
                                StartIcon="@Icons.Material.Outlined.ModeEditOutline"
                                OnClick="@(_ => Edit(context))" />
                    </MudTooltip>
                    <DeleteGridButton OnDelete="@(_ => context.IsDeleted = true)" />
                </MudTd>
            </RowTemplate>
        </MudTable>
    </Div>
</Div>

