<DivRowFormGroup>
    <MudStack Class="col-10"
              Row="true"
              Style="margin-bottom:1%;">
        <PositionAutoComplete SelectedValue="Model.Position"
                              SelectionChanged="(p) => Model.Position = p"
                              Sports="Sports" />
        <Switch Checked="@(Model.PositionType == PositionType.Primary)"
                CheckedChanged="OnPositionTypeChange"
                Label="Is Primary?" />
        <AddMudFab OnAdd="Add" />
    </MudStack>
</DivRowFormGroup>
<DivRowCol12>
    <MudTable Bordered="false"
              Dense="false"
              Hover="true"
              Items="@Positions.Where(position => !position.IsDeleted).OrderBy(x => x.PositionTypeName).ThenBy(position => position.PositionName).ToList()"
              Striped="true">
        <HeaderContent>
            <MudTh>Position</MudTh>
            <MudTh>Type</MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Position">@context.PositionName</MudTd>
            <MudTd DataLabel="Type">@context.PositionTypeName</MudTd>
            <MudTd DataLabel="">
                <MudTooltip Text="Delete">
                    <MudFab Color="MudBlazor.Color.Secondary"
                            StartIcon="@Icons.Material.Outlined.DeleteOutline"
                            OnClick="@(_ => Delete(context))" />
                </MudTooltip>
            </MudTd>
        </RowTemplate>
    </MudTable>
</DivRowCol12>

