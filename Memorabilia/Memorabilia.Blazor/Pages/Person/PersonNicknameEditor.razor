<DivRowFormGroup>
    <RowStack Class="@DivClass.Column12"
              Style="@Style.MarginBottomPad1">
        <TextField Label="Nickname"
                   MaxLength="100"
                   SelectedText="@Model.Nickname"
                   SelectedTextChanged="@((p) => Model.Nickname = p)" />
        <AddFab OnAdd="Add" />
    </RowStack>
</DivRowFormGroup>
<DivRowCol12>
    <MudTable Bordered="false"
              Dense="false"
              Hover="true"
              Items="_nicknames"
              Striped="true">
        <HeaderContent>
            <MudTh>Nickname</MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Nickname">@context.Nickname</MudTd>
            <TableDataRightAligned>
                <DeleteGridButton OnDelete="@(_ => context.Delete())" />
            </TableDataRightAligned>
        </RowTemplate>
    </MudTable>
</DivRowCol12>

