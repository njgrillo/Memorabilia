<DivRowFormGroup>
    <MudStack Class="col-10"
              Row="true"
              Style="margin-bottom:1%;">
        <OccupationAutoComplete SelectedValue="Model.Occupation"
                                SelectionChanged="(p) => Model.Occupation = p" />
        <Switch Checked="@(Model.OccupationType == OccupationType.Primary)"
                CheckedChanged="OnOccupationTypeChange"
                Label="Is Primary?" />
        <AddUpdateMudFab EditMode="EditMode"
                         OnAdd="Add"
                         OnUpdate="Update" />
    </MudStack>
</DivRowFormGroup>
<DivRowCol12>
    <MudTable Bordered="false"
              Dense="false"
              Hover="true"
              Items="@Occupations.Where(occupation => !occupation.IsDeleted).OrderBy(x => x.OccupationType.Id).ThenBy(x => x.OccupationName).ToList()"
              Striped="true">
        <HeaderContent>
            <MudTh>Occupation</MudTh>
            <MudTh>Occupation Type</MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Occupation">@context.OccupationName</MudTd>
            <MudTd DataLabel="Occupation Type">@context.OccupationTypeName</MudTd>
            <MudTd DataLabel="">
                <MudTooltip Text="Edit">
                    <MudFab Color="MudBlazor.Color.Primary"
                            StartIcon="@Icons.Material.Outlined.ModeEditOutline"
                            OnClick="@(_ => Edit(context))" />
                </MudTooltip>
                <MudTooltip Text="Delete">
                    <MudFab Color="MudBlazor.Color.Secondary"
                            StartIcon="@Icons.Material.Outlined.DeleteOutline"
                            OnClick="@(_ => Delete(context))" />
                </MudTooltip>
            </MudTd>
        </RowTemplate>
    </MudTable>
</DivRowCol12>
