<DivRowFormGroup>
    <RowStack Class="@DivClass.Column12"
              Style="@Style.MarginBottomPad1">
        <OccupationAutoComplete SelectedValue="Model.Occupation"
                                SelectionChanged="(p) => Model.Occupation = p" />
        <Switch Checked="@(Model.OccupationType == OccupationType.Primary)"
                CheckedChanged="OnOccupationTypeChange"
                Label="Is Primary?" />
        <AddUpdateFab EditMode="EditMode"
                      OnAdd="Add"
                      OnUpdate="Update" />
    </RowStack>
</DivRowFormGroup>
<DivRowCol12>
    <MudTable Bordered="false"
              Dense="false"
              Hover="true"
              Items="Occupations.Where(occupation => !occupation.IsDeleted).OrderBy(x => x.OccupationType.Id).ThenBy(x => x.OccupationName).ToList()"
              Striped="true">
        <HeaderContent>
            <MudTh>Occupation</MudTh>
            <MudTh>Occupation Type</MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Occupation">@context.OccupationName</MudTd>
            <MudTd DataLabel="Occupation Type">@context.OccupationTypeName</MudTd>
            <TableDataRightAligned>
                <EditGridButton OnEdit="@(_ => Edit(context))" />
                <DeleteGridButton OnDelete="@(_ => context.IsDeleted = true)" />
            </TableDataRightAligned>
        </RowTemplate>
    </MudTable>
</DivRowCol12>
