<RowStack Class="@Class" 
          Style="@Style">
    <PersonDomainAutoComplete IsCulturalSearch="true"
                              People="People"
                              SelectedValue="Model"
                              SelectionChanged="(p) => Model = p"
                              UseProvidedPeople="UseProvidedPeople" />
    <IconButton Icon="@Icons.Material.Filled.Person"
                OnClick="ShowPersonProfile"
                TooltipText="View Profile"
                Visible="@((SelectedPerson?.Id ?? 0) > 0)" />
</RowStack>
