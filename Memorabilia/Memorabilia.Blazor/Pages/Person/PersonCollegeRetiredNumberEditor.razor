<DivRowFormGroup>
    <MudStack Class="col-12"
              Row="true"
              Style="margin-bottom:1%;">
        <CollegeAutoComplete Colleges="Colleges"
                             Disabled="@(EditMode == EditModeType.Update)"
                             SelectedValue="Model.College"
                             SelectionChanged="(p) => Model.College = p" />
        <NullableIntField Label="Number"
                          Value="Model.PlayerNumber"
                          ValueChanged="@((p) => Model.PlayerNumber = p)" />
        <AddUpdateMudFab EditMode="EditMode"
                         OnAdd="Add"
                         OnUpdate="Update" />
    </MudStack>
</DivRowFormGroup>
<Div Class="row">
    <Div Class="col-12">
        <MudTable Bordered="false"
                  Dense="false"
                  Hover="true"
                  Items="@CollegeRetiredNumbers.Where(retiredNumber => !retiredNumber.IsDeleted).ToList()"
                  Striped="true">
            <HeaderContent>
                <MudTh>College</MudTh>
                <MudTh>Number</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="College">@context.CollegeName</MudTd>
                <MudTd DataLabel="Number">@context.PlayerNumber</MudTd>
                <MudTd DataLabel="">
                    <MudTooltip Text="Edit">
                        <MudFab Color="MudBlazor.Color.Primary"
                                Icon="@Icons.Material.Outlined.ModeEditOutline"
                                OnClick="@(_ => Edit(context))" />
                    </MudTooltip>
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Material.Outlined.DeleteOutline"
                                OnClick="@(_ => context.IsDeleted = true)" />
                    </MudTooltip>
                </MudTd>
            </RowTemplate>
        </MudTable>
    </Div>
</Div>

