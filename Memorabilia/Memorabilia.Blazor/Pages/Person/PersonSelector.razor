<Condition Evaluation="CanToggle">
    <Match>
        <DivRowCol3>
            <Content>
                <MudSwitch Checked="@_hasPeople"
                           CheckedChanged="PersonCheckboxClicked"
                           Color="MudBlazor.Color.Success"
                           Label="@_itemTypeNameLabel"
                           T="bool" />
            </Content>
        </DivRowCol3>
    </Match>
</Condition>
<DivHidden Hidden="@(!_displayPeople)">
    <Content>
        <Condition Evaluation="CanFilterBySport">
            <Match>
                <DivRowCol3 LeftPadding="10">
                    <Content>
                        <MudSwitch Checked="@_filterPeople"
                                   CheckedChanged="PersonFilterCheckboxClicked"
                                   Color="MudBlazor.Color.Success"
                                   Label="@_itemTypeNameFilterLabel"
                                   T="bool" />
                    </Content>
                </DivRowCol3>
            </Match>
        </Condition>    
        <DivRowCol6>
            <Content>
                <div class="d-flex justify-context-between">
                    <PersonAutoComplete Disabled="Disabled"
                                        IsCulturalSearch="true"
                                        SelectedValue="Model"
                                        SelectionChanged="(p) => Model = p"
                                        Sport="Sport" />
                    <Condition Evaluation="@_hasPeople">
                        <Match>
                            <MudTooltip Text="View Profile">
                                <MudIconButton Icon="@Icons.Material.Filled.Person"
                                               OnClick="ShowPersonProfile" />
                            </MudTooltip>
                        </Match>
                    </Condition>                    
                </div>                             
                <br />   
            </Content>
        </DivRowCol6>
    </Content>
</DivHidden>