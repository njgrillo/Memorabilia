<DivRowFormGroup>
    <RowStack Class="@DivClass.Column12"
              Style="@Style.MarginBottomPad1">
        <SportAutoComplete SelectedValue="Model.Sport"
                           SelectionChanged="(p) => Model.Sport = p" />
        <Switch Checked="Model.IsPrimary"
                CheckedChanged="(p) => Model.IsPrimary = p"
                Label="Is Primary?" />
        <AddFab OnAdd="Add" />
    </RowStack>
</DivRowFormGroup>
<DivRowCol12>
    <MudTable Bordered="false"
              Dense="false"
              Hover="true"
              Items="Sports.Where(sport => !sport.IsDeleted).OrderBy(sport => sport.IsPrimary).ThenBy(sport => sport.SportName).ToList()"
              Striped="true">
        <HeaderContent>
            <MudTh>Sport</MudTh>
            <MudTh>Type</MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Sport">@context.SportName</MudTd>
            <MudTd DataLabel="Type">@context.TypeName</MudTd>
            <TableDataRightAligned>
                <DeleteGridButton OnDelete="@(_ => context.IsDeleted = true)" />
            </TableDataRightAligned>
        </RowTemplate>
    </MudTable>
</DivRowCol12>
