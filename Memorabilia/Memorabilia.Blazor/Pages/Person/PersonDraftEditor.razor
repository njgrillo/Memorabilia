<Div Class="row">
    <Div Class="col-3">
        <FranchiseAutoComplete Disabled="@(!_canEditFranchise)"
                               SelectedValue="Model.Franchise"
                               SelectionChanged="(p) => Model.Franchise = p"
                               Sports="Model.Sports" />
    </Div>
</Div>
<Div Class="row">
    <Div Class="col-3">
        <NullableIntField Label="Year"
                          Value="Model.Year"
                          ValueChanged="@((p) => Model.Year = p)" />
    </Div>
    <Div Class="col-3">
        <NullableIntField Label="Round"
                          Value="Model.Round"
                          ValueChanged="@((p) => Model.Round = p)" />
    </Div>
    <Div Class="col-3">
        <NullableIntField Label="Pick"
                          Value="Model.Pick"
                          ValueChanged="OnPickChange" />
    </Div>
    <Div Class="col-3">
        <NullableIntField Label="Overall"
                          Value="Model.Overall"
                          ValueChanged="@((p) => Model.Overall = p)" />
    </Div>
</Div>
<DivLeftAlign>
    <Div Hidden="@(!_canAdd)">
        <AddButton OnClick="Add" />
    </Div>
    <Div Hidden="@(!_canUpdate)">
        <UpdateButton OnClick="Update" />
    </Div>
</DivLeftAlign>
<br />
<Div Class="row">
    <Div Class="col-6">
         <MudTable Bordered="false"
                   Dense="false" 
                   Hover="true"
                   Items="@Drafts.Where(draft => !draft.IsDeleted).ToList()"    
                   Striped="true">
            <HeaderContent>
                <MudTh>Franchise</MudTh>
                <MudTh>Year</MudTh>
                <MudTh>Round</MudTh>
                <MudTh>Pick</MudTh>
                <MudTh>Overall</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Franchise">@context.FranchiseName</MudTd>
                <MudTd DataLabel="Year">@context.Year</MudTd>
                <MudTd DataLabel="Round">@context.Round</MudTd>
                <MudTd DataLabel="Pick">@context.Pick</MudTd>
                <MudTd DataLabel="Overall">@context.Overall</MudTd>
                <MudTd DataLabel="">
                    <MudTooltip Text="Edit">
                        <MudFab Color="MudBlazor.Color.Primary"                                
                                Icon="@Icons.Material.Outlined.ModeEditOutline"
                                OnClick="@(_ => Edit(context))" />
                    </MudTooltip> 
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Material.Outlined.DeleteOutline"
                                OnClick="@(_ => context.IsDeleted = true)" />
                    </MudTooltip>  
                </MudTd>
            </RowTemplate>
        </MudTable>
    </Div>
</Div>


