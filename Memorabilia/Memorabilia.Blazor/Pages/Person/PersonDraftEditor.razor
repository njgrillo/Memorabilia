<DivRowFormGroup>
    <Div Class="@DivClass.Column6">
        <FranchiseAutoComplete Disabled="@(EditMode == EditModeType.Update)"
                               SelectedValue="Model.Franchise"
                               SelectionChanged="(p) => Model.Franchise = p"
                               Sports="Model.Sports" />
    </Div>
</DivRowFormGroup>
<DivRowFormGroup>
    <RowStack Class="@DivClass.Column6"
              Style="@Style.MarginBottomPad1">        
        <NullableIntField Label="Year"
                          Value="Model.Year"
                          ValueChanged="@((p) => Model.Year = p)" />
        <NullableIntField Label="Round"
                          Value="Model.Round"
                          ValueChanged="@((p) => Model.Round = p)" />
        <NullableIntField Label="Pick"
                          Value="Model.Pick"
                          ValueChanged="OnPickChange" />
        <NullableIntField Label="Overall"
                          Value="Model.Overall"
                          ValueChanged="@((p) => Model.Overall = p)" />
        <AddUpdateFab EditMode="EditMode"
                      OnAdd="Add"
                      OnUpdate="Update" />
    </RowStack>
</DivRowFormGroup>
<Div Class="@DivClass.Row">
    <Div Class="@DivClass.Column6">
         <MudTable Bordered="false"
                   Dense="false" 
                   Hover="true"
                   Items="@Drafts.Where(draft => !draft.IsDeleted).ToList()"    
                   Striped="true">
            <HeaderContent>
                <MudTh>Franchise</MudTh>
                <MudTh>Year</MudTh>
                <MudTh>Round</MudTh>
                <MudTh>Pick</MudTh>
                <MudTh>Overall</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Franchise">@context.FranchiseName</MudTd>
                <MudTd DataLabel="Year">@context.Year</MudTd>
                <MudTd DataLabel="Round">@context.Round</MudTd>
                <MudTd DataLabel="Pick">@context.Pick</MudTd>
                <MudTd DataLabel="Overall">@context.Overall</MudTd>
                <MudTd DataLabel="">
                    <EditGridButton OnEdit="@(_ => Edit(context))" />
                    <DeleteGridButton OnDelete="@(_ => context.IsDeleted = true)" />
                </MudTd>
            </RowTemplate>
        </MudTable>
    </Div>
</Div>


