<MudTable Bordered="false"
          Dense="false"
          Hover="true"
          Items="RecentOccupations"
          Striped="true">
    <ToolBarContent>
        <ToolbarTitle Text="Use Recent Template" />
    </ToolBarContent>
    <HeaderContent>        
        <MudTh>Occupations</MudTh>
        <MudTh>Positions</MudTh>
        <MudTh>Sports</MudTh>     
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>        
        <MudTd DataLabel="Occupations">@context.OccupationsDisplayText</MudTd>
        <MudTd DataLabel="Positions">@context.PositionsDisplayText</MudTd>
        <MudTd DataLabel="Sports">@context.SportsDisplayText</MudTd>
        <TableDataRightAligned>
            <Fab Color="MudBlazor.Color.Primary"
                 OnClick="@(_ => Select(context))"
                 StartIcon="@Icons.Material.Outlined.AddCircleOutline"
                 TooltipText="Select" />
        </TableDataRightAligned>
    </RowTemplate>
</MudTable>
