<DivPad2>
    <TabControl>
        <TabPanel Text="Inbox">
            <LeftRightSection LeftStyle="width:40%;"
                              RightStyle="width:10%;">
                <Left>
                    <RowStack>
                        <MudTextField @bind-Value="_inboxSearchText"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.Search"
                                      Class="mt-0"
                                      IconSize="MudBlazor.Size.Medium"
                                      Placeholder="Search" />
                        <CustomButton ButtonType="MudBlazor.ButtonType.Button"
                                      OnClick="SearchInbox"
                                      Size="MudBlazor.Size.Small"
                                      Text="Search" />
                    </RowStack>
                </Left>
                <Right>
                    <CustomButton ButtonType="MudBlazor.ButtonType.Button"
                                  OnClick="Compose"
                                  Size="MudBlazor.Size.Small"
                                  Text="Compose" />
                </Right>
            </LeftRightSection>
            <Div Style="@Style.MarginTopPad1">
                <UserMessageInboxGrid SearchText="@InboxSearchText" />
            </Div>
        </TabPanel>
        <TabPanel Text="Sent">
            <LeftRightSection LeftStyle="width:40%;"
                              RightStyle="width:10%;">
                <Left>
                    <RowStack>
                        <MudTextField @bind-Value="_sentSearchText"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.Search"
                                      Class="mt-0"
                                      IconSize="MudBlazor.Size.Medium"
                                      Placeholder="Search" />
                        <CustomButton ButtonType="MudBlazor.ButtonType.Button"
                                      OnClick="SearchSent"
                                      Size="MudBlazor.Size.Small"
                                      Text="Search" />
                    </RowStack>
                </Left>
                <Right>
                    <CustomButton ButtonType="MudBlazor.ButtonType.Button"
                                  OnClick="Compose"
                                  Size="MudBlazor.Size.Small"
                                  Text="Compose" />
                </Right>
            </LeftRightSection>
            <Div Style="@Style.MarginTopPad1">
                <UserMessageSentGrid SearchText="@SentSearchText" />
            </Div>
        </TabPanel>
    </TabControl>       
</DivPad2>
