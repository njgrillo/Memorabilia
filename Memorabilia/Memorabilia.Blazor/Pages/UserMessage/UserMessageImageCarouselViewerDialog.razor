<MudDialog Style="@Style.Dialog">
    <DialogContent>
        <DivRowCol12Center Visible="Images.Any()">
            <MudCarousel AutoCycle="true"
                         ShowArrows="true"
                         ShowBullets="true"
                         Style="height:600px;width:600px;"
                         TData="object">
                <Iterations Context="image"
                            Items="Images">
                    <MudCarouselItem Color="@MudBlazor.Color.Primary"
                                     Transition="Transition.Slide">
                        <Image ImageData="@(ImageService.GetUserImageData(image.ImageFileName, UserId))"
                               ObjectFit="@ObjectFit.Fill" />
                    </MudCarouselItem>
                </Iterations>
            </MudCarousel>
        </DivRowCol12Center>
    </DialogContent>
    <DialogActions>
        <CustomButton OnClick="Close"
                      Text="Close" />
    </DialogActions>
</MudDialog>

