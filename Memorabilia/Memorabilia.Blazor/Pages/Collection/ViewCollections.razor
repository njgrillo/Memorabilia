<PageView AddRoute="@($"{NavigationPath.Collections}/{Constant.EditModeType.Update.Name}/{DataProtectorService.EncryptId(0)}")"
          AddTitle="@($"{Constant.EditModeType.Add.Name} Collection")"
          DisplayPageFooter="false"
          DisplayPageHeader="false"
          NavigationPath="@NavigationPath.Home"
          PageTitle="Collections">
    <DivPad2>
        <MudTable Bordered="false"
                  Dense="false"
                  Hover="true"
                  Items="Model.Collections"
                  Striped="true">
            <ToolBarContent>
                <ToolbarTitle Text="Collections" />
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Name</MudTh>
                <MudTh>Description</MudTh>
                <MudTh>Number of Items</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="Description">@context.Description</MudTd>
                <MudTd DataLabel="NumberOfItems">@context.Memorabilia.Count</MudTd>
                <TableDataRightAligned>
                    <NavigationGridButton NavigationPath="@($"{NavigationPath.Collections}/{Constant.EditModeType.Update.Name}/{DataProtectorService.EncryptId(context.Id)}")" />
                    <DeleteGridButton ConfirmMessage="Delete Collection"
                                      OnDelete="@(_ => Delete(context.Id))"
                                      ShowConfirm="true"
                                      TooltipText="Delete Collection" />
                </TableDataRightAligned>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </DivPad2>
</PageView>

