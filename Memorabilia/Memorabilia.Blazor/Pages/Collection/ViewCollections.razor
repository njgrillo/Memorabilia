<PageView AddRoute="@($"{NavigationPath.Collections}/{Constant.EditModeType.Update.Name}/{DataProtectorService.EncryptId(0)}")"
          AddTitle="@($"{Constant.EditModeType.Add.Name} Collection")"
          DisplayPageHeader="false"
          NavigationPath="@NavigationPath.Home"
          PageTitle="Collections">
    <DivPad2>
        <MudTable Bordered="false"
                  Dense="false"
                  Hover="true"
                  Items="@Model.Collections"
                  Striped="true">
            <ToolBarContent>
                <MudText Typo="Typo.h6">Collections</MudText>
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Name</MudTh>
                <MudTh>Description</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="Description">@context.Description</MudTd>
                <MudTd DataLabel="">
                    <GridEditButton NavigationPath="@($"{NavigationPath.Collections}/{Constant.EditModeType.Update.Name}/{DataProtectorService.EncryptId(context.Id)}")" />
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                StartIcon="@Icons.Material.Outlined.DeleteOutline"
                                OnClick="@(_ => ShowDeleteConfirm(@context.Id))" />
                    </MudTooltip>
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </DivPad2>
</PageView>

