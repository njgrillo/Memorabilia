<div style="margin-top:1%;margin-left:1%">
    <PrettyBlazor.Condition Evaluation="@(ValidationResultAlerts.Any())">
        <Match>
            <AlertPanel Alerts="ValidationResultAlerts" />
        </Match>
    </PrettyBlazor.Condition>
    <DivRowCol3>
        <Content>
            <h3>
                Collection Details
            </h3>
        </Content>
    </DivRowCol3>
    <DivRowCol3>
        <Content>
            <TextField Label="Name"
                       MaxLength="250"
                       SelectedText="@Model.Name"
                       SelectedTextChanged="@((p) => Model.Name = p)" />
        </Content>
        <ContentColumn2>
            <TextField Label="Description"
                       MaxLength="1000"
                       SelectedText="@Model.Description"
                       SelectedTextChanged="@((p) => Model.Description = p)" />
        </ContentColumn2>
        <ContentColumn3>
            <AddButton OnClick="AddMemorabilia"
                       Text="Add Memorabilia" />
        </ContentColumn3>
    </DivRowCol3>
    <Condition Evaluation="Model.Items.Any()">
        <Match>
            <div class="row">
                <MemorabiliaFilter OnFilter="OnFilter" />                
            </div>
            <div class="row" style="margin-left:1%;margin-right:1%;">
                <CollectionMemorabiliaDetailGrid CollectionId="Model.Id"
                                                 Filter="_filter"
                                                 MemorabiliaSelected="@((p) => SelectedMemorabilia = p)"
                                                 UserId="UserId" />
            </div>
            <br />
        </Match>
    </Condition> 
    <div style="margin-bottom:1%">
        <SaveButton OnClick="OnSave"
                    Text="Save" />
    </div>
</div>
