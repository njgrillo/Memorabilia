<Div Style="margin-top:1%;margin-bottom:1%;margin-left:1%;margin-right:1%;">
    <Condition Evaluation="@(ValidationResultAlerts.Any())">
        <Match>
            <AlertPanel Alerts="ValidationResultAlerts" />
        </Match>
    </Condition>
    <Div Class="row">
        <Div Class="col-3">
            <h3>
                Collection Details
            </h3>
        </Div>
    </Div>
    <DivRowFormGroup>
        <Div Class="col-3">
            <TextField DisplaySkeleton="@(!Loaded)"
                       Label="Name"
                       MaxLength="250"
                       SelectedText="@EditModel.Name"
                       SelectedTextChanged="@((p) => EditModel.Name = p)" />
        </Div>
        <Div Class="col-6">
            <TextField DisplaySkeleton="@(!Loaded)"
                       Label="Description"
                       MaxLength="1000"
                       SelectedText="@EditModel.Description"
                       SelectedTextChanged="@((p) => EditModel.Description = p)" />
        </Div>
    </DivRowFormGroup>
</Div>
<Condition Evaluation="EditModel.Items.Any()">
    <Match>
        <Div Class="row">
            <MemorabiliaFilter OnFilter="OnFilter" />
        </Div>        
    </Match>
</Condition>
<DivRowFormGroup>
    <Div Style="margin-left:2%;">
        <MudStack Row="true">
            <Switch Checked="@IsDetailView"
                    CheckedChanged="(p) => IsDetailView = p"
                    Label="Detail View" />
            <AddButton OnClick="AddMemorabilia"
                       Text="Add Memorabilia" />
        </MudStack>
    </Div>
</DivRowFormGroup>
<Div Class="row"
     Style="margin-left:1%;margin-right:1%;">
    <Condition Evaluation="IsDetailView">
        <Match>
            <CollectionMemorabiliaDetailGrid CollectionId="EditModel.Id"
                                             Filter="_filter"
                                             MemorabiliaSelected="@((p) => SelectedMemorabilia = p)" />
        </Match>
        <NotMatch>
            <CollectionMemorabiliaGalleryGrid CollectionId="EditModel.Id"
                                              Filter="_filter" />
        </NotMatch>
    </Condition>
</Div>
<br />
<Div Style="margin-right:1%;margin-bottom:1%;text-align:right;">
    <SaveButton OnClick="OnSave"
                Text="Save" />
</Div>
