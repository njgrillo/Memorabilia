<Div Style="margin-top:1%;margin-bottom:1%;margin-left:1%;margin-right:1%;">
    <Condition Evaluation="@(ValidationResultAlerts.Any())">
        <Match>
            <AlertPanel Alerts="ValidationResultAlerts" />
        </Match>
    </Condition>
    <Div Class="row">
        <Div Class="col-3">
            <h3>
                Collection Details
            </h3>
        </Div>
    </Div>
    <Div Class="row">
        <Div Class="col-3">
            <TextField Label="Name"
                       MaxLength="250"
                       SelectedText="@Model.Name"
                       SelectedTextChanged="@((p) => Model.Name = p)" />
        </Div>
        <Div Class="col-6">
            <MudStack Row="true">
                <TextField Label="Description"
                           MaxLength="1000"
                           SelectedText="@Model.Description"
                           SelectedTextChanged="@((p) => Model.Description = p)" />
                <AddButton OnClick="AddMemorabilia"
                           Text="Add Memorabilia" />
            </MudStack>
        </Div>
    </Div>
</Div>
<Condition Evaluation="Model.Items.Any()">
    <Match>
        <Div Class="row">
            <MemorabiliaFilter OnFilter="OnFilter" />
        </Div>
        <Div Class="row">
            <Div Class="col-3" 
                 Style="margin-left:2%;">
                <MudSwitch Checked="@IsDetailView"
                           CheckedChanged="(p) => IsDetailView = p"
                           Color="MudBlazor.Color.Success"
                           Label="Detail View"
                           T="bool" />
            </Div>
        </Div>
        <Div Class="row" 
             Style="margin-left:1%;margin-right:1%;">
            <Condition Evaluation="IsDetailView">
                <Match>
                    <CollectionMemorabiliaDetailGrid CollectionId="Model.Id"
                                                     Filter="_filter"
                                                     MemorabiliaSelected="@((p) => SelectedMemorabilia = p)" />
                </Match>
                <NotMatch>
                    <CollectionMemorabiliaGalleryGrid CollectionId="Model.Id"
                                                      Filter="_filter" />
                </NotMatch>
            </Condition>
        </Div>
        <br />
    </Match>
</Condition>
<Div Style="margin-right:1%;margin-bottom:1%;text-align:right;">
    <SaveButton OnClick="OnSave"
                Text="Save" />
</Div>
