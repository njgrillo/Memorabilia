<MudDialog Style="@Style.Dialog">
    <DialogContent>
        <Div Style="@Style.RightAlign">
            <IconButton Icon="@Icons.Material.Filled.Close"
                        OnClick="Cancel" />
        </Div>
        <DivPad2>
            <SiteMemorabiliaFilter OnFilter="OnFilter" />
            <SiteMemorabiliaDetailGrid CanSelect="true"
                                       Filter="_filter"
                                       MemorabiliaSelected="@((p) => SelectedMemorabilia = p)"
                                       ShowActions="false"
                                       UserId="UserId" />
        </DivPad2>
    </DialogContent>
    <DialogActions>
        <CancelButton OnClick="Cancel" />
        <AddButton OnClick="Add" />
    </DialogActions>
</MudDialog>
