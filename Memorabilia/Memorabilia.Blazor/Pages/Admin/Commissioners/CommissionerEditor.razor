@inherits EditItem<CommissionerEditModel, CommissionerModel>

<PageEditor DisplaySaveContinueButton="false"
            EditModel="EditModel"    
            OnSave="Save"
            PageImageFileName="@EditModel.ImageFileName"
            TItem="CommissionerEditModel">
    <DivRowFormGroup>
        <Div Class="col-3">
            <SportLeagueLevelDropDown Disabled="@(!EditModel.IsNew)"
                                      SelectedValue="EditModel.SportLeagueLevelId"
                                      SelectionChanged="(p) => EditModel.SportLeagueLevelId = p" />
        </Div>
    </DivRowFormGroup>
    <DivRowFormGroup>
        <Div Class="col-3">
            <PersonDomainAutoComplete Disabled="@(!EditModel.IsNew)"
                                      SelectedValue="EditModel.Person"
                                      SelectionChanged="(p) => EditModel.Person = p"
                                      SportLeagueLevelId="EditModel.SportLeagueLevelId" />
        </Div>
    </DivRowFormGroup>
    <DivRowFormGroup>
        <Div Class="col-3">
            <NullableIntField Label="Begin Year"
                              Value="EditModel.BeginYear"
                              ValueChanged="@((p) => EditModel.BeginYear = p)" />
        </Div>
    </DivRowFormGroup>
    <DivRowFormGroup>
        <Div Class="col-3">
            <NullableIntField Label="End Year"
                              Value="EditModel.EndYear"
                              ValueChanged="@((p) => EditModel.EndYear = p)" />
        </Div>
    </DivRowFormGroup>
</PageEditor>