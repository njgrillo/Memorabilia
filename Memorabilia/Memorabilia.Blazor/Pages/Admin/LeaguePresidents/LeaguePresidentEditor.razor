@inherits EditItem<LeaguePresidentEditModel, LeaguePresidentModel>

<EditPage ContinueNavigationPath="@EditModel.RoutePrefix"
          EditMode="EditModel.EditModeType" 
          ExitNavigationPath="@EditModel.RoutePrefix"
          ImageFileName="@EditModel.ImageFileName"
          ItemName="@EditModel.ItemTitle"
          Model="EditModel"          
          OnLoad="OnLoad"
          OnSave="HandleValidSubmit"
          PageFooterButtonText="@EditModel.ExitButtonText"
          PageFooterNavigationPath="@EditModel.ExitNavigationPath"
          PageTitle="@EditModel.PageTitle"
          TItem="LeaguePresidentEditModel">
    <Content>
        <DivRowCol3>
            <Content>
                <SportLeagueLevelDropDown Disabled="@(!EditModel.IsNew)" 
                                          SelectedValue="EditModel.SportLeagueLevelId"
                                          SelectionChanged="(p) => EditModel.SportLeagueLevelId = p" />
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <LeagueDropDown Disabled="@(!EditModel.IsNew)" 
                                SelectedValue="EditModel.LeagueId"
                                SelectionChanged="(p) => EditModel.LeagueId = p"
                                SportLeagueLevel="@SportLeagueLevel.MajorLeagueBaseball" />
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <PersonDomainAutoComplete Disabled="@(!EditModel.IsNew)" 
                                          SelectedValue="EditModel.Person"
                                          SelectionChanged="(p) => EditModel.Person = p" />
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <NullableIntField Label="Begin Year"
                                  Value="EditModel.BeginYear"
                                  ValueChanged="@((p) => EditModel.BeginYear = p)" />
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <NullableIntField Label="End Year"
                                  Value="EditModel.EndYear"
                                  ValueChanged="@((p) => EditModel.EndYear = p)" />
            </Content>
        </DivRowCol3>
    </Content>
</EditPage>
