@inherits ViewItem<LeaguePresidentsModel, LeaguePresidentModel>

<PageView AddRoute="@Model.AddRoute" 
          AddTitle="@Model.AddTitle"
          DisplayPageHeader="false"
          NavigationPath="@Model.ExitNavigationPath"
          PageTitle="@Model.PageTitle">
    <DivPad2>
        <MudTable Bordered="false"
                  Dense="false"
                  Filter="new Func<LeaguePresidentModel,bool>(FilterFunc1)"
                  Hover="true"
                  Items="Model.Presidents"
                  Striped="true">
            <ToolBarContent>
                <ToolbarTitle Text="@Model.PageTitle" />
                <MudSpacer />
                <ToolbarSearchField SearchText="@Search"
                                    SearchTextChanged="@((p) => Search = p)" />
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Sport League</MudTh>
                <MudTh>League</MudTh>
                <MudTh>Name</MudTh>
                <MudTh>Begin Year</MudTh>
                <MudTh>End Year</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Sport League">@context.SportLeagueLevelName</MudTd>
                <MudTd DataLabel="League">@context.LeagueName</MudTd>
                <MudTd DataLabel="Name">@context.Person.DisplayName</MudTd>
                <MudTd DataLabel="Begin Year">@context.BeginYear?.ToString()</MudTd>
                <MudTd DataLabel="End Year">@context.EndYear?.ToString()</MudTd>
                <MudTd>
                    <NavigationGridButton NavigationPath="@($"{Model.RoutePrefix}/{EditModeType.Update.Name}/{context.Id}")" />
                    <DeleteGridButton ConfirmMessage="Delete President"
                                      OnDelete="@(_ => Delete(context.Id))"
                                      ShowConfirm="true" />
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </DivPad2>
</PageView>