@inherits EditItem<SaveTeamViewModel, TeamViewModel>

<EditPage ContinueNavigationPath="@ViewModel.ContinueNavigationPath"
          EditMode="ViewModel.EditModeType"
          ExitNavigationPath="@ViewModel.ExitNavigationPath"
          ImagePath="@ViewModel.ImagePath"
          ItemName="@ViewModel.ItemTitle"
          Model="ViewModel"
          OnLoad="OnLoad"
          OnSave="HandleValidSubmit"
          PageFooterButtonText="@ViewModel.ExitButtonText"
          PageFooterNavigationPath="@ViewModel.BackNavigationPath"
          PageTitle="@ViewModel.PageTitle"
          TItem="SaveTeamViewModel"
          UseMultipleButtons="true">
    <TimelineContent>
        <TeamTimeline DisplayConference="ViewModel.CanHaveConference" 
                      EditMode="ViewModel.EditModeType"
                      SportLeagueLevel="ViewModel.SportLeagueLevel"
                      TeamId="ViewModel.Id"
                      TeamStep="ViewModel.TeamStep" />
    </TimelineContent>
    <Content>
        <DivRowCol3 Hidden="@(!ViewModel.DisplayFranchise)">
            <Content>
                <SportLeagueLevelDropDown SelectedValue="ViewModel.SportLeagueLevelId"
                                          SelectionChanged="(p) => ViewModel.SportLeagueLevelId = p" />
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <FranchiseDropDown SelectedValue="ViewModel.FranchiseId"
                                   SelectionChanged="(p) => ViewModel.FranchiseId = p"
                                   SportLeagueLevelId="ViewModel.SportLeagueLevelId" />
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <TextField Label="Name"
                           SelectedText="@ViewModel.Name"
                           SelectedTextChanged="@((p) => ViewModel.Name = p)" />
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <TextField Label="Location"
                           SelectedText="@ViewModel.Location"
                           SelectedTextChanged="@((p) => ViewModel.Location = p)" />
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <TextField Label="Nickname"
                           SelectedText="@ViewModel.Nickname"
                           SelectedTextChanged="@((p) => ViewModel.Nickname = p)" />
            </Content>
            <ContentColumn2>
                <TextField Label="Abbreviation"
                           SelectedText="@ViewModel.Abbreviation"
                           SelectedTextChanged="@((p) => ViewModel.Abbreviation = p)" />
            </ContentColumn2>
        </DivRowCol3>
         <DivRowCol3>
            <Content>
                <NullableIntField Label="Begin Year"
                                  Value="ViewModel.BeginYear"
                                  ValueChanged="@((p) => ViewModel.BeginYear = p)" />
            </Content>
            <ContentColumn2>
                <NullableIntField Label="End Year"
                                  Value="ViewModel.EndYear"
                                  ValueChanged="@((p) => ViewModel.EndYear = p)" />
            </ContentColumn2>
        </DivRowCol3>
    </Content>
</EditPage>