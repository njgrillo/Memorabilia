@inherits EditItem<TeamEditModel, TeamModel>

<EditPage ContinueNavigationPath="@EditModel.ContinueNavigationPath"
          EditMode="EditModel.EditModeType"
          ExitNavigationPath="@EditModel.ExitNavigationPath"
          ImageFileName="@EditModel.ImageFileName"
          ItemName="@EditModel.ItemTitle"
          Model="EditModel"
          OnLoad="OnLoad"
          OnSave="HandleValidSubmit"
          PageFooterButtonText="@EditModel.ExitButtonText"
          PageFooterNavigationPath="@EditModel.BackNavigationPath"
          PageTitle="@EditModel.PageTitle"
          TItem="TeamEditModel"
          UseMultipleButtons="true">
    <TimelineContent>
        <TeamTimeline DisplayConference="EditModel.CanHaveConference" 
                      EditMode="EditModel.EditModeType"
                      SportLeagueLevel="EditModel.SportLeagueLevel"
                      TeamId="EditModel.Id"
                      TeamStep="EditModel.TeamStep" />
    </TimelineContent>
    <Content>
        <DivRowCol3 Hidden="@(!EditModel.DisplayFranchise)">
            <Content>
                <SportLeagueLevelDropDown SelectedValue="EditModel.SportLeagueLevelId"
                                          SelectionChanged="(p) => EditModel.SportLeagueLevelId = p" />
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <FranchiseAutoComplete SelectedValue="EditModel.Franchise"
                                       SelectionChanged="(p) => EditModel.Franchise = p"
                                       Sports="EditModel.Sports" />
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <TextField Label="Name"
                           SelectedText="@EditModel.Name"
                           SelectedTextChanged="@((p) => EditModel.Name = p)" />
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <TextField Label="Location"
                           SelectedText="@EditModel.Location"
                           SelectedTextChanged="@((p) => EditModel.Location = p)" />
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <TextField Label="Nickname"
                           SelectedText="@EditModel.Nickname"
                           SelectedTextChanged="@((p) => EditModel.Nickname = p)" />
            </Content>
            <ContentColumn2>
                <TextField Label="Abbreviation"
                           SelectedText="@EditModel.Abbreviation"
                           SelectedTextChanged="@((p) => EditModel.Abbreviation = p)" />
            </ContentColumn2>
        </DivRowCol3>
         <DivRowCol3>
            <Content>
                <NullableIntField Label="Begin Year"
                                  Value="EditModel.BeginYear"
                                  ValueChanged="@((p) => EditModel.BeginYear = p)" />
            </Content>
            <ContentColumn2>
                <NullableIntField Label="End Year"
                                  Value="EditModel.EndYear"
                                  ValueChanged="@((p) => EditModel.EndYear = p)" />
            </ContentColumn2>
        </DivRowCol3>
    </Content>
</EditPage>