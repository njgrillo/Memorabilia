@inherits EditTeamItem<TeamLeaguesModel, TeamLeagueModel>

<PageEditor ContinueNavigationPath="@EditModel.ContinueNavigationPath" 
            EditModel="EditModel"
            ExitNavigationPath="@EditModel.ExitNavigationPath"
            OnSave="Save"
            PageImageFileName="@EditModel.ImageFileName"
            TItem="TeamLeaguesModel">
    <TimelineContent>
        <TeamTimeline DisplayConference="EditModel.CanHaveConference" 
                      EditMode="EditModel.EditModeType"
                      SportLeagueLevel="EditModel.SportLeagueLevel"
                      TeamId="TeamId"
                      TeamStep="EditModel.TeamStep" />
    </TimelineContent>
    <ChildContent>
        <DivRowCol12>
            <TeamLeagueEditor Leagues="EditModel.Leagues"
                              SportLeagueLevel="EditModel.SportLeagueLevel" />
        </DivRowCol12>
        <br />
    </ChildContent>
</PageEditor>