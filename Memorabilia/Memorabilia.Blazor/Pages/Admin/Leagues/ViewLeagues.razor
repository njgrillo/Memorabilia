@inherits ViewItem<LeaguesModel, LeagueModel>

<PageView AddRoute="@Model.AddRoute" 
          AddTitle="@Model.AddTitle"
          DisplayPageHeader="false"
          NavigationPath="@Model.ExitNavigationPath"
          PageTitle="@Model.PageTitle">
    <DivPad2>
        <MudTable Bordered="false"
                  Dense="false"
                  Filter="new Func<LeagueModel,bool>(FilterFunc1)"
                  Hover="true"
                  Items="@Model.Leagues"
                  Striped="true">
            <ToolBarContent>
                <ToolbarTitle Text="@Model.PageTitle" />
                <MudSpacer />
                <ToolbarSearchField SearchText="@Search"
                                    SearchTextChanged="@((p) => Search = p)" />
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Sport League</MudTh>
                <MudTh>Name</MudTh>
                <MudTh>Abbreviation</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Sport League">@context.SportLeagueLevelName</MudTd>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="Abbreviation">@context.Abbreviation</MudTd>
                <MudTd DataLabel="">
                    <GridEditButton NavigationPath="@($"{Model.RoutePrefix}/{EditModeType.Update.Name}/{context.Id}")" />
                    <DeleteGridButton ConfirmMessage="Delete League"
                                      OnDelete="@(_ => Delete(context.Id))"
                                      ShowConfirm="true" />
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </DivPad2>
</PageView>