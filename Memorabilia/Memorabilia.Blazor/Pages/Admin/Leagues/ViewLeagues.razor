@inherits ViewItem<LeaguesModel, LeagueModel>

<PageView AddRoute="@Model.AddRoute" 
          AddTitle="@Model.AddTitle"
          DisplayPageHeader="false"
          NavigationPath="@Model.ExitNavigationPath"
          PageTitle="@Model.PageTitle">
    <DivPad2>
        <MudTable Bordered="false"
                  Dense="false"
                  Filter="new Func<LeagueModel,bool>(FilterFunc1)"
                  Hover="true"
                  Items="@Model.Leagues"
                  Striped="true">
            <ToolBarContent>
                <MudText Typo="Typo.h6">@Model.PageTitle</MudText>
                <MudSpacer />
                <MudTextField @bind-Value="Search"
                              Adornment="Adornment.Start"
                              AdornmentIcon="@Icons.Material.Filled.Search"
                              Class="mt-0"
                              IconSize="MudBlazor.Size.Medium"
                              Placeholder="Search" />
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Sport League</MudTh>
                <MudTh>Name</MudTh>
                <MudTh>Abbreviation</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Sport League">@context.SportLeagueLevelName</MudTd>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="Abbreviation">@context.Abbreviation</MudTd>
                <MudTd DataLabel="">
                    <GridEditButton NavigationPath="@($"{Model.RoutePrefix}/{EditModeType.Update.Name}/{context.Id}")" />
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Material.Outlined.DeleteOutline"
                                OnClick="@(_ => ShowDeleteConfirm(context.Id, "Delete League"))" />
                    </MudTooltip>
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </DivPad2>
</PageView>