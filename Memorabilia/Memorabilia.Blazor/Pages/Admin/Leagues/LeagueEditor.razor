@inherits EditItem<LeagueEditModel, LeagueModel>

<PageEditor DisplaySaveContinueButton="false"
            PageImageFileName="@EditModel.ImageFileName"
            EditModel="EditModel"
            OnSave="Save"
            TItem="LeagueEditModel">
    <DivRowFormGroup>
        <Div Class="col-3">
            <SportLeagueLevelDropDown Disabled="@(!EditModel.IsNew)"
                                      SelectedValue="EditModel.SportLeagueLevelId"
                                      SelectionChanged="(p) => EditModel.SportLeagueLevelId = p" />
        </Div>
    </DivRowFormGroup>
    <DivRowFormGroup>
        <Div Class="col-3">
            <TextField Label="Name"
                       SelectedText="@EditModel.Name"
                       SelectedTextChanged="@((p) => EditModel.Name = p)" />
        </Div>
    </DivRowFormGroup>
    <DivRowFormGroup>
        <Div Class="col-3">
            <TextField Label="Abbreviation"
                       SelectedText="@EditModel.Abbreviation"
                       SelectedTextChanged="@((p) => EditModel.Abbreviation = p)" />
        </Div>
    </DivRowFormGroup>
</PageEditor>