@inherits ViewItem<SportsModel, SportModel>

<PageView AddRoute="@Model.AddRoute" 
          AddTitle="@Model.AddTitle"
          DisplayPageHeader="false"
          NavigationPath="@Model.ExitNavigationPath"
          PageTitle="@Model.PageTitle">
    <DivPad2>
        <MudTable Bordered="false"
                  Dense="false"
                  Filter="new Func<SportModel,bool>(FilterFunc1)"
                  Hover="true"
                  Items="@Model.Sports"
                  Striped="true">
            <ToolBarContent>
                <ToolbarTitle Text="@Model.PageTitle" />
                <MudSpacer />
                <ToolbarSearchField SearchText="@Search"
                                    SearchTextChanged="@((p) => Search = p)" />
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Name</MudTh>
                <MudTh>Alternate Name</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="Alternate Name">@context.AlternateName</MudTd>
                <MudTd DataLabel="">
                    <GridEditButton NavigationPath="@($"{Model.RoutePrefix}/{EditModeType.Update.Name}/{context.Id}")" />
                    <DeleteGridButton ConfirmMessage="Delete Sport"
                                      OnDelete="@(_ => Delete(context.Id))"
                                      ShowConfirm="true" />
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </DivPad2>
</PageView>