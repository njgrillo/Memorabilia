<MudTable Bordered="false"
          Dense="false"
          Filter="new Func<AwardManagementModel,bool>(Filter)"
          Hover="true"
          Items="Awards"
          Striped="true">
    <ToolBarContent>
        <ToolbarTitle Text="Awards" />
        <MudSpacer />
        <ToolbarSearchField SearchText="@_search"
                            SearchTextChanged="@((p) => _search = p)" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Abbreviation</MudTh>
        <MudTh>Begin Year</MudTh>
        <MudTh>End Year</MudTh>       
        <MudTh>Number of Winners</MudTh>
        <MudTh>Month Awarded</MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.AwardType.Name</MudTd>
        <MudTd DataLabel="Abbreviation">@context.AwardType.Abbreviation</MudTd>
        <MudTd DataLabel="BeginYear">@(context.BeginYear > 0 ? context.BeginYear.ToString() : string.Empty)</MudTd>
        <MudTd DataLabel="EndYear">@(context.EndYear.HasValue ? context.EndYear.Value.ToString() : string.Empty)</MudTd>        
        <MudTd DataLabel="NumberOfWinners">@(context.NumberOfWinners > 0 ? context.NumberOfWinners.ToString() : string.Empty)</MudTd>    
        <MudTd DataLabel="MonthAwarded">@(context.MonthAwarded.HasValue ? context.MonthAwarded.ToMonth() : string.Empty)</MudTd>
        <MudTd>
            <EditGridButton OnEdit="@(_ => NavigationManager.NavigateTo($"/Admin/Management/Awards/AwardManagementEditor/{context.AwardType.Id}"))" />
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
