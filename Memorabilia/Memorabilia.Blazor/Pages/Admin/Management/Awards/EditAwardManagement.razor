<AlertPanel Alerts="ValidationResultAlerts"
            DivStyle="@Style.MarginPad2"
            ShowCloseIcon="false" />
<Div Style="@Style.MarginPad1">
    <ExpansionPanel Text="@EditModel?.AwardType?.Name">
        <Div Class="@DivClass.Row">
            <Div Class="@DivClass.Column3">
                <NullableIntField DisplaySkeleton="@(!_loaded)"
                                  Label="Begin Year"
                                  Value="EditModel.BeginYear"
                                  ValueChanged="@((p) => EditModel.BeginYear = p)" />
            </Div>
            <Div Class="@DivClass.Column3">
                <NullableIntField DisplaySkeleton="@(!_loaded)"
                                  Label="End Year"
                                  Value="EditModel.EndYear"
                                  ValueChanged="@((p) => EditModel.EndYear = p)" />
            </Div>
            <Div Class="@DivClass.Column3">
                <NullableIntField DisplaySkeleton="@(!_loaded)"
                                  Label="Number of Winners"
                                  Value="EditModel.NumberOfWinners"
                                  ValueChanged="@((p) => EditModel.NumberOfWinners = p)" />
            </Div>
            <Div Class="@DivClass.Column3">
                <MonthDropDown SelectedValue="EditModel.MonthAwarded"
                               SelectionChanged="@((p) => EditModel.MonthAwarded = p)" />
            </Div>
        </Div>
    </ExpansionPanel>   
    <ExpansionPanel Text="Exclusion Years">
        <EditAwardManagementExclusionYear ExclusionYears="EditModel.ExclusionYears" />
    </ExpansionPanel>    
    <LeftRightSection>
        <Right>
            <RowStack Style="@($"{Style.MarginBottomPad1}{Style.MarginTopPad1}")">
                <SaveButton OnClick="OnSave"
                            Text="Save" />
            </RowStack>
        </Right>
    </LeftRightSection>
    <PageFooter NavigationPath="/Admin/Management/Awards/AwardManagement"
                NavigationPathText="Back" />
</Div>

