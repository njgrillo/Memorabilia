<DivPad2>
    <RowStack Class="@DivClass.Column12"
              Style="@Style.MarginBottomPad1">
        <CondensedPersonSelector SelectedPerson="SelectedPerson"
                                 SelectedPersonChanged="(p) => OnSelectedPersonChanged(p.Id)" />
        <Condition Evaluation="@(SelectedPerson.Id > 0)">
            <Match>
                <CollegeAutoComplete Disabled="@(EditMode == EditModeType.Update)"
                                     ResetValueOnEmptyText="false"
                                     SelectedValue="CollegeEditModel.College"
                                     SelectionChanged="(p) => CollegeEditModel.College = p" />
                <NullableIntField Label="Begin Year"
                                  Value="CollegeEditModel.BeginYear"
                                  ValueChanged="@((p) => CollegeEditModel.BeginYear = p)" />
                <NullableIntField Label="End Year"
                                  Value="CollegeEditModel.EndYear"
                                  ValueChanged="@((p) => CollegeEditModel.EndYear = p)" />
                <AddUpdateFab EditMode="EditMode"
                              OnAdd="Add"
                              OnUpdate="Update" />
            </Match>
        </Condition>
    </RowStack>
    <Condition Evaluation="@(SelectedPerson.Id > 0)">
        <Match>
            <DivRowCol12 Style="@Style.MarginBottomPad1">
                <MudTable Bordered="false"
                          Dense="false"
                          Hover="true"
                          Items="_colleges"
                          Striped="true">
                    <HeaderContent>
                        <MudTh>College</MudTh>
                        <MudTh>Begin Year</MudTh>
                        <MudTh>End Year</MudTh>
                        <MudTh></MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="College">@context.College</MudTd>
                        <MudTd DataLabel="Begin Year">@context.BeginYear</MudTd>
                        <MudTd DataLabel="End Year">@context.EndYear</MudTd>
                        <TableDataRightAligned>
                            <EditGridButton OnEdit="@(_ => Edit(context))" />
                            <DeleteGridButton OnDelete="@(_ => context.Delete())" />
                        </TableDataRightAligned>
                    </RowTemplate>
                </MudTable>
            </DivRowCol12>
            <LeftRightSection>
                <Right>
                    <RowStack Style="@($"{Style.MarginBottomPad1}{Style.MarginTopPad1}")">
                        <SaveButton OnClick="OnSave"
                                    Text="Save" />
                    </RowStack>
                </Right>
            </LeftRightSection>
        </Match>
    </Condition>
</DivPad2>
