<MudTable Bordered="false"
          Dense="false"
          Filter="new Func<AllStarManagementModel,bool>(Filter)"
          Hover="true"
          Items="@AllStars"
          Striped="true">
    <ToolBarContent>
        <ToolbarTitle Text="All Star/Pro Bowl Games" />
        <MudSpacer />
        <MudTextField @bind-Value="_search"
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      Class="mt-0"
                      IconSize="MudBlazor.Size.Medium"
                      Placeholder="Search" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Sport League Level</MudTh>
        <MudTh>Sport</MudTh>
        <MudTh>Year</MudTh>
        <MudTh>Number Selected</MudTh>
        <MudTh>Month Played</MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="SportLeagueLevel">@context.SportLeagueLevel.Name</MudTd>
        <MudTd DataLabel="Sport">@context.SportLeagueLevel.SportName</MudTd>
        <MudTd DataLabel="Year">@context.Year</MudTd>
        <MudTd DataLabel="NumberOfParticipants">@context.NumberOfAllStars</MudTd>
        <MudTd DataLabel="MonthPlayed">@context.MonthPlayed.ToMonth()</MudTd>
        <MudTd DataLabel="">
            <MudTooltip Text="Edit">
                <MudFab Color="MudBlazor.Color.Primary"
                        StartIcon="@Icons.Material.Outlined.ModeEditOutline"
                        OnClick="@(_ => NavigationManager.NavigateTo($"/Admin/Management/AllStars/AllStarManagementEditor/{context.AllStarDetailId}"))" />
            </MudTooltip>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
