<AlertPanel Alerts="ValidationResultAlerts"
            DivStyle="@Style.MarginPad2"
            ShowCloseIcon="false" />
<DivPad2>
    <ExpansionPanel Text="All Star Management">
        <Div Class="@DivClass.Row">
            <Div Class="@DivClass.Column3">
                <SkeletonLoader IsLoading="@(!_loaded)">
                    <SportLeagueLevelDropDown SelectedValue="EditModel.SportLeagueLevelId"
                                              SelectionChanged="(p) => EditModel.SportLeagueLevelId = p" />
                </SkeletonLoader>
            </Div>
            <Div Class="@DivClass.Column3">
                <NullableIntField DisplaySkeleton="@(!_loaded)"
                                  Label="Year"
                                  Value="EditModel.Year"
                                  ValueChanged="@((p) => EditModel.Year = p)" />
            </Div>
            <Div Class="@DivClass.Column3">
                <NullableIntField DisplaySkeleton="@(!_loaded)"
                                  Label="Number of Participants"
                                  Value="EditModel.NumberOfAllStars"
                                  ValueChanged="@((p) => EditModel.NumberOfAllStars = p)" />
            </Div>
            <Div Class="@DivClass.Column3">
                <MonthDropDown SelectedValue="EditModel.MonthPlayed"
                               SelectionChanged="@((p) => EditModel.MonthPlayed = p)" />
            </Div>
        </Div>
    </ExpansionPanel>
    <LeftRightSection>
        <Right>
            <RowStack Style="@($"{Style.MarginTopPad1}{Style.MarginBottomPad1}")">
                <SaveButton OnClick="OnSave"
                            Text="Save" />
            </RowStack>
        </Right>
    </LeftRightSection>
    <PageFooter NavigationPath="/Admin/Management/AllStars/AllStarManagement"
                NavigationPathText="Back" />
</DivPad2>

