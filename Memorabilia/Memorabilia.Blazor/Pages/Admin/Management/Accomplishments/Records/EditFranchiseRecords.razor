<DivPad2>
    <Condition Evaluation="@(EditModel.Sport?.Id == Sport.Baseball.Id)">
        <Match>
            <BaseballFranchiseRecordEditor CareerFranchiseRecords="EditModel.CareerFranchiseRecords"
                                           Franchise="EditModel.Franchise"
                                           OnCareerRecordAdded="AddCareerFranchiseRecord"
                                           OnCareerRecordDeleted="DeleteCareerFranchiseRecord"
                                           OnSingleSeasonRecordAdded="AddSingleSeasonFranchiseRecord"
                                           OnSingleSeasonRecordDeleted="DeleteSingleSeasonFranchiseRecord"
                                           People="People"
                                           SingleSeasonFranchiseRecords="EditModel.SingleSeasonFranchiseRecords" />
        </Match>
    </Condition>
    <LeftRightSection Style="@($"{Style.MarginBottomPad1}{Style.MarginTopPad1}")">
        <Right>
            <SaveButton OnClick="OnSave"
                        Text="Save" />
        </Right>
    </LeftRightSection>
    <PageFooter NavigationPath="/Admin/Management/Accomplishments/Records/ViewFranchiseRecords"
                NavigationPathText="Back"
                Visible="true" />
</DivPad2>
