<MudTable Bordered="false"
          Dense="false"
          Filter="new Func<AccomplishmentManagementModel,bool>(Filter)"
          Hover="true"
          Items="@Accomplishments"
          Striped="true">
    <ToolBarContent>
        <ToolbarTitle Text="Accomplishments" />
        <MudSpacer />
        <ToolbarSearchField SearchText="@_search"
                            SearchTextChanged="@((p) => _search = p)" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Abbreviation</MudTh>
        <MudTh>Begin Year</MudTh>
        <MudTh>End Year</MudTh>
        <MudTh>Year</MudTh>
        <MudTh>Number of Winners</MudTh>
        <MudTh>Month Accomplished</MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.AccomplishmentType.Name</MudTd>
        <MudTd DataLabel="Abbreviation">@context.AccomplishmentType.Abbreviation</MudTd>
        <MudTd DataLabel="BeginYear">@(context.BeginYear.HasValue ? context.BeginYear.ToString() : string.Empty)</MudTd>
        <MudTd DataLabel="EndYear">@(context.EndYear.HasValue ? context.EndYear.Value.ToString() : string.Empty)</MudTd>
        <MudTd DataLabel="EndYear">@(context.Year.HasValue ? context.Year.Value.ToString() : string.Empty)</MudTd>
        <MudTd DataLabel="NumberOfWinners">@(context.NumberOfWinners.HasValue ? context.NumberOfWinners.ToString() : string.Empty)</MudTd>
        <MudTd DataLabel="MonthAccomplished">@(context.MonthAccomplished.HasValue ? context.MonthAccomplished.ToMonth() : string.Empty)</MudTd>
        <MudTd DataLabel="">
            <EditGridButton OnEdit="@(_ => NavigationManager.NavigateTo($"/Admin/Management/Accomplishments/AccomplishmentManagementEditor/{context.AccomplishmentType.Id}"))" />
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
