@inherits EditItemTypeItem<ItemTypeBrandEditModel, ItemTypeBrandModel>

<EditPage ContinueNavigationPath="@EditModel.RoutePrefix"
          EditMode="EditModel.EditModeType" 
          ExitNavigationPath="@EditModel.RoutePrefix"
          ImageFileName="@EditModel.ImageFileName" 
          ItemName="@EditModel.ItemTitle"
          Model="EditModel"
          OnLoad="OnLoad"
          OnSave="HandleValidSubmit"
          PageFooterButtonText="@EditModel.ExitButtonText"
          PageFooterNavigationPath="@EditModel.ExitNavigationPath"
          PageTitle="@EditModel.PageTitle"
          TItem="ItemTypeBrandEditModel">
    <Content>
        <DivRowCol3 Hidden="@(!DisplayItemType)">
            <Content>
                <ItemTypeAutoComplete SelectedValue="EditModel.ItemType"
                                      SelectionChanged="(p) => EditModel.ItemType = p" />
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <BrandAutoComplete SelectedValue="EditModel.Brand"
                                   SelectionChanged="(p) => EditModel.Brand = p" />
            </Content>
        </DivRowCol3>
    </Content>
</EditPage>