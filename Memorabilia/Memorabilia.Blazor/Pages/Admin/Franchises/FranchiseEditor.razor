@inherits EditItem<FranchiseEditModel, FranchiseModel>

<EditPage ContinueNavigationPath="@EditModel.RoutePrefix"
          EditMode="EditModel.EditModeType" 
          ExitNavigationPath="@EditModel.RoutePrefix"
          ImageFileName="@EditModel.ImageFileName" 
          ItemName="@EditModel.ItemTitle"
          Model="EditModel"
          OnLoad="OnLoad"
          OnSave="HandleValidSubmit"
          PageFooterButtonText="@EditModel.ExitButtonText"
          PageFooterNavigationPath="@EditModel.ExitNavigationPath"
          PageTitle="@EditModel.PageTitle"
          TItem="FranchiseEditModel">
    <Content>
        <DivRowCol3 Hidden="@(!DisplaySportLeagueLevel)">
            <Content>
                <SportLeagueLevelDropDown SelectedValue="EditModel.SportLeagueLevelId"
                                          SelectionChanged="(p) => EditModel.SportLeagueLevelId = p" />
            </Content>
        </DivRowCol3> 
        <DivRowCol3>
            <Content>
                <TextField Label="Name"
                           SelectedText="@EditModel.Name"
                           SelectedTextChanged="@((p) => EditModel.Name = p)" />
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <TextField Label="Location"
                           SelectedText="@EditModel.Location"
                           SelectedTextChanged="@((p) => EditModel.Location = p)" />
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <IntField Label="Founded Year"
                          Value="EditModel.FoundYear"
                          ValueChanged="@((p) => EditModel.FoundYear = p)" />
            </Content>
        </DivRowCol3>
    </Content>
</EditPage>