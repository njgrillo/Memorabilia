@inherits ViewItem<PewtersModel, PewterModel>

<PageView AddRoute="@Model.AddRoute" 
          AddTitle="@Model.AddTitle"
          DisplayPageHeader="false"
          NavigationPath="@Model.ExitNavigationPath"
          OnLoad="OnLoad"
          PageTitle="@Model.PageTitle">
    <DivPad2>
        <MudTable Bordered="false"
                  Dense="false"
                  Filter="new Func<PewterModel,bool>(FilterFunc1)"
                  Hover="true"
                  Items="@Model.Pewters"
                  Striped="true">
            <ToolBarContent>
                <MudText Typo="Typo.h6">@Model.PageTitle</MudText>
                <MudSpacer />
                <MudTextField @bind-Value="Search"
                              Adornment="Adornment.Start"
                              AdornmentIcon="@Icons.Material.Filled.Search"
                              Class="mt-0"
                              IconSize="MudBlazor.Size.Medium"
                              Placeholder="Search" />
            </ToolBarContent>
            <HeaderContent>
                <MudTh></MudTh>
                <MudTh>Franchise</MudTh>
                <MudTh>Team</MudTh>
                <MudTh>Size</MudTh>
                <MudTh>Image Type</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="">
                    <MudImage Class="rounded-lg"
                              Elevation="5"
                              Height="150"
                              ObjectFit="@ObjectFit.Cover"
                              Src="@(ImageService.GetPewterImageData(context.ImageFileName))"
                              Width="150" />
                </MudTd>
                <MudTd DataLabel="Franchise">@context.FranchiseName</MudTd>
                <MudTd DataLabel="Team">@context.TeamName</MudTd>
                <MudTd DataLabel="Size">@context.SizeName</MudTd>
                <MudTd DataLabel="Image Type">@context.ImageTypeName</MudTd>
                <MudTd DataLabel="">
                    <GridEditButton NavigationPath="@($"{Model.RoutePrefix}/{EditModeType.Update.Name}/{context.Id}")" />
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Material.Outlined.DeleteOutline"
                                OnClick="@(_ => ShowDeleteConfirm(context.Id, "Delete Pewter"))" />
                    </MudTooltip>
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </DivPad2>
</PageView>