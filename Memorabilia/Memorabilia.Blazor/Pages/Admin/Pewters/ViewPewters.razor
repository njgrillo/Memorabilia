@inherits ViewItem<PewtersViewModel, PewterViewModel>

<PageView AddRoute="@ViewModel.AddRoute" 
          AddTitle="@ViewModel.AddTitle"
          DisplayPageHeader="false"
          NavigationPath="@ViewModel.ExitNavigationPath"
          OnLoad="OnLoad"
          PageTitle="@ViewModel.PageTitle">
    <Content>
        <DivPad2>
            <Content>
                <MudTable Bordered="false"
                          Dense="false" 
                          Filter="new Func<PewterViewModel,bool>(FilterFunc1)"
                          Hover="true"
                          Items="@ViewModel.Pewters"    
                          Striped="true">
                    <ToolBarContent>
                        <MudText Typo="Typo.h6">@ViewModel.PageTitle</MudText>
                        <MudSpacer />
                        <MudTextField @bind-Value="Search"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.Search"
                                      Class="mt-0"
                                      IconSize="MudBlazor.Size.Medium"
                                      Placeholder="Search" />
                    </ToolBarContent>
                    <HeaderContent>
                        <MudTh></MudTh>
                        <MudTh>Franchise</MudTh>
                        <MudTh>Team</MudTh>
                        <MudTh>Size</MudTh>
                        <MudTh>Image Type</MudTh>
                        <MudTh></MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="">
                            <MudImage Class="rounded-lg" 
                                      Elevation="5" 
                                      Height="150"
                                      ObjectFit="@ObjectFit.Cover"
                                      Src="@(GetImageData(context.ImageFileName))"
                                      Width="150" /> 
                        </MudTd>
                        <MudTd DataLabel="Franchise">@context.FranchiseName</MudTd>
                        <MudTd DataLabel="Team">@context.TeamName</MudTd>
                        <MudTd DataLabel="Size">@context.SizeName</MudTd>
                        <MudTd DataLabel="Image Type">@context.ImageTypeName</MudTd>
                        <MudTd DataLabel="">
                            <GridEditButton NavigationPath="@($"{ViewModel.RoutePrefix}/{EditModeType.Update.Name}/{context.Id}")" />    
                            <MudTooltip Text="Delete">
                                <MudFab Color="MudBlazor.Color.Secondary"
                                        Icon="@Icons.Material.Outlined.DeleteOutline"
                                        OnClick="@(_ => ShowDeleteConfirm(context.Id, "Delete Pewter"))" />
                            </MudTooltip>
                        </MudTd>
                    </RowTemplate>
                    <PagerContent>
                        <MudTablePager />
                    </PagerContent>
                </MudTable>
            </Content>
        </DivPad2>
    </Content>
</PageView>