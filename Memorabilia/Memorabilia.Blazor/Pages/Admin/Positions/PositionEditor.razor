@inherits EditItem<PositionEditModel, PositionModel>

<PageEditor DisplaySaveContinueButton="false"
            PageImageFileName="@EditModel.ImageFileName"
            EditModel="EditModel"
            OnSave="Save"
            TItem="PositionEditModel">
    <DivRowFormGroup>
        <Div Class="col-3">
            <SportDropDown Disabled="@(!EditModel.IsNew)"
                           SelectedValue="EditModel.SportId"
                           SelectionChanged="(p) => EditModel.SportId = p" />
        </Div>
    </DivRowFormGroup>
    <DivRowFormGroup>
        <Div Class="col-3">
            <TextField Label="Name"
                       SelectedText="@EditModel.Name"
                       SelectedTextChanged="@((p) => EditModel.Name = p)" />
        </Div>
    </DivRowFormGroup>
    <DivRowFormGroup>
        <Div Class="col-3">
            <TextField Label="Abbreviation"
                       SelectedText="@EditModel.Abbreviation"
                       SelectedTextChanged="@((p) => EditModel.Abbreviation = p)" />
        </Div>
    </DivRowFormGroup>
</PageEditor>