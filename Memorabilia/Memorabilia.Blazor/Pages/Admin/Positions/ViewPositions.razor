@inherits ViewItem<PositionsModel, PositionModel>

<PageView AddRoute="@Model.AddRoute"
          AddTitle="@Model.AddTitle"
          DisplayPageHeader="false"
          NavigationPath="@Model.ExitNavigationPath"
          OnLoad="OnLoad"
          PageTitle="@Model.PageTitle">
    <Content>
        <DivPad2>
            <Content>
                <MudTable Bordered="false"
                          Dense="false"
                          Filter="new Func<PositionModel,bool>(FilterFunc1)"
                          Hover="true"
                          Items="@Model.Positions"
                          Striped="true">
                    <ToolBarContent>
                        <MudText Typo="Typo.h6">@Model.PageTitle</MudText>
                        <MudSpacer />
                        <MudTextField @bind-Value="Search"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.Search"
                                      Class="mt-0"
                                      IconSize="MudBlazor.Size.Medium"
                                      Placeholder="Search" />
                    </ToolBarContent>
                    <HeaderContent>
                        <MudTh>Sport</MudTh>
                        <MudTh>Name</MudTh>
                        <MudTh>Abbreviation</MudTh>
                        <MudTh></MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="Sport">@context.SportName</MudTd>
                        <MudTd DataLabel="Name">@context.Name</MudTd>
                        <MudTd DataLabel="Abbreviation">@context.Abbreviation</MudTd>
                        <MudTd DataLabel="">
                            <GridEditButton NavigationPath="@($"{Model.RoutePrefix}/{EditModeType.Update.Name}/{context.Id}")" />
                            <MudTooltip Text="Delete">
                                <MudFab Color="MudBlazor.Color.Secondary"
                                        Icon="@Icons.Material.Outlined.DeleteOutline"
                                        OnClick="@(_ => ShowDeleteConfirm(context.Id, "Delete Position"))" />
                            </MudTooltip>
                        </MudTd>
                    </RowTemplate>
                    <PagerContent>
                        <MudTablePager />
                    </PagerContent>
                </MudTable>
            </Content>
        </DivPad2>
    </Content>
</PageView>