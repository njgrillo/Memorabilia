<div class="row">
    <div class="col-md-4">
        <DivPad5>
            <Content>
                <MudTextField @bind-Value="DomainItemQuickJump" 
                                Label="Quick Jump" 
                        Variant="Variant.Outlined" />
                <br />
                <MudButton ButtonType="MudBlazor.ButtonType.Button" 
                            Color="MudBlazor.Color.Primary"
                            OnClick="QuickJump"
                            Size="MudBlazor.Size.Small"                                  
                            Variant="Variant.Filled">Go</MudButton>                 
            </Content>                    
        </DivPad5>                
    </div>
</div>
<div class="row">
    <Iterations Items="ViewModel.Items" Context="item">
        <div class="col-md-4">
            <DomainItemCard Description="@item.Description"
                            ImagePath="@item.ImagePath"
                            Page="@item.Page"
                            Title="@item.Title" />
        </div>  
    </Iterations>
</div>
