@inherits ViewItem<ItemTypeSpotsModel, ItemTypeSpotModel>

<PageView AddRoute="@Model.AddRoute" 
          AddTitle="@Model.AddTitle"
          DisplayPageHeader="false"
          NavigationPath="@Model.ExitNavigationPath"
          PageTitle="@Model.PageTitle">
    <DivPad2>
            <MudTable Bordered="false"
                          Dense="false" 
                          Filter="new Func<ItemTypeSpotModel,bool>(FilterFunc1)"
                          Hover="true"
                          Items="@Model.ItemTypeSpots"    
                          Striped="true">
                    <ToolBarContent>
                        <ToolbarTitle Text="@Model.PageTitle" />
                        <MudSpacer />
                        <MudTextField @bind-Value="Search"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.Search"
                                      Class="mt-0"
                                      IconSize="MudBlazor.Size.Medium"
                                      Placeholder="Search" />
                    </ToolBarContent>
                    <HeaderContent>
                        <MudTh>Item Type</MudTh>
                        <MudTh>Spot</MudTh>
                        <MudTh></MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="Item Type">@context.ItemTypeName</MudTd>
                        <MudTd DataLabel="Spot">@context.SpotName</MudTd>
                        <MudTd DataLabel="">
                            <GridEditButton NavigationPath="@($"{Model.RoutePrefix}/{EditModeType.Update.Name}/{context.Id}")" />
                            <DeleteGridButton ConfirmMessage="@context.DeleteText"
                                              OnDelete="@(_ => Delete(context.Id))"
                                              ShowConfirm="true" />
                        </MudTd>
                    </RowTemplate>
                    <PagerContent>
                        <MudTablePager />
                    </PagerContent>
                </MudTable>
        </DivPad2>
</PageView>