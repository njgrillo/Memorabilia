@inherits EditItem<SavePersonViewModel, PersonViewModel>

<EditPage ContinueNavigationPath="@ViewModel.ContinueNavigationPath"
          EditMode="ViewModel.EditModeType"
          ExitNavigationPath="@ViewModel.ExitNavigationPath"
          ImagePath="@ViewModel.ImagePath"
          ItemName="@ViewModel.ItemTitle"
          Model="ViewModel"
          OnLoad="OnLoad"
          OnSave="HandleValidSubmit"
          PageFooterButtonText="@ViewModel.ExitButtonText"
          PageFooterNavigationPath="@ViewModel.BackNavigationPath"
          PageTitle="@ViewModel.PageTitle"
          TItem="SavePersonViewModel"
          UseMultipleButtons="true">
    <TimelineContent>
        <PersonTimeline EditMode="ViewModel.EditModeType"
                        PersonId="ViewModel.Id"
                        PersonStep="ViewModel.PersonStep" />
    </TimelineContent>
    <Content>        
        <DivRowCol3>
            <Content>
                <TextField Label="First Name"
                           OnBlur="OnNameFieldBlur"
                           SelectedText="@ViewModel.FirstName"
                           SelectedTextChanged="@((p) => ViewModel.FirstName = p)" />
            </Content>
            <ContentColumn2>
                <TextField Label="Last Name"
                           OnBlur="OnNameFieldBlur"
                           SelectedText="@ViewModel.LastName"
                           SelectedTextChanged="@((p) => ViewModel.LastName = p)" />
            </ContentColumn2>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <TextField Label="Middle Name"
                           SelectedText="@ViewModel.MiddleName"
                           SelectedTextChanged="@((p) => ViewModel.MiddleName = p)" />
            </Content>
            <ContentColumn2>
                <TextField Label="Suffix"
                           OnBlur="OnNameFieldBlur"
                           SelectedText="@ViewModel.Suffix"
                           SelectedTextChanged="@((p) => ViewModel.Suffix = p)" />
            </ContentColumn2>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <TextField Label="Calling Name"
                           OnBlur="OnNameFieldBlur"
                           SelectedText="@ViewModel.Nickname"
                           SelectedTextChanged="@((p) => ViewModel.Nickname = p)" />
            </Content>
            <ContentColumn2>
                <TextField Label="Legal Name"
                           SelectedText="@ViewModel.LegalName"
                           SelectedTextChanged="@((p) => ViewModel.LegalName = p)" />
            </ContentColumn2>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <TextField Label="Display Name"
                           SelectedText="@ViewModel.DisplayName"
                           SelectedTextChanged="@((p) => ViewModel.DisplayName = p)" />
            </Content>
            <ContentColumn2>
                <TextField Label="Profile Name"
                           SelectedText="@ViewModel.ProfileName"
                           SelectedTextChanged="@((p) => ViewModel.ProfileName = p)" />
            </ContentColumn2>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <MudDatePicker @bind-Date="ViewModel.BirthDate"
                               DateFormat="MM/dd/yyyy"
                               Editable="true"
                               Label="Birth Date"
                               Mask="@(new DateMask("MM/dd/yyyy"))"
                               Variant="Variant.Outlined" />
            </Content>
            <ContentColumn2>
                <MudDatePicker @bind-Date="ViewModel.DeathDate"
                               DateFormat="MM/dd/yyyy"
                               Editable="true"
                               Label="Death Date"
                               Mask="@(new DateMask("MM/dd/yyyy"))"
                               Variant="Variant.Outlined" />
            </ContentColumn2>
        </DivRowCol3>
        <DivRowCol12>
            <Content>
                <PersonNicknameEditor Nicknames="ViewModel.Nicknames" />
            </Content>
        </DivRowCol12>
    </Content>
</EditPage>