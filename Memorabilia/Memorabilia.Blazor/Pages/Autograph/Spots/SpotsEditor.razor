@inherits AutographItem<SpotEditModel>

<EditPage ContinueNavigationPath="@ViewModel.ContinueNavigationPath"
          EditMode="ViewModel.EditModeType"
          ExitNavigationPath="@ViewModel.ExitNavigationPath"
          ImageFileName="@ViewModel.ImageFileName"
          ItemName="@ViewModel.ItemTypeName"
          Model="ViewModel"
          OnLoad="OnLoad"
          OnSave="OnSave"
          PageFooterButtonText="@ViewModel.ExitButtonText"
          PageFooterNavigationPath="@ViewModel.BackNavigationPath"
          PageTitle="@ViewModel.PageTitle"
          TItem="SpotEditModel"
          UseMultipleButtons="true">
    <TimelineContent>
        <AutographTimeline AutographId="ViewModel.AutographId" 
                           AutographStep="ViewModel.AutographStep"  
                           DisplaySpot="ViewModel.CanHaveSpot" 
                           EditMode="ViewModel.EditModeType"
                           MemorabiliaId="ViewModel.MemorabiliaId" />
    </TimelineContent>
    <ImagePreview>
        <PrettyBlazor.Condition Evaluation="ViewModel.HasMemorabiliaImages">
            <Match>
                <ImagePanel ImageNames="@ViewModel.MemorabiliaImageNames"
                            PanelText="Memorabilia Images"
                            UserId="ViewModel.UserId" />
            </Match>
        </PrettyBlazor.Condition>
    </ImagePreview>
    <Content>
        <DivRowCol3>
            <Content>
                <ItemTypeSpotDropDown ItemType="@ViewModel.ItemType"
                                      SelectedValue="ViewModel.SpotId"
                                      SelectionChanged="(p) => ViewModel.SpotId = p" />
            </Content>
        </DivRowCol3>
    </Content>
</EditPage>