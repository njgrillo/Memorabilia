@inherits AutographItem<AutographImagesEditModel>

<Page OnLoad="OnLoad">
    <Content>
        <PageHeader PageTitle="@ViewModel.PageTitle" />
        <AutographTimeline AutographId="ViewModel.AutographId" 
                           AutographStep="ViewModel.AutographStep"  
                           DisplaySpot="ViewModel.CanHaveSpot" 
                           EditMode="ViewModel.EditModeType"
                           MemorabiliaId="ViewModel.MemorabiliaId" />
        <EditImages @ref="EditImages"
                    CanImportImages="true"
                    ContinueNavigationPath="@ViewModel.ContinueNavigationPath"
                    DomainImageRootPath="@DomainImageRootPath"
                    ExitNavigationPath="@ViewModel.ExitNavigationPath"
                    Images="@ViewModel.Images"
                    ImportButtonText="Import from Memorabilia"
                    MaximumAllowedFiles="10"
                    MaximumFileSize="10240000"
                    Model="ViewModel"
                    OnImport="OnImport"
                    OnLoad="OnLoad"
                    OnSave="OnSave"
                    PageTitle="@ViewModel.PageTitle"
                    ReplaceImages="false"
                    SaveButtonText="Save & Add Another Autograph"
                    TItem="AutographImagesEditModel"
                    UploadPath="@UploadPath"
                    UserId="@UserId">
            <AdditionalButtons>
                <SaveButton OnClick="SaveAndAddAutograph"
                            Text="Save & Add Autograph" />
                <SaveButton OnClick="SaveAndAddItem"
                            Text="Save & Add Item" />
            </AdditionalButtons>
        </EditImages>
        <PageFooter NavigationPath="@ViewModel.BackNavigationPath" />
    </Content>
</Page>