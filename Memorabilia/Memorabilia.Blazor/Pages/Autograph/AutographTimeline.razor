<DivRowCol12Center>
    <Timeline>
        <MudTimelineItem Color="AutographEditColor"
                         Variant="Variant.Filled">
            <ItemContent>
                <MudAlert Class="@_mudAlertClass"
                          OnClick="@(_ => Navigate())"
                          Severity="AutographEditAlertSeverity"
                          Style="@(GetMudAlertStyle(AutographStep.Autograph))">@AutographEditAlertTitle</MudAlert>
            </ItemContent>
        </MudTimelineItem>
        <MudTimelineItem Color="AutographInscriptionEditColor"
                         Variant="Variant.Filled">
            <ItemContent>
                <MudAlert Class="@_mudAlertClass"
                          OnClick="@(_ => Navigate("Inscriptions"))"
                          Severity="AutographInscriptionEditAlertSeverity"
                          Style="@(GetMudAlertStyle(AutographStep.Inscription))">@AutographInscriptionEditAlertTitle</MudAlert>
            </ItemContent>
        </MudTimelineItem>
        <MudTimelineItem Color="AutographAuthenticationEditColor"
                         Variant="Variant.Filled">
            <ItemContent>
                <MudAlert Class="@_mudAlertClass"
                          OnClick="@(_ => Navigate("Authentications"))"
                          Severity="AutographAuthenticationEditAlertSeverity"
                          Style="@(GetMudAlertStyle(AutographStep.Authentication))">@AutographAuthenticationEditAlertTitle</MudAlert>
            </ItemContent>
        </MudTimelineItem>
        <HiddenControl Visible="DisplaySpot">
            <MudTimelineItem Color="AutographSpotEditColor"
                             Variant="Variant.Filled">
                <ItemContent>
                    <MudAlert Class="@_mudAlertClass"
                              OnClick="@(_ => Navigate("Spot"))"
                              Severity="AutographSpotEditAlertSeverity"
                              Style="@(GetMudAlertStyle(AutographStep.Spot))">@AutographSpotEditAlertTitle</MudAlert>
                </ItemContent>
            </MudTimelineItem>
        </HiddenControl>
        <MudTimelineItem Color="AutographImageEditColor"
                         Variant="Variant.Filled">
            <ItemContent>
                <MudAlert Class="@_mudAlertClass"
                          OnClick="@(_ => Navigate("Image"))"
                          Severity="AutographImageEditAlertSeverity"
                          Style="@(GetMudAlertStyle(AutographStep.Image))">@AutographImageEditAlertTitle</MudAlert>
            </ItemContent>
        </MudTimelineItem>
    </Timeline>
</DivRowCol12Center>

