<MudTable Bordered="false"
          Dense="false"
          Filter="new Func<SuggestedInscriptionModel, bool>(FilterFunc1)"
          Hover="true"
          Items="Model.Items"
          Striped="true"
          Style="width:99%">
    <ToolBarContent>
        <ToolbarTitle Text="Suggested Inscriptions" />
        <MudSpacer />
        <ToolbarSearchField SearchText="@_search"
                            SearchTextChanged="@((p) => _search = p)" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Type</MudTh>
        <MudTh>Text</MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate Context="inscription">
        <MudTd DataLabel="Type">@inscription.InscriptionTypeName</MudTd>
        <MudTd DataLabel="Text">@inscription.Text</MudTd>
        <MudTd DataLabel="">
            <AddFab OnAdd="@(_ => Add(inscription))" />
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
