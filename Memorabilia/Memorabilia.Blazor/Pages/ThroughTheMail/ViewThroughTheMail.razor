<PageView AddRoute="@($"{NavigationPath.ThroughTheMail}/{Constant.EditModeType.Update.Name}/0")"
          AddTitle="Add Through the Mail"
          DisplayPageFooter="false"
          DisplayPageHeader="false"
          NavigationPath="@NavigationPath.ThroughTheMail"
          PageTitle="Through the Mail">
    <DivPad2>
        <TabControl>
            <TabPanel BadgeColor="MudBlazor.Color.Success"
                      BadgeData="_sentItemsCount"
                      DisplayBadge="true"
                      Text="Sent">
                <DivRowCol12>
                    <SentThroughTheMailGrid />
                </DivRowCol12>
            </TabPanel>
            <TabPanel BadgeColor="MudBlazor.Color.Success"
                      BadgeData="_receivedItemsCount"
                      DisplayBadge="true"
                      Text="Received">
                <DivRowCol12>
                    <ReceivedThroughTheMailGrid />
                </DivRowCol12>
            </TabPanel>
        </TabControl>
    </DivPad2>
</PageView>