<DivPad2>
    <ExpansionPanel Text="Membership Options">
        <Div Class="@DivClass.Row">
            <Div Class="@DivClass.Column6">
                <Div Class="@DivClass.FormGroup">
                    <Switch Checked="IsAutoRenew"
                            CheckedChanged="(p) => IsAutoRenew = p"
                            Label="Enroll in auto-renew?" />
                </Div>
            </Div>
        </Div>        
    </ExpansionPanel>
    <Div Style="@($"{Style.MarginTopPad1}{Style.MarginBottomPad1}")">
        <LeftRightSection>
            <Right>
                <RowStack>
                    <CustomButton Color="MudBlazor.Color.Success"
                                  OnClick="PaypalCheckout"
                                  Text="Paypal Checkout" />
                    <CustomButton Color="MudBlazor.Color.Success"
                                  OnClick="StripeCheckout"
                                  Text="Stripe Checkout" />
                </RowStack>                
            </Right>
        </LeftRightSection>
    </Div>
</DivPad2>
