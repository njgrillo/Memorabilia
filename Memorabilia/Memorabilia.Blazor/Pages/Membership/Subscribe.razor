<DivPad2>
    <Div Class="row">
        <Condition Evaluation="@(!IsUpgrade)">
            <Match>
                <Div Style="@($"width:{_featureWidth}%;")">
                    <SubscriberLevel OnSelect="OnFreeSelect"
                                     Role="@Memorabilia.Domain.Enums.Role.NonSubscriber"
                                     Title="Free" />

                </Div>
            </Match>
        </Condition>        
        <Div Style="@($"width:{_featureWidth}%;")">
            <SubscriberLevel OnSelect="OnTier1Select"
                             Role="@Memorabilia.Domain.Enums.Role.SubscriberTier1"
                             SubscriptionPrice="@_tier1Price"
                             Title="Tier 1: Casual Collector" />
        </Div>
        <Div Style="@($"width:{_featureWidth}%;")">
            <SubscriberLevel OnSelect="OnTier2Select"
                             Role="@Memorabilia.Domain.Enums.Role.SubscriberTier2"
                             SubscriptionPrice="@_tier2Price"
                             Title="Tier 2: Hardcore Collector" />
        </Div>
        <Div Style="@($"width:{_featureWidth}%;")">
            <SubscriberLevel OnSelect="OnPromoterSelect"
                             Role="@Memorabilia.Domain.Enums.Role.Promoter"
                             SubscriptionPrice="@_promoterPrice"
                             Title="Tier 3: Promoter" />
        </Div>
    </Div>
</DivPad2>
