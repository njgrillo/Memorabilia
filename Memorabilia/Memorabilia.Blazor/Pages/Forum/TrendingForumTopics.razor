<ExpansionPanel Text="Trending Topics">
    <HiddenControl Visible="Model.TrendingTopics.Any()">
        <Iterations Context="forumTopic"
                    Items="Model.TrendingTopics">
            <Div Class="row"
                 Style="margin-bottom:1%;">
                <Div Class="col-4">
                    <Text Typography="Typo.h6">
                        @forumTopic.ForumCategoryName @(forumTopic.Sport != null ? $" - {forumTopic.SportName}" : string.Empty)
                    </Text>
                </Div>
                <Div Class="col-6">
                    <Text Typography="Typo.h6">
                        @forumTopic.Subject
                    </Text>
                </Div>
                <Div Class="col-2">
                    <Fab Color="MudBlazor.Color.Primary"
                         OnClick="@(_ => NavigationManager.NavigateTo($"{NavigationPath.ForumTopic}/{DataProtectorService.EncryptId(forumTopic.Id)}"))"
                         Size="@MudBlazor.Size.Small"
                         StartIcon="@Icons.Material.Outlined.Edit"
                         TooltipText="View" />
                </Div>
            </Div>
        </Iterations>
    </HiddenControl>
    <Text Typography="Typo.h6"
          Visible="@(!Model.TrendingTopics.Any())">
        <Div Class="row">
            Nothing is trending right now.
        </Div>
    </Text>
</ExpansionPanel>