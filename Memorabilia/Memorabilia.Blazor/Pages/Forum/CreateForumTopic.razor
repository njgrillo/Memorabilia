<Div Style="margin-top:1%;margin-bottom:1%;margin-left:1%;margin-right:1%;">
    <Condition Evaluation="@(ValidationResultAlerts.Any())">
        <Match>
            <AlertPanel Alerts="ValidationResultAlerts" />
        </Match>
    </Condition>
    <Div Class="row">
        <Div Class="col-6">
            <ForumCategoryAutoComplete ResetValueOnEmptyText="false"
                                       SelectedValue="EditModel.ForumCategory"
                                       SelectionChanged="(c) => EditModel.ForumCategory = c" />
        </Div>
        <Div Class="col-3">
            <Condition Evaluation="@(EditModel.ForumCategory?.CanBeSportRelated ?? false)">
                <Match>
                    <SportAutoComplete SelectedValue="EditModel.Sport"
                                       SelectionChanged="(s) => EditModel.Sport = s" />
                </Match>
            </Condition>
        </Div>
    </Div>
    <br />
    <Div Class="row">
        <Div Class="col-12">
            <TextField Label="Subject"
                       SelectedText="@EditModel.Subject"
                       SelectedTextChanged="@((p) => EditModel.Subject = p)" />
        </Div>
    </Div>
    <br />
    <Div Class="row">
        <Div Class="col-12">
            <TextField Label="Message"
                       Lines="10"
                       SelectedText="@EditModel.Entry.Message"
                       SelectedTextChanged="@((p) => EditModel.Entry.Message = p)" />
        </Div>
    </Div>
    <br />
    <LeftRightSection>
        <Right>
            <SaveButton OnClick="Save"
                        Text="Create" />
        </Right>
    </LeftRightSection>
</Div>
