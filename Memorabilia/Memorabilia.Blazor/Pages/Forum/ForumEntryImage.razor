<Div Style="margin-top:1%;margin-left:1%;margin-right:1%;">
    <MudStack Row="true">
        <MudImage @onclick="OnImageClick"
                  Class="rounded-lg can-click"
                  Elevation="5"
                  Height="70"
                  ObjectFit="@ObjectFit.Cover"
                  Src="@Image.ImageData"
                  Width="70" />
        <Condition Evaluation="CanDelete">
            <Match>
                <MudTooltip Text="Delete Image">
                    <MudFab Color="MudBlazor.Color.Secondary"
                            Icon="@Icons.Material.Outlined.Delete"
                            OnClick="ShowDeleteConfirm"
                            Size="MudBlazor.Size.Small" />
                </MudTooltip>
            </Match>
        </Condition>        
    </MudStack>    
</Div>

