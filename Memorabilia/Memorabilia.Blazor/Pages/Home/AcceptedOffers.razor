<MudTable Bordered="false"
          Dense="false"
          Hover="true"
          Items="@Items"
          Striped="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Accepted Offers</MudText>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Buyer</MudTh>
        <MudTh>Seller</MudTh>
        <MudTh>Offer Date</MudTh>
        <MudTh>Amount</MudTh>
        <MudTh>Status</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Buyer">@context.BuyerName</MudTd>
        <MudTd DataLabel="Seller">@context.SellerName</MudTd>
        <MudTd DataLabel="OfferDate">@context.OfferDate.ToString("MM-dd-yyyy")</MudTd>
        <MudTd DataLabel="Amount">@(context.Amount.ToString("c"))</MudTd>
        <MudTd DataLabel="Status">@context.OfferStatusTypeName</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>