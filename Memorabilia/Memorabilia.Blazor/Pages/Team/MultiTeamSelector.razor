<DivRowFormGroup Class="@DivClass.Row">
    <RowStack Class="@DivClass.Column12"
              Style="@Style.MarginBottomPad1">
        <TeamAutoComplete ResetValueOnEmptyText="false"
                          SelectedValue="SelectedTeam"
                          SelectionChanged="(p) => SelectedTeam = p"
                          SportLeagueLevel="SportLeagueLevel" />
        <AddFab OnAdd="Add" />
    </RowStack>
</DivRowFormGroup>
<DivRowCol12 Style="@Style.MarginBottomPad1">
    <MudTable Bordered="false"
              Dense="false"
              Hover="true"
              Items="SelectedTeams.Where(team => !team.IsDeleted).ToList()"
              Striped="true">
        <NoRecordsContent>
            <NoRecords Text="No teams selected" />
        </NoRecordsContent>
        <HeaderContent>
            <MudTh>Team</MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Team">@context.DisplayName</MudTd>
            <TableDataRightAligned>
                <DeleteGridButton OnDelete="@(_ => context.IsDeleted = true)" />
            </TableDataRightAligned>
        </RowTemplate>
    </MudTable>
</DivRowCol12>