<DivRowFormGroup>
    <RowStack Class="@DivClass.Column6"
              Style="@Style.MarginBottomPad1">
        <ChampionshipTypeDropDown SelectedValue="Model.ChampionshipTypeId"
                                  SelectionChanged="(p) => Model.ChampionshipTypeId = p"
                                  SportLeagueLevel="SportLeagueLevel" />
        <TextField HelperText="Ex. 1999 or 1999-2002 or 2003, 2005-2008"
                   Label="Years"
                   SelectedText="@_years"
                   SelectedTextChanged="@((p) => _years = p)" />
        <AddFab OnAdd="Add" />
    </RowStack>
</DivRowFormGroup>
<Div Class="@DivClass.Row">
    <Div Class="@DivClass.Column6">
        <MudTable Bordered="false"
                  Dense="false" 
                  Hover="true"
                  Items="Championships.Where(championship => !championship.IsDeleted).OrderBy(championship => championship.Year).ToList()"    
                  Striped="true">
            <HeaderContent>
                <MudTh>Championship Type</MudTh>
                <MudTh>Year</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Championship Type">@context.ChampionshipTypeName</MudTd>
                <MudTd DataLabel="Year">@context.Year</MudTd>
                <MudTd>
                    <DeleteGridButton OnDelete="@(_ => context.IsDeleted = true)" />
                </MudTd>
            </RowTemplate>
        </MudTable>
    </Div>
</Div>