<DivRowFormGroup Class="@Class">
     <RowStack Class="@DivClass.Column12"
               Style="@Style.MarginBottomPad1">
        <TeamSearchAutoComplete SelectedValue="SelectedTeam"
                                SelectionChanged="(p) => SelectedTeam = p" />
        <AddFab OnAdd="Add" />
     </RowStack>       
</DivRowFormGroup>
<DivRowCol12>
    <MudTable Bordered="false"
              Dense="false"
              Hover="true"
              Items="SelectedTeams.ToList()"
              Striped="true">
        <NoRecordsContent>
            <NoRecords Text="No teams selected" />
        </NoRecordsContent>
        <HeaderContent>
            <MudTh>Selected Teams</MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Team">@context.ToString()</MudTd>
            <TableDataRightAligned>
                <DeleteGridButton OnDelete="@(_ => RemoveTeam(context))" />
            </TableDataRightAligned>
        </RowTemplate>
    </MudTable>
</DivRowCol12>
