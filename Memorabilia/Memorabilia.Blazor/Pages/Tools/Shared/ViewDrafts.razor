@inherits ViewSportTools<DraftModel>

<DivPad2>
    <Content>
        <DivRowCol3>
            <Content>
                <FranchiseAutoComplete SelectedValue="_viewModel.Franchise"
                                       SelectionChanged="(p) => OnInputChange(p)"
                                       Sports="@(new [] { Sport })" />
            </Content>
        </DivRowCol3>
        <DivRowCol6 Hidden="@(_viewModel.Franchise == null)">
            <Content>
                <MudTable Bordered="false"
                          Dense="false"
                          Filter="new Func<DraftModel,bool>(FilterFunc1)"
                          Hover="true"
                          Items="@_viewModel.Drafts.ToList()"
                          Striped="true">
                    <ToolBarContent>
                        <MudText Typo="Typo.h6">@_viewModel.ResultsTitle</MudText>
                        <MudSpacer />
                        <MudTextField @bind-Value="Search"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.Search"
                                      Class="mt-0"
                                      IconSize="MudBlazor.Size.Medium"
                                      Placeholder="Search" />
                    </ToolBarContent>
                    <HeaderContent>
                        <MudTh></MudTh>
                        <MudTh>Person</MudTh>
                        <MudTh>Franchise</MudTh>
                        <MudTh>Year</MudTh>
                        <MudTh>Round</MudTh>
                        <MudTh>Pick</MudTh>
                        <MudTh>Overall</MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="">
                            <MudTooltip>
                                <MudImage @onclick="@(_ => NavigationManager.NavigateTo(context.ProfileLink))"
                                          Class="rounded-lg can-click"
                                          Elevation="5"
                                          Height="200"
                                          ObjectFit="@ObjectFit.Cover"
                                          Src="@(GetImageData(context.PersonImageFileName))"
                                          Width="200" />
                            </MudTooltip>
                        </MudTd>
                        <MudTd DataLabel="Person">
                            <MudLink Href="@context.ProfileLink">@context.PersonName</MudLink>
                        </MudTd>
                        <MudTd DataLabel="Franchise">@context.FranchiseName</MudTd>
                        <MudTd DataLabel="Year">@context.Year</MudTd>
                        <MudTd DataLabel="Round">@context.Round</MudTd>
                        <MudTd DataLabel="Pick">@context.Pick</MudTd>
                        <MudTd DataLabel="Overall">@context.Overall</MudTd>
                    </RowTemplate>
                    <PagerContent>
                        <MudTablePager />
                    </PagerContent>
                </MudTable>
            </Content>
        </DivRowCol6>
    </Content>
</DivPad2>
