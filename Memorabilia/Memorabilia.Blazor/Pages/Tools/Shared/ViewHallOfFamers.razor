@inherits ViewSportTools<HallOfFameViewModel>

<DivPad2>
    <Content>
        <DivRowCol3>
            <Content>
                <YearDropDown MinYear="1936"
                              SelectedValue="_viewModel.InductionYear"
                              SelectionChanged="(p) => OnInputChange(p)" />
            </Content>
        </DivRowCol3>
        <DivRowCol6>
            <Content>
                <MudTable Bordered="false"
                          Dense="false"
                          Filter="new Func<HallOfFameViewModel,bool>(FilterFunc1)"
                          Hover="true"
                          Items="@_viewModel.HallOfFames.ToList()"
                          Striped="true">
                    <ToolBarContent>
                        <MudText Typo="Typo.h6">@_viewModel.ResultsTitle</MudText>
                        <MudSpacer />
                        <MudTextField @bind-Value="Search"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.Search"
                                      Class="mt-0"
                                      IconSize="MudBlazor.Size.Medium"
                                      Placeholder="Search" />
                    </ToolBarContent>
                    <HeaderContent>
                        <MudTh></MudTh>
                        <MudTh>Person</MudTh>
                        <MudTh>Induction Year</MudTh>
                        <MudTh hidden="@(!DisplayVotePercentage)">Vote Percentage</MudTh>
                        <MudTh hidden="@(!DisplayBallot)">Ballot</MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="">
                            <MudTooltip>
                                <MudImage @onclick="@(_ => NavigationManager.NavigateTo(context.ProfileLink))"
                                          Class="rounded-lg can-click"
                                          Elevation="5"
                                          Height="200"
                                          ObjectFit="@ObjectFit.Cover"
                                          Src="@(GetImageData(context.PersonImageFileName))"
                                          Width="200" />
                            </MudTooltip>
                        </MudTd>
                        <MudTd DataLabel="Person">
                            <MudLink Href="@context.ProfileLink">@context.PersonName</MudLink>
                        </MudTd>
                        <MudTd DataLabel="InductionYear">@context.InductionYear</MudTd>
                        <MudTd hidden="@(!DisplayVotePercentage)" DataLabel="VotePercentage">@context.VotePercentage</MudTd>
                        <MudTd hidden="@(!DisplayBallot)" DataLabel="BallotNumber">@context.BallotNumber</MudTd>
                    </RowTemplate>
                    <PagerContent>
                        <MudTablePager />
                    </PagerContent>
                </MudTable>
            </Content>
        </DivRowCol6>
    </Content>
</DivPad2>
