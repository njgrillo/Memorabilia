@inherits ViewSportTools<PersonCollegeModel>

<DivPad2>
    <Content>
        <DivRowCol3>
            <Content>
                <CollegeAutoComplete ResetValueOnEmptyText="false" 
                                     SelectedValue="_viewModel.College"
                                     SelectionChanged="(college) => OnInputChange(college)" />
            </Content>
        </DivRowCol3>
        <DivRowCol6 Hidden="@(_viewModel.College?.Id == null)">
            <Content>
                <MudTable Bordered="false"
                          Dense="false"
                          Filter="new Func<PersonCollegeModel,bool>(FilterFunc1)"
                          Hover="true"
                          Items="@_viewModel.Colleges.ToList()"
                          Striped="true">
                    <ToolBarContent>
                        <MudText Typo="Typo.h6">@_viewModel.ResultsTitle</MudText>
                        <MudSpacer />
                        <MudTextField @bind-Value="Search"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.Search"
                                      Class="mt-0"
                                      IconSize="MudBlazor.Size.Medium"
                                      Placeholder="Search" />
                    </ToolBarContent>
                    <HeaderContent>
                        <MudTh></MudTh>
                        <MudTh>Person</MudTh>
                        <MudTh>College</MudTh>
                        <MudTh>Begin Year</MudTh>
                        <MudTh>End Year</MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="">
                            <MudTooltip>
                                <MudImage @onclick="@(_ => NavigationManager.NavigateTo(context.ProfileLink))"
                                          Class="rounded-lg can-click"
                                          Elevation="5"
                                          Height="200"
                                          ObjectFit="@ObjectFit.Cover"
                                          Src="@(GetImageData(context.PersonImageFileName))"
                                          Width="200" />
                            </MudTooltip>
                        </MudTd>
                        <MudTd DataLabel="Person">
                            <MudLink Href="@context.ProfileLink">@context.PersonName</MudLink>
                        </MudTd>
                        <MudTd DataLabel="College">@context.CollegeName</MudTd>
                        <MudTd DataLabel="Begin Year">@context.BeginYear</MudTd>
                        <MudTd DataLabel="End Year">@context.EndYear</MudTd>
                    </RowTemplate>
                    <PagerContent>
                        <MudTablePager />
                    </PagerContent>
                </MudTable>
            </Content>
        </DivRowCol6>
    </Content>
</DivPad2>
