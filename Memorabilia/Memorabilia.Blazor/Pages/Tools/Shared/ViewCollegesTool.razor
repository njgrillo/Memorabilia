@inherits ViewSportTools<PersonCollegeModel>

<DivPad2>
    <ExpansionPanel Text="@($"{Sport?.Name} Players by College")">
        <DivRowCol12>
            <MudTable Bordered="false"
                      Dense="false"
                      Filter="new Func<PersonCollegeModel,bool>(FilterFunc1)"
                      Hover="true"
                      Items="Model.Colleges.ToList()"
                      Striped="true">
                <NoRecordsContent>
                    <NoRecords Text="No Players Found" />
                </NoRecordsContent>
                <ToolBarContent>
                    <LeftRightSection LeftStyle="width:50%;"
                                      RightStyle="width:25%;"
                                      Style="@Style.MarginPad1">
                        <Left>
                            <RowStack>
                                <CollegeAutoComplete ResetValueOnEmptyText="false"
                                                     SelectedValue="Model.College"
                                                     SelectionChanged="(college) => OnInputChange(college)" />
                                <CustomButton ButtonType="MudBlazor.ButtonType.Button"
                                              OnClick="Browse"
                                              Size="MudBlazor.Size.Small"
                                              Text="View All" />
                            </RowStack>
                        </Left>
                        <Right>
                            <ToolbarSearchField SearchText="@Search"
                                                SearchTextChanged="@((p) => Search = p)" />
                        </Right>
                    </LeftRightSection>
                </ToolBarContent>
                <HeaderContent>
                    <MudTh></MudTh>
                    <MudTh>
                        <MudTableSortLabel SortBy="new Func<PersonCollegeModel, object>(x => x.PersonName)">Person</MudTableSortLabel>
                    </MudTh>
                    <MudTh>
                        <MudTableSortLabel SortBy="new Func<PersonCollegeModel, object>(x => x.CollegeName)">College</MudTableSortLabel>
                    </MudTh>
                    <MudTh>Begin Year</MudTh>
                    <MudTh>End Year</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd>
                        <PersonGridImage ImageData="@(ImageService.GetPersonImageData(context.PersonImageFileName))"
                                         ImageLoaded="StateHasChanged"
                                         PersonId="context.PersonId" />
                    </MudTd>
                    <MudTd DataLabel="Person">
                        @context.PersonName
                    </MudTd>
                    <MudTd DataLabel="College">@context.CollegeName</MudTd>
                    <MudTd DataLabel="Begin Year">@context.BeginYear</MudTd>
                    <MudTd DataLabel="End Year">@context.EndYear</MudTd>
                </RowTemplate>
                <PagerContent>
                    <MudTablePager />
                </PagerContent>
            </MudTable>
        </DivRowCol12>
    </ExpansionPanel>
</DivPad2>
