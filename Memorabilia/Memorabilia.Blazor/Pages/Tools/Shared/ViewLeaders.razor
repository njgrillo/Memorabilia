@inherits ViewSportTools<LeaderViewModel>

<DivPad2>
    <Content>
        <DivRowCol3>
            <Content>
                <LeaderTypeAutoComplete ResetValueOnEmptyText="false"
                                        SelectedValue="_viewModel.LeaderType"
                                        SelectionChanged="(leaderType) => OnInputChange(leaderType)"
                                        SportLeagueLevel="@SportLeagueLevel" />
            </Content>
        </DivRowCol3>
        <DivRowCol6 Hidden="@(_viewModel.LeaderType?.Id == null)">
            <Content>
                <MudTable Bordered="false"
                          Dense="false"
                          Filter="new Func<LeaderViewModel,bool>(FilterFunc1)"
                          Hover="true"
                          Items="@_viewModel.Leaders.ToList()"
                          Striped="true">
                    <ToolBarContent>
                        <MudText Typo="Typo.h6">@_viewModel.ResultsTitle</MudText>
                        <MudSpacer />
                        <MudTextField @bind-Value="Search"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.Search"
                                      Class="mt-0"
                                      IconSize="MudBlazor.Size.Medium"
                                      Placeholder="Search" />
                    </ToolBarContent>
                    <HeaderContent>
                        <MudTh></MudTh>
                        <MudTh>Person</MudTh>
                        <MudTh>Leader Type</MudTh>
                        <MudTh>Year</MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="">
                            <MudTooltip>
                                <MudImage @onclick="@(_ => NavigationManager.NavigateTo(context.ProfileLink))" 
                                          Class="rounded-lg can-click"
                                          Elevation="5"
                                          Height="200"
                                          ObjectFit="@ObjectFit.Cover"
                                          Src="@(GetImageData(context.PersonImageFileName))"
                                          Width="200" />
                            </MudTooltip>
                        </MudTd>
                        <MudTd DataLabel="Person">
                            <MudLink Href="@context.ProfileLink">@context.PersonName</MudLink>
                        </MudTd>
                        <MudTd DataLabel="LeaderType">@context.LeaderTypeName</MudTd>
                        <MudTd DataLabel="Year">@context.Year</MudTd>
                    </RowTemplate>
                    <PagerContent>
                        <MudTablePager />
                    </PagerContent>
                </MudTable>
            </Content>
        </DivRowCol6>
    </Content>
</DivPad2>
