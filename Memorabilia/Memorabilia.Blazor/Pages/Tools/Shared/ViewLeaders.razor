@inherits ViewSportTools<LeaderModel>

<DivPad2>
    <ExpansionPanel Text="@($"{Sport?.Name} Leaders")">
        <DivRowCol12>
            <MudTable Bordered="false"
                      Dense="false"
                      Filter="new Func<LeaderModel,bool>(FilterFunc1)"
                      Hover="true"
                      Items="Model.Leaders.ToList()"
                      Striped="true">
                <NoRecordsContent>
                    <NoRecords Text="No Players Found" />
                </NoRecordsContent>
                <ToolBarContent>
                    <LeftRightSection LeftStyle="width:50%;"
                                      RightStyle="width:25%;"
                                      Style="@Style.MarginPad1">
                        <Left>
                            <RowStack>
                                <LeaderTypeAutoComplete ResetValueOnEmptyText="false"
                                                        SelectedValue="Model.LeaderType"
                                                        SelectionChanged="(leaderType) => OnInputChange(leaderType)"
                                                        Sports="@(new [] { Sport })" />
                                <CustomButton ButtonType="MudBlazor.ButtonType.Button"
                                              OnClick="Browse"
                                              Size="MudBlazor.Size.Small"
                                              Text="View All" />
                            </RowStack>
                        </Left>
                        <Right>
                            <ToolbarSearchField SearchText="@Search"
                                                SearchTextChanged="@((p) => Search = p)" />
                        </Right>
                    </LeftRightSection>
                </ToolBarContent>
                <HeaderContent>
                    <MudTh></MudTh>
                    <MudTh>
                        <MudTableSortLabel SortBy="new Func<LeaderModel, object>(x => x.PersonName)">Person</MudTableSortLabel>
                    </MudTh>
                    <MudTh>Leader Type</MudTh>
                    <MudTh>Year</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd>
                        <PersonGridImage ImageData="@(ImageService.GetPersonImageData(context.PersonImageFileName))"
                                         ImageLoaded="StateHasChanged"
                                         PersonId="context.PersonId" />
                    </MudTd>
                    <MudTd DataLabel="Person">
                        @context.PersonName
                    </MudTd>
                    <MudTd DataLabel="LeaderType">@context.LeaderTypeName</MudTd>
                    <MudTd DataLabel="Year">@context.Year</MudTd>
                </RowTemplate>
                <PagerContent>
                    <MudTablePager />
                </PagerContent>
            </MudTable>
        </DivRowCol12>
    </ExpansionPanel>
</DivPad2>
