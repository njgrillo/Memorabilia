@inherits ViewSportTools<InternationalHallOfFameModel>

<DivPad2>
    <Div Class="row">
        <Div Class="col-3">
            <InternationalHallOfFameTypeDropDown SelectedValue="Model.InternationalHallOfFameTypeId"
                                                 SelectionChanged="(p) => OnInputChange(p)" />
        </Div>
    </Div>
    <br />
    <Div Class="row" 
         Hidden="@(Model.InternationalHallOfFameTypeId == 0)">
        <Div Class="col-12">
            <MudTable Bordered="false"
                      Dense="false"
                      Filter="new Func<InternationalHallOfFameModel,bool>(FilterFunc1)"
                      Hover="true"
                      Items="@Model.InternationalHallOfFames.ToList()"
                      Striped="true">
                <ToolBarContent>
                    <ToolbarTitle Text="@Model.ResultsTitle" />
                    <MudSpacer />
                    <MudTextField @bind-Value="Search"
                                  Adornment="Adornment.Start"
                                  AdornmentIcon="@Icons.Material.Filled.Search"
                                  Class="mt-0"
                                  IconSize="MudBlazor.Size.Medium"
                                  Placeholder="Search" />
                </ToolBarContent>
                <HeaderContent>
                    <MudTh></MudTh>
                    <MudTh>
                        <MudTableSortLabel SortBy="new Func<InternationalHallOfFameModel, object>(x => x.PersonName)">Person</MudTableSortLabel>
                    </MudTh>
                    <MudTh>Type</MudTh>
                    <MudTh>Induction Year</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="">
                        <MudTooltip>
                            <MudImage @onclick="@(_ => ShowPersonProfileDialog(context.PersonId))"
                                      Class="rounded-lg can-click"
                                      Elevation="5"
                                      Height="200"
                                      ObjectFit="@ObjectFit.Cover"
                                      Src="@(ImageService.GetPersonImageData(context.PersonImageFileName))"
                                      Width="200" />
                        </MudTooltip>
                    </MudTd>
                    <MudTd DataLabel="Person">
                        <MudLink Href="@context.ProfileLink">@context.PersonName</MudLink>
                    </MudTd>
                    <MudTd DataLabel="InternationalHallOfFameTypeName">@context.InternationalHallOfFameTypeName</MudTd>
                    <MudTd DataLabel="InductionYear">@context.InductionYear</MudTd>
                </RowTemplate>
                <PagerContent>
                    <MudTablePager />
                </PagerContent>
            </MudTable>
        </Div>
    </Div>
</DivPad2>
