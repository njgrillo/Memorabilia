@inherits ViewSportTools<InternationalHallOfFameModel>

<DivPad2>
    <ExpansionPanel Text="@($"{Sport?.Name} International Hall of Famers")">
        <DivRowCol12>
            <MudTable Bordered="false"
                      Dense="false"
                      Filter="new Func<InternationalHallOfFameModel,bool>(FilterFunc1)"
                      Hover="true"
                      Items="Model.InternationalHallOfFames.ToList()"
                      Striped="true">
                <NoRecordsContent>
                    <NoRecords Text="No Players Found" />
                </NoRecordsContent>
                <ToolBarContent>
                    <LeftRightSection LeftStyle="width:50%;"
                                      RightStyle="width:25%;"
                                      Style="@Style.MarginPad1">
                        <Left>
                            <InternationalHallOfFameTypeDropDown SelectedValue="Model.InternationalHallOfFameTypeId"
                                                                 SelectionChanged="(p) => OnInputChange(p)" />
                        </Left>
                        <Right>
                            <ToolbarSearchField SearchText="@Search"
                                                SearchTextChanged="@((p) => Search = p)" />
                        </Right>
                    </LeftRightSection>
                </ToolBarContent>
                <HeaderContent>
                    <MudTh></MudTh>
                    <MudTh>
                        <MudTableSortLabel SortBy="new Func<InternationalHallOfFameModel, object>(x => x.PersonName)">Person</MudTableSortLabel>
                    </MudTh>
                    <MudTh>Type</MudTh>
                    <MudTh>Induction Year</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd>
                        <PersonGridImage ImageData="@(ImageService.GetPersonImageData(context.PersonImageFileName))"
                                         ImageLoaded="StateHasChanged"
                                         PersonId="context.PersonId" />
                    </MudTd>
                    <MudTd DataLabel="Person">
                        @context.PersonName
                    </MudTd>
                    <MudTd DataLabel="InternationalHallOfFameTypeName">@context.InternationalHallOfFameTypeName</MudTd>
                    <MudTd DataLabel="InductionYear">@context.InductionYear</MudTd>
                </RowTemplate>
                <PagerContent>
                    <MudTablePager />
                </PagerContent>
            </MudTable>
        </DivRowCol12>
    </ExpansionPanel>
</DivPad2>
