@inherits ViewSportTools<CareerRecordModel>

<DivPad2>
    <Content>
        <DivRowCol6>
            <Content>
                <MudTable Bordered="false"
                          Dense="false"
                          Filter="new Func<CareerRecordModel,bool>(FilterFunc1)"
                          Hover="true"
                          Items="@_viewModel.CareerRecords.ToList()"
                          Striped="true">
                    <ToolBarContent>
                        <MudText Typo="Typo.h6">Career Records</MudText>
                        <MudSpacer />
                        <MudTextField @bind-Value="Search"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.Search"
                                      Class="mt-0"
                                      IconSize="MudBlazor.Size.Medium"
                                      Placeholder="Search" />
                    </ToolBarContent>
                    <HeaderContent>
                        <MudTh>Record Type</MudTh>
                        <MudTh>Record</MudTh>
                        <MudTh></MudTh>
                        <MudTh>Person</MudTh>                        
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="RecordType">@context.CareerRecordTypeName</MudTd>
                        <MudTd DataLabel="Record">@context.Record</MudTd>
                        <MudTd DataLabel="">
                            <MudTooltip>
                                <MudImage @onclick="@(_ => NavigationManager.NavigateTo(context.ProfileLink))"
                                          Class="rounded-lg can-click"
                                          Elevation="5"
                                          Height="200"
                                          ObjectFit="@ObjectFit.Cover"
                                          Src="@(GetImageData(context.PersonImageFileName))"
                                          Width="200" />
                            </MudTooltip>
                        </MudTd>
                        <MudTd DataLabel="Person">
                            <MudLink Href="@context.ProfileLink">@context.PersonName</MudLink>
                        </MudTd>                        
                    </RowTemplate>
                    <PagerContent>
                        <MudTablePager />
                    </PagerContent>
                </MudTable>
            </Content>
        </DivRowCol6>
    </Content>
</DivPad2>
