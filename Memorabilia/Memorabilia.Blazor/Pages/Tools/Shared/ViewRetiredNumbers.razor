@inherits ViewSportTools<RetiredNumberModel>

<DivPad2>
    <Div Class="row">
        <Div Class="col-3">
            <FranchiseAutoComplete SelectedValue="Model.Franchise"
                                   SelectionChanged="(p) => OnInputChange(p)"
                                   Sports="@(new [] { Sport })" />
        </Div>
    </Div>
    <br />
    <Div Class="row" 
         Hidden="@(Model.Franchise == null)">
        <Div Class="col-12">
            <MudTable Bordered="false"
                      Dense="false"
                      Filter="new Func<RetiredNumberModel,bool>(FilterFunc1)"
                      Hover="true"
                      Items="@Model.RetiredNumbers.ToList()"
                      Striped="true">
                <ToolBarContent>
                    <ToolbarTitle Text="@Model.ResultsTitle" />
                    <MudSpacer />
                    <ToolbarSearchField SearchText="@Search"
                                        SearchTextChanged="@((p) => Search = p)" />
                </ToolBarContent>
                <HeaderContent>
                    <MudTh></MudTh>
                    <MudTh>
                        <MudTableSortLabel SortBy="new Func<RetiredNumberModel, object>(x => x.PersonName)">Person</MudTableSortLabel>
                    </MudTh>
                    <MudTh>Franchise</MudTh>
                    <MudTh>
                        <MudTableSortLabel SortBy="new Func<RetiredNumberModel, object>(x => x.PlayerNumber)">Number</MudTableSortLabel>
                    </MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="">
                        <GridImage AllowNavigation="true"
                                   ImageData="@(ImageService.GetPersonImageData(context.PersonImageFileName))"
                                   ImageLoaded="StateHasChanged"
                                   OnClick="@(_ => ShowPersonProfileDialog(context.PersonId))" />
                    </MudTd>
                    <MudTd DataLabel="Person">
                        <Link Href="@context.ProfileLink">@context.PersonName</Link>
                    </MudTd>
                    <MudTd DataLabel="Franchise">@context.FranchiseName</MudTd>
                    <MudTd DataLabel="Number">@context.PlayerNumber</MudTd>
                </RowTemplate>
                <PagerContent>
                    <MudTablePager />
                </PagerContent>
            </MudTable>
        </Div>
    </Div>
</DivPad2>
