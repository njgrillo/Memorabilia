@inherits ViewSportTools<PlayerModel>

<DivPad2>
    <ExpansionPanel Text="@($"{Sport?.Name} Players by Franchise")">
        <DivRowCol12>
            <MudTable Bordered="false"
                      Dense="false"
                      Filter="new Func<PlayerModel,bool>(FilterFunc1)"
                      Hover="true"
                      Items="Model.Players.ToList()"
                      Striped="true">
                <NoRecordsContent>
                    <NoRecords Text="No Players Found" />
                </NoRecordsContent>
                <ToolBarContent>
                    <LeftRightSection LeftStyle="width:50%;"
                                      RightStyle="width:25%;"
                                      Style="@Style.MarginPad1">
                        <Left>
                            <FranchiseAutoComplete SelectedValue="Model.Franchise"
                                                   SelectionChanged="(p) => OnInputChange(p)"
                                                   Sports="@(new [] { Sport })" />
                        </Left>
                        <Right>
                            <ToolbarSearchField SearchText="@Search"
                                                SearchTextChanged="@((p) => Search = p)" />
                        </Right>
                    </LeftRightSection>
                </ToolBarContent>
                <HeaderContent>
                    <MudTh></MudTh>
                    <MudTh>
                        <MudTableSortLabel SortBy="new Func<PlayerModel, object>(x => x.PersonName)">Person</MudTableSortLabel>
                    </MudTh>
                    <MudTh>
                        <MudTableSortLabel SortBy="new Func<PlayerModel, object>(x => x.TeamName)">Team</MudTableSortLabel>
                    </MudTh>
                    <MudTh>Begin Year</MudTh>
                    <MudTh>End Year</MudTh>
                    <MudTh>Role</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd>
                        <PersonGridImage ImageData="@(ImageService.GetPersonImageData(context.PersonImageFileName))"
                                         ImageLoaded="StateHasChanged"
                                         PersonId="context.PersonId" />
                    </MudTd>
                    <MudTd DataLabel="Person">
                        @context.PersonName
                    </MudTd>
                    <MudTd DataLabel="Team">@context.TeamName</MudTd>
                    <MudTd DataLabel="BeginYear">@context.BeginYear</MudTd>
                    <MudTd DataLabel="EndYear">@context.EndYear</MudTd>
                    <MudTd DataLabel="Role">@context.TeamRoleTypeName</MudTd>
                </RowTemplate>
                <PagerContent>
                    <MudTablePager />
                </PagerContent>
            </MudTable>
        </DivRowCol12>
    </ExpansionPanel>
</DivPad2>
