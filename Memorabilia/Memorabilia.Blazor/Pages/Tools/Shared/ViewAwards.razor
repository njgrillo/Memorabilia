@inherits ViewSportTools<AwardModel>

<DivPad2>
    <ExpansionPanel Style="@Style.MarginBottomPad1" 
                    Text="Years without award"
                    Visible="@(Model.AwardExclusionYears.Any())">
        <DivRowCol12>
            <MudTable Bordered="false"
                      Dense="false"
                      Hover="true"
                      Items="Model.AwardExclusionYears.OrderBy(exclusion => exclusion.Year)"
                      Striped="true">
                <ToolBarContent>
                    <ToolbarTitle Text="No award given these years" />
                </ToolBarContent>
                <HeaderContent>
                    <MudTh>
                        <MudTableSortLabel SortBy="new Func<Entity.AwardExclusionYear, object>(x => x.Year)">Year</MudTableSortLabel>
                    </MudTh>
                    <MudTh>
                        <MudTableSortLabel SortBy="new Func<Entity.AwardExclusionYear, object>(x => x.Reason)">Reason</MudTableSortLabel>
                    </MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Year">@context.Year</MudTd>
                    <MudTd DataLabel="Reason">@context.Reason</MudTd>
                </RowTemplate>
                <PagerContent>
                    <MudTablePager />
                </PagerContent>
            </MudTable>
        </DivRowCol12>        
    </ExpansionPanel>
    <ExpansionPanel Text="@($"{(Model.Sport?.Name ?? "Multi Sport")} Award Winners")">
        <DivRowCol12>
            <MudTable Bordered="false"
                      Dense="false"
                      Filter="new Func<AwardModel,bool>(FilterFunc1)"
                      Hover="true"
                      Items="Model.PersonAwards.ToList()"
                      Striped="true">
                <NoRecordsContent>
                    <NoRecords Text="No Awards Found" />
                </NoRecordsContent>
                <ToolBarContent>
                    <LeftRightSection LeftStyle="width:50%;"
                                      RightStyle="width:25%;"
                                      Style="@Style.MarginPad1">
                        <Left>
                            <RowStack>
                                <AwardTypeAutoComplete IsMultiSport="@(Sport == null)"
                                                       ResetValueOnEmptyText="false"
                                                       SelectedValue="Model.AwardType"
                                                       SelectionChanged="(awardType) => OnInputChange(awardType)"
                                                       Sports="@(new [] { Sport })" />
                                <CustomButton ButtonType="MudBlazor.ButtonType.Button"
                                              OnClick="Browse"
                                              Size="MudBlazor.Size.Small"
                                              Text="View All" />
                            </RowStack>
                        </Left>
                        <Right>
                            <ToolbarSearchField SearchText="@Search"
                                                SearchTextChanged="@((p) => Search = p)" />
                        </Right>
                    </LeftRightSection>
                </ToolBarContent>
                <HeaderContent>
                    <MudTh></MudTh>
                    <MudTh>
                        <MudTableSortLabel SortBy="new Func<AwardModel, object>(x => x.PersonName)">Person</MudTableSortLabel>
                    </MudTh>
                    <MudTh>
                        <MudTableSortLabel SortBy="new Func<AwardModel, object>(x => x.Year)">Year</MudTableSortLabel>
                    </MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd>
                        <PersonGridImage ImageData="@(ImageService.GetPersonImageData(context.PersonImageFileName))"
                                         ImageLoaded="StateHasChanged"
                                         PersonId="context.PersonId" />
                    </MudTd>
                    <MudTd DataLabel="Person">
                        @context.PersonName
                    </MudTd>
                    <MudTd DataLabel="Year">@context.Year</MudTd>
                </RowTemplate>
                <PagerContent>
                    <MudTablePager />
                </PagerContent>
            </MudTable>
        </DivRowCol12>
    </ExpansionPanel>
</DivPad2>
