@inherits ViewSportTools<SingleSeasonFranchiseRecordModel>

<DivPad2>
    <ExpansionPanel Text="@Sport?.Name">
        <DivRowCol12>
            <MudTable Bordered="false"
                      Dense="false"
                      Filter="new Func<SingleSeasonFranchiseRecordModel,bool>(FilterFunc1)"
                      Hover="true"
                      Items="Model.SingleSeasonFranchiseRecords.ToList()"
                      Striped="true">
                <NoRecordsContent>
                    <NoRecords Text="No Franchise Records Found" />
                </NoRecordsContent>
                <ToolBarContent>
                    <LeftRightSection LeftStyle="width:50%;"
                                      RightStyle="width:25%;"
                                      Style="@Style.MarginPad1">
                        <Left>
                            <FranchiseAutoComplete SelectedValue="Model.Franchise"
                                                   SelectionChanged="(p) => OnInputChange(p)"
                                                   Sports="@(new [] { Sport })" />
                        </Left>
                        <Right>
                            <ToolbarSearchField SearchText="@Search"
                                                SearchTextChanged="@((p) => Search = p)" />
                        </Right>
                    </LeftRightSection>
                </ToolBarContent>
                <HeaderContent>
                    <MudTh>
                        <MudTableSortLabel SortBy="new Func<SingleSeasonFranchiseRecordModel, object>(x => x.SingleSeasonRecordTypeName)">Record Type</MudTableSortLabel>
                    </MudTh>
                    <MudTh>Record</MudTh>
                    <MudTh>
                        <MudTableSortLabel SortBy="new Func<SingleSeasonFranchiseRecordModel, object>(x => x.PersonName)">Person</MudTableSortLabel>
                    </MudTh>
                    <MudTh>Year</MudTh>
                    <MudTh></MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="RecordType">@context.SingleSeasonRecordTypeName</MudTd>
                    <MudTd DataLabel="Record">@context.Record</MudTd>
                    <MudTd DataLabel="Person">
                        @context.PersonName
                    </MudTd>
                    <MudTd DataLabel="Year">@(context.Year > 0 ? context.Year : string.Empty)</MudTd>
                    <MudTd>
                        <PersonGridImage ImageData="@(ImageService.GetPersonImageData(context.PersonImageFileName))"
                                         ImageLoaded="StateHasChanged"
                                         PersonId="context.PersonId" />
                    </MudTd>
                </RowTemplate>
                <PagerContent>
                    <MudTablePager />
                </PagerContent>
            </MudTable>
        </DivRowCol12>
    </ExpansionPanel>
</DivPad2>
