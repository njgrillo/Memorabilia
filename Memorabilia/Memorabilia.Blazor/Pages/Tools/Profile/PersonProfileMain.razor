<Div Class="row"
     Style="margin-left:1%;margin-top:1%;"
     Visible="@(Model != null)">
    <Div Class="col-3">
        <Div Style="margin-left:1%">
            <Text Typography="Typo.h4">
                <b>@Model.NameHeader</b>
            </Text>
            <Text Typography="Typo.h6">
                @Model.Nicknames
            </Text>
            <br />
            <Text Typography="Typo.h6">
                @Model.LifespanHeader
            </Text>
        </Div>
        <Image Class="rounded-lg ma-4"
               Elevation="25"
               Height="520"
               ImageData="@(ImageService.GetPersonImageData(Model.PersonImageFileName))"
               Width="400" />
        <Condition Evaluation="_person.Colleges.Any()">
            <Match>
                <CollegesProfile Person="@_person" />
                <br />
            </Match>
        </Condition>
        <Condition Evaluation="_person.CollegeHallOfFames.Any()">
            <Match>
                <CollegeHallOfFameProfile Person="@_person" />
                <br />
            </Match>
        </Condition>
        <Condition Evaluation="_person.InternationalHallOfFames.Any()">
            <Match>
                <InternationalHallOfFameProfile Person="@_person" />
                <br />
            </Match>
        </Condition>
        <Condition Evaluation="_person.CollegeRetiredNumbers.Any()">
            <Match>
                <CollegeRetiredNumbersProfile Person="@_person" />
                <br />
            </Match>
        </Condition>
        <Condition Evaluation="_person.RetiredNumbers.Any()">
            <Match>
                <FranchiseRetiredNumbersProfile Person="@_person" />
                <br />
            </Match>
        </Condition>
    </Div>
    <Div Class="col-8" 
         Style="margin-left:2%;margin-right:1%;">
        <OccupationsProfile Person="_person" />
    </Div>
</Div>
