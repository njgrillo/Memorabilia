@inherits PersonProfile 

<MudTable Bordered="false"
          Dense="false"
          Filter="new Func<AccomplishmentProfileModel,bool>(FilterFunc1)"
          Hover="true"
          Items="@Accomplishments"
          Striped="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6"><b>Accomplishments</b></MudText>
        <MudSpacer />
        <MudTextField @bind-Value="_search"
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      Class="mt-0"
                      IconSize="MudBlazor.Size.Medium"
                      Placeholder="Search" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Date/Year</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.AccomplishmentTypeName</MudTd>
            <MudTd DataLabel="Date/Year">@context.TimeFrame</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>