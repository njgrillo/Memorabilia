@inherits PersonProfile

<Condition Evaluation="@(ProfileTypes.Any())">
    <Match>
        <MudTabs ApplyEffectsToContainer="true"
                 Centered="false"
                 Elevation="2"
                 PanelClass="pa-6"
                 Rounded="true">
            <Iterations Context="profileType"
                        Items="ProfileTypes">
                <MudTabPanel BadgeColor="MudBlazor.Color.Success"
                             Text="@profileType.Name">
                    <DivRowCol12>
                        <Div>
                            <DynamicComponent Parameters="@Parameters"
                                              Type="@(GetComponent(profileType.Name))" />
                        </Div>
                    </DivRowCol12>
                </MudTabPanel>
            </Iterations>
        </MudTabs>
    </Match>
</Condition>
