@inherits PersonProfile

<MudTable Bordered="false"
          Dense="false"
          Filter="new Func<AwardProfileModel,bool>(FilterFunc1)"
          Hover="true"
          Items="@Awards"
          Striped="true">
    <ToolBarContent>
        <ToolbarTitle Text="Awards" />
        <MudSpacer />
        <ToolbarSearchField SearchText="@_search"
                            SearchTextChanged="@((p) => _search = p)" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Year</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.AwardTypeName</MudTd>
        <MudTd DataLabel="Year">@context.Year</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
