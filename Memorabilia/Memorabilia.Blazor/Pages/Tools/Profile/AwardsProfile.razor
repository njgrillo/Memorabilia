@inherits PersonProfile

<MudTable Bordered="false"
          Dense="false"
          Filter="new Func<AwardProfileViewModel,bool>(FilterFunc1)"
          Hover="true"
          Items="@Awards"
          Striped="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6"><b>Awards</b></MudText>
        <MudSpacer />
        <MudTextField @bind-Value="_search"
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      Class="mt-0"
                      IconSize="MudBlazor.Size.Medium"
                      Placeholder="Search" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Year</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.AwardTypeName</MudTd>
        <MudTd DataLabel="Year">@context.Year</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
