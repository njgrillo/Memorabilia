@inherits PersonProfile

<Div Class="row" 
     Style="overflow-y:auto;max-height:600px;">
    <Div Style="width:49%;">
        <Condition Evaluation="Person.Teams.Filter(Sport.Football, OccupationType).Any()">
            <Match>
                <br />
                <TeamsProfile Occupation="Occupation"
                              Person="Person"
                              Sport="Sport.Football" />
            </Match>
        </Condition>
        <Condition Evaluation="Person.Teams.HasChampionships(Sport.Football, OccupationType)">
            <Match>
                <br />
                <ChampionshipProfile Occupation="Occupation"
                                     Person="Person"
                                     Sport="Sport.Football" />
            </Match>
        </Condition>
        <Condition Evaluation="Person.HallOfFames.Filter(Sport.Football).Any()">
            <Match>
                <br />
                <SportHallOfFameProfile Person="Person"
                                        Sport="Sport.Football" />
            </Match>
        </Condition>
        <Condition Evaluation="Person.FranchiseHallOfFames.Filter(Sport.Football).Any()">
            <Match>
                <br />
                <FranchiseHallOfFameProfile Person="Person"
                                            Sport="Sport.Football" />
            </Match>
        </Condition>
    </Div>
    <Div Style="width:49%;margin-left:1%">
        <br />
        <AccomplishmentSummaryProfile Occupation="Occupation"
                                      Person="Person"
                                      Sport="Sport.Football" />
        <br />
        <Condition Evaluation="Person.Awards.Filter(Sport.Football, OccupationType).Any()">
            <Match>
                <AwardsProfile Occupation="Occupation"
                               Person="Person"
                               Sport="Sport.Football" />
                <br />
            </Match>
        </Condition>
        <Condition Evaluation="Person.CareerRecords.Filter(Sport.Football, OccupationType).Any()">
            <Match>
                <CareerRecordsProfile Person="Person"
                                      Sport="Sport.Football" />
                <br />
            </Match>
        </Condition>
        <Condition Evaluation="Person.SingleSeasonRecords.Filter(Sport.Football).Any()">
            <Match>
                <SingleSeasonRecordsProfile Person="Person"
                                            Sport="Sport.Football" />
                <br />
            </Match>
        </Condition>
    </Div>
</Div>