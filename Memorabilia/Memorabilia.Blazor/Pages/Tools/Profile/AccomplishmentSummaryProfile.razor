@inherits PersonProfile

<MudChipSet>
    <HiddenControl Visible="Accomplishments.Any()">
        <Iterations Items="@DistinctAccomplishments">
            <Chip Color="MudBlazor.Color.Info"
                  Text="@(GetAccomplishmentDisplayText(context))" />
        </Iterations>
    </HiddenControl>
    <Chip Color="MudBlazor.Color.Success"
          Text="@AllStarSummaryDisplayText"
          Visible="AllStars.Any()" />
    <HiddenControl Visible="Awards.Any()">
        <Iterations Items="@DistinctAwards">
            <Chip Color="MudBlazor.Color.Warning"
                  Text="@(GetAwardDisplayText(context))" />
        </Iterations>
    </HiddenControl>
    <Chip Color="MudBlazor.Color.Primary"
          Text="@ChampionshipSummaryDisplayText"
          Visible="Championships.Any()" />
    <HiddenControl Visible="Leaders.Any()">
        <Iterations Items="@DistinctLeaders">
            <Chip Color="MudBlazor.Color.Secondary"
                  Text="@(GetLeaderDisplayText(context))" />
        </Iterations>
    </HiddenControl>
</MudChipSet>
