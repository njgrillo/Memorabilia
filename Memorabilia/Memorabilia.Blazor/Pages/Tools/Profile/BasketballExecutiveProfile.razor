@inherits PersonProfile

<Div Class="row" 
     Style="overflow-y:auto;max-height:600px;">
    <Div Style="width:49%;">
        <HiddenControl Visible="Person.Teams.Filter(Sport.Basketball, OccupationType).Any()">
            <br />
            <TeamsProfile Occupation="Occupation"
                          Person="Person"
                          Sport="Sport.Basketball" />
        </HiddenControl>
        <HiddenControl Visible="Person.Teams.HasChampionships(Sport.Basketball, OccupationType)">
            <br />
            <ChampionshipProfile Occupation="Occupation"
                                 Person="Person"
                                 Sport="Sport.Basketball" />
        </HiddenControl>
        <HiddenControl Visible="Person.HallOfFames.Filter(Sport.Basketball).Any()">
            <br />
            <SportHallOfFameProfile Person="Person"
                                    Sport="Sport.Basketball" />
        </HiddenControl>
        <HiddenControl Visible="Person.FranchiseHallOfFames.Filter(Sport.Basketball).Any()">
            <br />
            <FranchiseHallOfFameProfile Person="Person"
                                        Sport="Sport.Basketball" />
        </HiddenControl>
    </Div>
    <Div Style="width:49%;margin-left:1%">
        <br />
        <AccomplishmentSummaryProfile Occupation="Occupation"
                                      Person="Person"
                                      Sport="Sport.Basketball" />
        <br />
        <HiddenControl Visible="Person.Accomplishments.Filter(Sport.Basketball, OccupationType).Any()">
            <AccomplishmentsProfile Occupation="Occupation"
                                    Person="Person"
                                    Sport="Sport.Basketball" />
            <br />
        </HiddenControl>
        <HiddenControl Visible="Person.Awards.Filter(Sport.Basketball, OccupationType).Any()">
            <AwardsProfile Occupation="Occupation"
                           Person="Person"
                           Sport="Sport.Basketball" />
            <br />
        </HiddenControl>
    </Div>
</Div>