@inherits SportProfile

<MudTable Bordered="false"
          Dense="false"
          Hover="true"
          Items="@Positions"
          Striped="true">
    <ToolBarContent>
        <ToolbarTitle><b>Positions</b></ToolbarTitle>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Position</MudTh>
        <MudTh>Type</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Position">@context.Position.Name</MudTd>
        <MudTd DataLabel="Type">@(context.IsPrimary ? "Primary" : "Secondary") </MudTd>
    </RowTemplate>
</MudTable>
