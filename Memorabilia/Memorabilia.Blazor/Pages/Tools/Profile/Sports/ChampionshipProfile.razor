@inherits SportProfile

<MudTable Bordered="false"
          Dense="false"
          Hover="true"
          Items="Championships"
          Striped="true">
    <ToolBarContent>
        <ToolbarTitle><b>Championships</b></ToolbarTitle>
    </ToolBarContent>
    <HeaderContent>
        <MudTh></MudTh>
        <MudTh>Team</MudTh>
        <MudTh>Year</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>@context.ChampionshipTypeName</MudTd>
        <MudTd DataLabel="Team">@context.TeamName</MudTd>
        <MudTd DataLabel="Year">@context.Year</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>