@inherits SportProfile

<MudTable Bordered="false"
          Dense="false"
          Hover="true"
          Items="@HallOfFames"
          Striped="true">
    <ToolBarContent>
        <ToolbarTitle><b>@($"{Sport.Name} Hall of Fame")</b></ToolbarTitle>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Induction Year</MudTh>
        <MudTh>Ballot</MudTh>
        <MudTh>Vote (%)</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Induction Year">@context.InductionYear</MudTd>
        <MudTd DataLabel="Ballot">@context.BallotNumberName</MudTd>
        <MudTd DataLabel="Vote (%)">@context.VotePercentage</MudTd>
    </RowTemplate>
</MudTable>
