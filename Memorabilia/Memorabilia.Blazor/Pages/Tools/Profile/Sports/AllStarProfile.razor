@inherits SportProfile

<MudTable Bordered="false"
          Dense="false"
          Hover="true"
          Items="@AllStars"
          Striped="true">
    <ToolBarContent>
        <ToolbarTitle><b>@($"{HeaderText} Selection(s)")</b></ToolbarTitle>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Team</MudTh>
        <MudTh>Year</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Team">@context.TeamName</MudTd>
        <MudTd DataLabel="Year">@context.Year</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
