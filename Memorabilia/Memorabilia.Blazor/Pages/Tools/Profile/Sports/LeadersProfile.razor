@inherits SportProfile

<MudTable Bordered="false"
          Dense="false" 
          Filter="new Func<LeaderProfileModel,bool>(FilterFunc1)"
          Hover="true"
          Items="Leaders"    
          Striped="true">
    <ToolBarContent>
        <ToolbarTitle><b>Leaders</b></ToolbarTitle>
        <MudSpacer />
        <ToolbarSearchField SearchText="@_search"
                            SearchTextChanged="@((p) => _search = p)" />
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Year</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.LeaderTypeName</MudTd>
        <MudTd DataLabel="Year">@context.Year</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
