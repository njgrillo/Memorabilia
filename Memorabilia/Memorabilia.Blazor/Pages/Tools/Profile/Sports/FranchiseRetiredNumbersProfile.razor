@inherits SportProfile

<MudTable Bordered="false"
          Dense="false"
          Hover="true"
          Items="@FranchiseRetiredNumbers"
          Striped="true">
    <ToolBarContent>
        <ToolbarTitle><b>Franchise Retired Numbers</b></ToolbarTitle>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Franchise</MudTh>
        <MudTh>Number</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Franchise">@context.Franchise.FullName</MudTd>
        <MudTd DataLabel="Number">@context.PlayerNumber</MudTd>
    </RowTemplate>
</MudTable>
