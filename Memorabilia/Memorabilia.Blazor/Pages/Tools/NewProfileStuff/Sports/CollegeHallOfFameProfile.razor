@inherits SportProfile

<MudTable Bordered="false"
          Dense="false"
          Hover="true"
          Items="@CollegeHallOfFames"
          Striped="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6"><b>College Hall of Fame</b></MudText>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>College</MudTh>
        <MudTh>Sport</MudTh>
        <MudTh>Year</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="College">@context.College.Name</MudTd>
        <MudTd DataLabel="Sport">@(context.Sport?.Name ?? string.Empty)</MudTd>
        <MudTd DataLabel="Year">@(context.Year.HasValue ? context.Year : string.Empty)</MudTd>
    </RowTemplate>
</MudTable>
