<MudTable Bordered="false"
          Dense="false"
          Hover="true"
          Items="@FranchiseHallOfFames"
          Striped="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6"><b>Franchise Hall of Fames</b></MudText>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Year</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.FranchiseName</MudTd>
        <MudTd DataLabel="Year">@context.Year</MudTd>
    </RowTemplate>
</MudTable>
