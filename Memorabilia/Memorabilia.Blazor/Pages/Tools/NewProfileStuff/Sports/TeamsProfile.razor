<MudTable Bordered="false"
          Dense="false"
          Hover="true"
          Items="@Teams"
          Striped="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6"><b>Teams</b></MudText>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Team</MudTh>
        <MudTh>Begin Year</MudTh>
        <MudTh>End Year</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Begin Year">@context.BeginYear</MudTd>
            <MudTd DataLabel="End Year">@context.EndYear</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
