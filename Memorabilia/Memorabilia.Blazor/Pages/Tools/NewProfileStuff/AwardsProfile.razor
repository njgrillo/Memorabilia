<MudTable Bordered="false"
          Dense="false"
          Hover="true"
          Items="@Awards"
          Striped="true">
    <ToolBarContent>
        <MudText Typo="Typo.h6"><b>Awards</b></MudText>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Year</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.AwardTypeName</MudTd>
        <MudTd DataLabel="Year">@context.Year</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
