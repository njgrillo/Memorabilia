@inherits CommandQuery

<DivPad2>
    <Content>
        <DivRowCol6>
            <Content>
                <MudTable Bordered="false"
                          Dense="false"
                          Filter="new Func<ChampionViewModel,bool>(FilterFunc1)"
                          Hover="true"
                          Items="@_viewModel.Champions.ToList()"
                          Striped="true">
                    <ToolBarContent>
                        <MudText Typo="Typo.h6">World Series Champs</MudText>
                        <MudSpacer />
                        <MudTextField @bind-Value="Search"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.Search"
                                      Class="mt-0"
                                      IconSize="MudBlazor.Size.Medium"
                                      Placeholder="Search" />
                    </ToolBarContent>
                    <HeaderContent>
                        <MudTh>Team</MudTh>
                        <MudTh>Franchise</MudTh>
                        <MudTh>Year</MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="Team">@context.TeamName</MudTd>
                        <MudTd DataLabel="Franchise">@context.Franchise</MudTd>
                        <MudTd DataLabel="Year">@context.Year</MudTd>
                    </RowTemplate>
                    <PagerContent>
                        <MudTablePager />
                    </PagerContent>
                </MudTable>
            </Content>
        </DivRowCol6>
    </Content>
</DivPad2>
