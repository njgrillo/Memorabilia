@inherits CommandQuery

<DivPad2>
    <Content>
        <DivRowCol6>
            <Content>
                <MudTable Bordered="false"
                          Dense="false"
                          Hover="true"
                          Items="@_viewModel.Champions.ToList()"
                          Striped="true">
                    <HeaderContent>
                        <MudTh>Team</MudTh>
                        <MudTh>Franchise</MudTh>
                        <MudTh>Year</MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="Team">@context.TeamName</MudTd>
                        <MudTd DataLabel="Franchise">@context.Franchise</MudTd>
                        <MudTd DataLabel="Year">@context.Year</MudTd>
                    </RowTemplate>
                    <PagerContent>
                        <MudTablePager />
                    </PagerContent>
                </MudTable>
            </Content>
        </DivRowCol6>
    </Content>
</DivPad2>
