@inherits CommandQuery

<DivPad2>
    <Content>
        <DivRowCol3>
            <Content>
                <YearDropDown MinYear="1933" 
                              SelectedValue="_viewModel.Year"
                              SelectionChanged="(p) => OnInputChange(p)" />
            </Content>
        </DivRowCol3>
        <DivRowCol6 Hidden="@(_viewModel.Year == 0)">
            <Content>
                <MudTable Bordered="false"
                          Dense="false"
                          Hover="true"
                          Items="@_viewModel.AllStars.ToList()"
                          Striped="true">
                    <HeaderContent>
                        <MudTh></MudTh>
                        <MudTh>Person</MudTh>
                        <MudTh>Year</MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="">
                            <MudTooltip>
                                <MudImage @onclick="@(_ => NavigationManager.NavigateTo(context.ProfileLink))"
                                          Class="rounded-lg can-click"
                                          Elevation="5"
                                          Height="200"
                                          ObjectFit="@ObjectFit.Cover"
                                          Src="@(GetImage(context.PersonImagePath))"
                                          Width="200" />
                            </MudTooltip>
                        </MudTd>
                        <MudTd DataLabel="Person">
                            <MudLink Href="@context.ProfileLink">@context.PersonName</MudLink>
                        </MudTd>
                        <MudTd DataLabel="Year">@context.Year</MudTd>
                    </RowTemplate>
                    <PagerContent>
                        <MudTablePager />
                    </PagerContent>
                </MudTable>
            </Content>
        </DivRowCol6>
    </Content>
</DivPad2>
