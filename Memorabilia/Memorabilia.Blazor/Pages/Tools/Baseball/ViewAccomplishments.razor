@inherits CommandQuery

<DivPad2>
    <Content>
        <DivRowCol3>
            <Content>
                <AccomplishmentTypeDropDown SelectedValue="_viewModel.AccomplishmentTypeId"
                                            SelectionChanged="(p) => OnInputChange(p)" />
            </Content>
        </DivRowCol3>
        <DivRowCol6 Hidden="@(_viewModel.AccomplishmentTypeId == 0)">
            <Content>
                <MudTable Bordered="false"
                          Dense="false"
                          Hover="true"
                          Items="@_viewModel.PersonAccomplishments.ToList()"
                          Striped="true">
                    <HeaderContent>
                        <MudTh></MudTh>
                        <MudTh>Person</MudTh>
                        <MudTh hidden="@(_viewModel.IsYearAccomplishment)">Date</MudTh>
                        <MudTh hidden="@(_viewModel.IsDateAccomplishment)">Year</MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="">
                            <MudTooltip>
                                <MudImage @onclick="@(_ => NavigationManager.NavigateTo(context.ProfileLink))"
                                          Class="rounded-lg can-click"
                                          Elevation="5"
                                          Height="200"
                                          ObjectFit="@ObjectFit.Cover"
                                          Src="@(GetImage(context.PersonImagePath))"
                                          Width="200" />
                            </MudTooltip>
                        </MudTd>
                        <MudTd DataLabel="Person">
                            <MudLink Href="@context.ProfileLink">@context.PersonName</MudLink>
                        </MudTd>
                        <MudTd DataLabel="Date" hidden="@(_viewModel.IsYearAccomplishment)">@context.Date</MudTd>
                        <MudTd DataLabel="Year" hidden="@(_viewModel.IsDateAccomplishment)">@context.Year</MudTd>
                    </RowTemplate>
                    <PagerContent>
                        <MudTablePager />
                    </PagerContent>
                </MudTable>
            </Content>
        </DivRowCol6>
    </Content>
</DivPad2>
