<PageView AddRoute="@Model.AddRoute"
          AddTitle="@Model.AddTitle"
          DisplayPageHeader="false"
          NavigationPath="@Model.ExitNavigationPath"
          OnLoad="OnLoad"
          PageTitle="@Model.PageTitle">
    <DivPad2>
        <MudTable Bordered="false"
                  Dense="false"
                  Hover="true"
                  Items="@Model.Projects"
                  Striped="true">
            <ToolBarContent>
                <MudText Typo="Typo.h6">@Model.PageTitle</MudText>
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Name</MudTh>
                <MudTh>Start Date</MudTh>
                <MudTh>End Date</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="Start Date">@context.FormattedStartDate</MudTd>
                <MudTd DataLabel="End Date">@context.FormattedEndDate</MudTd>
                <MudTd DataLabel="">
                    <GridEditButton NavigationPath="@($"{Model.RoutePrefix}/Edit/{context.Id}")" />
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Material.Outlined.DeleteOutline"
                                OnClick="@(_ => ShowDeleteConfirm(@context.Id))" />
                    </MudTooltip>
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </DivPad2>
</PageView>
  