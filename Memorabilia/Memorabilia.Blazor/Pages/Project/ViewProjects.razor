<PageView AddRoute="@($"{NavigationPath.Projects}/{Constant.EditModeType.Update.Name}/0")"
          AddTitle="Add Project"
          DisplayPageHeader="false"
          NavigationPath="@NavigationPath.Home"
          PageTitle="Projects">
    <DivPad2>
        <MudTable Bordered="false"
                  Dense="false"
                  Hover="true"
                  Items="@Model.Projects"
                  Striped="true">
            <ToolBarContent>
                <ToolbarTitle Text="Projects" />
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Name</MudTh>
                <MudTh>Start Date</MudTh>
                <MudTh>End Date</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="Start Date">@context.FormattedStartDate</MudTd>
                <MudTd DataLabel="End Date">@context.FormattedEndDate</MudTd>
                <MudTd DataLabel="">
                    <GridEditButton NavigationPath="@($"{NavigationPath.Projects}/{Constant.EditModeType.Update.Name}/{DataProtectorService.EncryptId(context.Id)}")" />
                    <DeleteGridButton ConfirmMessage="Delete Project" 
                                      OnDelete="@(_ => Delete(context.Id))"
                                      ShowConfirm="true" />
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </DivPad2>
</PageView>
  