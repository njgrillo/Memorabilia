<div class="row">
    <div class="col-3">
        <MudSwitch Checked="@_displayCompleted"
                   CheckedChanged="(p) => _displayCompleted = p"
                   Color="MudBlazor.Color.Success"
                   Label="Display Completed?"
                   T="bool" />
    </div>
    <div class="col-6" />
    <div class="col-3" style="text-align:right;">
        <MudStack Row="true">
            <CustomButton OnClick="OnImport"
                          Text="Import" />
            <AddButton OnClick="AddProjectMemorabiliaTeam"
                       Text="Add Project Memorabilia Team" />
        </MudStack>        
    </div>
</div>
<div style="margin-right:1%;">
    <ProjectPersonGrid Items="Model.People.Where(item => _displayCompleted || item.ProjectStatusTypeId != ProjectStatusType.Completed.Id).ToList()"
                       ItemTypeId="@Model.ItemTypeId" />
</div>

