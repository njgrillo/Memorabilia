<MudDialog Style="max-height:85vh;">
    <DialogContent>
        <DivPad2>
            <Div Class="row">
                <Div Class="col-6">
                    <TeamSearchAutoComplete SelectedValue="ProjectMemorabiliaTeam.Team"
                                            SelectionChanged="(p) => ProjectMemorabiliaTeam.Team = p" />
                </Div>
                <Div Class="col-3">
                    <NullableDecimalField Label="Estimated Cost"
                                          Value="ProjectMemorabiliaTeam.EstimatedCost"
                                          ValueChanged="@((p) => ProjectMemorabiliaTeam.EstimatedCost = p)" />
                </Div>
            </Div>
            <br />
            <Div Class="row">
                <Div Class="col-3">
                    <RowStack Spacing="0">
                        <NullableIntField Label="Rank"
                                          Value="ProjectMemorabiliaTeam.Rank"
                                          ValueChanged="@((p) => ProjectMemorabiliaTeam.Rank = p)" />
                        <MudTooltip Text="Import Max Rank">
                            <Image AllowNavigation="true" 
                                   Height="20"
                                   ImageData="@(ImageService.GetDomainImageData(ImageFileName.Import))"
                                   OnClick="@(() => ProjectMemorabiliaTeam.Rank = MaxRank)"
                                   Width="20" />
                        </MudTooltip>
                    </RowStack>
                </Div>
                <Div Class="col-3">
                    <PriorityTypeDropDown SelectedValue="ProjectMemorabiliaTeam.PriorityTypeId"
                                          SelectionChanged="(p) => ProjectMemorabiliaTeam.PriorityTypeId = p" />
                </Div>
                <Div Class="col-3">
                    <ProjectStatusTypeDropDown SelectedValue="ProjectMemorabiliaTeam.ProjectStatusTypeId"
                                               SelectionChanged="(p) => ProjectMemorabiliaTeam.ProjectStatusTypeId = p" />
                </Div>
                <Div Class="col-3">
                    <Switch Checked="@ProjectMemorabiliaTeam.Upgrade"
                            CheckedChanged="(p) => ProjectMemorabiliaTeam.Upgrade = p"
                            Label="Is Upgrade?" />
                </Div>
            </Div>
            <br />
            <Div Class="row"
                 Style="margin-top:1%;"
                 Visible="@(ProjectId > 0 && ProjectMemorabiliaTeam.Team != null && ProjectMemorabiliaTeam.Team.Id > 0)">
                <Div Class="col-3">
                    <Condition Evaluation="@(ProjectMemorabiliaTeam.MemorabiliaId > 0)">
                        <Match>
                            <Fab Color="MudBlazor.Color.Secondary"
                                 OnClick="@(_ => ProjectMemorabiliaTeam.MemorabiliaId = 0)"
                                 StartIcon="@Icons.Material.Outlined.LinkOff"
                                 TooltipText="Remove link to Autograph" />
                        </Match>
                        <NotMatch>
                            <Fab Color="MudBlazor.Color.Secondary"
                                 OnClick="@(_ => AddMemorabiliaLink(ProjectMemorabiliaTeam))"
                                 StartIcon="@Icons.Material.Outlined.AddLink"
                                 TooltipText="Link to Memorabilia" />
                        </NotMatch>
                    </Condition>
                </Div>
                <Div Class="col-3"
                     Visible="@(ProjectMemorabiliaTeam.MemorabiliaId > 0)">
                    <Image Height="100"
                           ImageData="@(ImageService.GetUserImageData(ProjectMemorabiliaTeam.MemorabiliaFileName))"
                           Width="100" />
                </Div>
            </Div>
        </DivPad2>
    </DialogContent>
    <DialogActions>        
        <CancelButton OnClick="Cancel" />
        <AddButton OnClick="Add"
                   Text="Add" />
    </DialogActions>
</MudDialog>
