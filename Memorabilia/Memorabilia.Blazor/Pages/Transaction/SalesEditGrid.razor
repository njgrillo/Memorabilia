<MudTable Bordered="false"
          CanCancelEdit="true"
          CommitEditTooltip="Save"
          Dense="false"
          Hover="true"
          Items="@Sales.Where(sale => !sale.IsDeleted).ToList()"
          RowEditCancel="ResetItemToOriginalValues"
          RowEditCommit="UpdateSaleAmount"
          RowEditPreview="BackupItem"
          Striped="true">
    <HeaderContent>
        <MudTh></MudTh>
        <MudTh>Item</MudTh>
        <MudTh>Sale Amount</MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="">
            <GridImage ImageLoaded="OnImageLoaded"
                       ImageFileName="@(context.Memorabilia.Images.FirstOrDefault(image => image.ImageTypeId == Constant.ImageType.Primary.Id)?.FileName ?? string.Empty)"
                       NavigationPath="@($"{NavigationPath.MemorabiliaImage}/{Constant.EditModeType.Update.Name}/{DataProtectorService.EncryptId(context.Memorabilia.Id)}")" />
        </MudTd>
        <MudTd DataLabel="Item">@context.Memorabilia.ItemType.Name</MudTd>
        <MudTd DataLabel="Sale Amount">@(context.SaleAmount?.ToString("c") ?? string.Empty)</MudTd>
        <MudTd DataLabel="">
            <MudTooltip Text="Delete">
                <MudFab Color="MudBlazor.Color.Secondary"
                        Icon="@Icons.Material.Outlined.DeleteOutline"
                        OnClick="@(_ => context.IsDeleted = true)" />
            </MudTooltip>
        </MudTd>
    </RowTemplate>
    <RowEditingTemplate>
        <MudTd DataLabel="">
            <GridImage ImageLoaded="OnImageLoaded"
                       ImageFileName="@(context.Memorabilia.Images.FirstOrDefault(image => image.ImageTypeId == Constant.ImageType.Primary.Id)?.FileName ?? string.Empty)"
                       NavigationPath="@($"{NavigationPath.MemorabiliaImage}/{Constant.EditModeType.Update.Name}/{DataProtectorService.EncryptId(context.Memorabilia.Id)}")" />
        </MudTd>
        <MudTd DataLabel="Item">@context.Memorabilia.ItemType.Name</MudTd>
        <MudTd DataLabel="Sale Amount">
            <NullableDecimalField Label="Sale Amount ($)"
                                  Value="context.SaleAmount"
                                  ValueChanged="@((p) => context.SaleAmount = p)" />
        </MudTd>
    </RowEditingTemplate>
</MudTable>
