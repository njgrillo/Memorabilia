<PageView AddRoute="@($"{NavigationPath.Transactions}/{Constant.EditModeType.Update.Name}/0")"
          AddTitle="Add Transaction"
          DisplayPageFooter="false"
          DisplayPageHeader="false"
          NavigationPath="@NavigationPath.Transactions"
          PageTitle="Transactions">
    <DivPad2>
        <TabControl>
            <TabPanel BadgeColor="MudBlazor.Color.Success"
                      BadgeData="_purchaseCount" 
                      DisplayBadge="true"
                      Text="Purchases">
                <DivRowCol12 Visible="_displayPurchaseFilter">
                    <MemorabiliaFilter AdditionalStyle="@Style.MarginBottomPad1" 
                                       DisplayAcquisitionType="false"
                                       OnFilter="OnPurchaseFilter" />
                </DivRowCol12>
                <DivRowCol12>
                    <PurchaseGrid Filter="_purchaseFilter"
                                  GridLoaded="@(() => ReloadPurchaseGrid = false)"
                                  ReloadGrid="ReloadPurchaseGrid" />
                </DivRowCol12>
            </TabPanel>
            <TabPanel BadgeColor="MudBlazor.Color.Success"
                      BadgeData="_soldCount" 
                      DisplayBadge="true"
                      Text="Sales">
                <DivRowCol12 Visible="_displaySoldFilter">
                    <MemorabiliaFilter AdditionalStyle="@Style.MarginBottomPad1" 
                                       OnFilter="OnSalesFilter" />
                </DivRowCol12>
                <DivRowCol12>
                    <SalesGrid Filter="_salesFilter"
                               GridLoaded="@(() => ReloadSalesGrid = false)"
                               ReloadGrid="ReloadSalesGrid"
                               TransactionDeleted="OnSalesTransactionDeleted" />
                </DivRowCol12>
            </TabPanel>
            <TabPanel BadgeColor="MudBlazor.Color.Success"
                      BadgeData="_tradedCount" 
                      DisplayBadge="true"
                      Text="Trades">
                <DivRowCol12 Visible="_displayTradeFilter">
                    <MemorabiliaFilter AdditionalStyle="@Style.MarginBottomPad1" 
                                       DisplayAcquisitionType="false"
                                       OnFilter="OnTradeFilter" />
                </DivRowCol12>
                <DivRowCol12>
                    <TradeGrid Filter="_tradeFilter"
                               GridLoaded="@(() => ReloadTradeGrid = false)"
                               ReloadGrid="ReloadTradeGrid"
                               TransactionDeleted="OnTradeTransactionDeleted" />
                </DivRowCol12>
            </TabPanel>
            <TabPanel BadgeColor="MudBlazor.Color.Success"
                      BadgeData="_partialTradeCount"
                      DisplayBadge="true"
                      Text="Partial Trades">
                <DivRowCol12 Visible="_displayPartialTradeFilter">
                    <MemorabiliaFilter AdditionalStyle="@Style.MarginBottomPad1" 
                                       DisplayAcquisitionType="false"
                                       OnFilter="OnPartialTradeFilter" />
                </DivRowCol12>
                <DivRowCol12>
                    <PartialTradeGrid Filter="_partialTradeFilter"
                                      GridLoaded="@(() => ReloadPartialTradeGrid = false)"
                                      ReloadGrid="ReloadPartialTradeGrid"
                                      TransactionDeleted="OnPartialTradeTransactionDeleted" />
                </DivRowCol12>
            </TabPanel>
        </TabControl>
    </DivPad2>
</PageView>