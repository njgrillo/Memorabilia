<SiteMemorabiliaFilter OnFilter="OnFilter" />
<DivPad2>
    <LeftRightSection>
        <Left>
            <Switch Checked="@IsDetailView"
                    CheckedChanged="(p) => IsDetailView = p"
                    Label="Detail View" />
        </Left>
    </LeftRightSection>
</DivPad2>
<DivPad2>
    <HiddenControl Visible="IsDetailView">
        <SiteMemorabiliaDetailGrid Filter="_filter"
                                   GridLoaded="@(() => ReloadGrid = false)"
                                   ReloadGrid="ReloadGrid" />
    </HiddenControl>
    <HiddenControl Visible="@(!IsDetailView)">
        <SiteMemorabiliaGalleryGrid Filter="_filter" />
    </HiddenControl>
</DivPad2>
