<DivPad5>
    <MudTooltip Text="@TooltipText">
        <MudCard Elevation="20">
            <MudCardContent>
                <Text Typography="Typo.h5">@Title</Text>
            </MudCardContent>
            <MudCardContent>
                <MudCard Elevation="10">
                    <MudCardMedia Class="rounded-lg cant-click"
                                  Height="300"
                                  Image="@(ImageService.GetUserImageData(PrimaryImageFileName, UserId))" />
                </MudCard>
                <br />
                <Text Typography="Typo.body2">@Subtitle</Text>
                <Text Typography="Typo.body2">@Description</Text>
            </MudCardContent>
            <MudCardContent>
                <Div Class="row">
                    <Iterations Context="autograph"
                                Items="MemorabiliaItem.Autographs" >
                        <Div Class="col-4">
                            <SiteMemorabiliaItemGallerySubCard ImageFileName="@autograph.ImageFileName"
                                                               Title="@autograph.PersonName"
                                                               TooltipText="@autograph.PersonName" />
                        </Div>
                    </Iterations>
                </Div>
            </MudCardContent>
            <MudCardActions>
                @*TODO<CustomButton Color="MudBlazor.Color.Primary"
                              Text="Edit Memorabilia"
                              Variant="Variant.Text" />*@
            </MudCardActions>
        </MudCard>
    </MudTooltip>
</DivPad5>
