@inherits MemorabiliaItem<SaveGloveViewModel>

<EditMemorabiliaPage DomainImageRootPath="@DomainImageRootPath"
                     Item="ViewModel"
                     OnLoad="OnLoad"
                     OnSave="OnSave" 
                     TItem="SaveGloveViewModel">
    <Content>
        <MemorabiliaItemEditor DisplayMultiPersonSelector="true"
                               DisplayMultiTeamSelector="true"
                               DisplaySingleSportSelector="true"
                               TItem="SaveGloveViewModel"
                               ViewModel="ViewModel">
            <AdditionalContent>
                <DivRowCol3>
                    <Content>
                        <GloveTypeDropDown SelectedValue="ViewModel.GloveTypeId"
                                           SelectionChanged="(p) => ViewModel.GloveTypeId = p"
                                           Sport="@ViewModel.Sport" />
                    </Content>
                </DivRowCol3>
            </AdditionalContent>
        </MemorabiliaItemEditor>
    </Content>
</EditMemorabiliaPage>