@inherits MemorabiliaItem<GloveEditModel>

<EditMemorabiliaPage Item="EditModel"
                     OnLoad="OnLoad"
                     OnSave="OnSave" 
                     TItem="GloveEditModel">
    <Content>
        <MemorabiliaItemEditor DisplayMultiPersonSelector="true"
                               DisplayMultiTeamSelector="true"
                               DisplaySingleSportSelector="true"
                               Model="EditModel"
                               TItem="GloveEditModel">
            <AdditionalContent>
                <DivRowCol3>
                    <Content>
                        <GloveTypeDropDown SelectedValue="EditModel.GloveTypeId"
                                           SelectionChanged="(p) => EditModel.GloveTypeId = p"
                                           Sport="@EditModel.Sport" />
                    </Content>
                </DivRowCol3>
            </AdditionalContent>
        </MemorabiliaItemEditor>
    </Content>
</EditMemorabiliaPage>