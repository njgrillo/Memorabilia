@inherits MemorabiliaItem<CerealBoxEditModel>

<EditMemorabiliaPage Item="ViewModel"
                     OnLoad="OnLoad"
                     OnSave="OnSave" 
                     TItem="CerealBoxEditModel">
    <Content>
        <MemorabiliaItemEditor DisplayItemTypeGameStyle="false"
                               DisplayItemTypeLevel="false"
                               DisplayItemTypeSize="false"
                               DisplayMultiPersonSelector="true"
                               DisplayMultiSportSelector="true"
                               DisplayMultiTeamSelector="true"
                               TItem="CerealBoxEditModel"
                               ViewModel="ViewModel">
            <AdditionalContent>
                <DivRowCol3>
                    <Content>
                        <CerealTypeDropDown SelectedValue="ViewModel.CerealTypeId"
                                            SelectionChanged="(p) => ViewModel.CerealTypeId = p" />
                    </Content>
                </DivRowCol3>
            </AdditionalContent>
        </MemorabiliaItemEditor>
    </Content>
</EditMemorabiliaPage>