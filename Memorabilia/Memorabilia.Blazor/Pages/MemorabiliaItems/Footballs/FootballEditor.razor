@inherits MemorabiliaItem<SaveFootballViewModel>

<EditPage ContinueNavigationPath="@ViewModel.ContinueNavigationPath"
          DomainImageRootPath="@DomainImageRootPath"
          EditMode="ViewModel.EditModeType"
          ExitNavigationPath="@ViewModel.ExitNavigationPath"
          ImageFileName="@ViewModel.ImageFileName"
          ItemName="@ViewModel.ItemType.Name"
          Model="ViewModel"
          OnLoad="OnLoad"
          OnSave="OnSave"
          PageFooterButtonText="@ViewModel.ExitButtonText"
          PageFooterNavigationPath="@ViewModel.ExitNavigationPath"
          PageTitle="@ViewModel.PageTitle"
          TItem="SaveFootballViewModel"
          UseMultipleButtons="true">
    <TimelineContent>
        <MemorabiliaItemTimeline EditMode="ViewModel.EditModeType"
                                 ItemTypeName="@ViewModel.ItemType.Name"
                                 MemorabiliaId="ViewModel.MemorabiliaId"
                                 MemorabiliaItemStep="ViewModel.MemorabiliaItemStep" />
    </TimelineContent>
    <Content>
        <MemorabiliaItemEditor DisplaySinglePersonSelector="true"
                               DisplaySingleTeamSelector="true"
                               TItem="SaveFootballViewModel"
                               ViewModel="ViewModel">
            <AdditionalContent>
                <DivRowCol3> 
                    <Content>
                        <FootballTypeDropDown GameStyleType="ViewModel.GameStyleType" 
                                              SelectedValue="ViewModel.FootballTypeId"
                                              SelectionChanged="(p) => ViewModel.FootballTypeId = p" />
                    </Content>
                    <ContentColumn2>
                        <CommissionerDropDown SelectedValue="@ViewModel.CommissionerId"
                                              SelectionChanged="(p) => ViewModel.CommissionerId = p"
                                              SportLeagueLevel="@SportLeagueLevel.NationalFootballLeague" />
                    </ContentColumn2>
                </DivRowCol3>
            </AdditionalContent>
        </MemorabiliaItemEditor>        
    </Content>
</EditPage>