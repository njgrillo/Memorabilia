@inherits ImagePage

<Page OnLoad="OnLoad">
    <Content>
        <PageHeader PageTitle="@ViewModel.PageTitle" />
        <MemorabiliaItemTimeline EditMode="ViewModel.EditModeType" 
                                 ItemTypeName="@ViewModel.ItemTypeName"
                                 MemorabiliaId="ViewModel.MemorabiliaId"
                                 MemorabiliaItemStep="ViewModel.MemorabiliaItemStep" />
        <EditImages @ref="EditImages"              
                    ContinueNavigationPath="@ViewModel.ContinueNavigationPath"
                    DomainImageRootPath="@DomainImageRootPath"
                    ExitNavigationPath="@ViewModel.ExitNavigationPath"
                    Images="@ViewModel.Images"
                    MaximumAllowedFiles="10"
                    MaximumFileSize="10240000"
                    Model="ViewModel"
                    OnLoad="OnLoad"
                    OnSave="OnSave"
                    PageTitle="@ViewModel.PageTitle"
                    ReplaceImages="false"
                    SaveButtonText="Save & Continue"
                    TItem="SaveMemorabiliaImagesViewModel"
                    UploadPath="@UploadPath"
                    UserId="@UserId">
            <AdditionalButtons>
                <PrettyBlazor.Condition Evaluation="@ViewModel.HasAutographs">
                    <Match>
                        <SaveButton OnClick="SaveAndEditAutograph"
                                    Text="Save & Edit Autograph" />
                    </Match>
                </PrettyBlazor.Condition>
                <SaveButton OnClick="SaveAndAddAutograph"
                            Text="Save & Add Autograph" />
                <SaveButton OnClick="SaveAndAddItem"
                            Text="Save & Add Item" />
            </AdditionalButtons>
        </EditImages>
        <PageFooter NavigationPath="@ViewModel.BackNavigationPath" />
    </Content>
</Page>
                      