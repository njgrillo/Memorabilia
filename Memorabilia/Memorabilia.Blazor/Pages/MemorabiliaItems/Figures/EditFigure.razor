@inherits MemorabiliaItem<FigureEditModel>

<EditMemorabiliaPage ContinueNavigationPath="@($"{NavigationPath.MemorabiliaImage}/{EditModeType.Update.Name}/{DataProtectorService.EncryptId(MemorabiliaId)}")" 
                     EditModel="EditModel"
                     ExitNavigationPath="@NavigationPath.Memorabilia"
                     OnSave="OnSave" 
                     TItem="FigureEditModel">
    <Content>
        <EditMemorabiliaItem DisplayItemTypeGameStyle="false" 
                             DisplayMultiPersonSelector="true"
                             DisplayMultiTeamSelector="true"
                             DisplaySingleSportSelector="false"
                             DisplayMultiSportSelector="true"
                             Model="EditModel"
                             TItem="FigureEditModel" >
            <AdditionalContent>
                <DivRowFormGroup>
                    <Div Class="@DivClass.Column3">
                        <NullableIntField Label="Year"
                                          Maximum="int.MaxValue"
                                          Value="EditModel.Year"
                                          ValueChanged="@((p) => EditModel.Year = p)" />
                    </Div>
                    <Div Class="@DivClass.Column3">
                        <FigureTypeDropDown SelectedValue="EditModel.FigureTypeId"
                                            SelectionChanged="(p) => EditModel.FigureTypeId = p" />
                    </Div>
                    <Div Class="@DivClass.Column3">
                        <FigureSpecialtyTypeDropDown FigureType="EditModel.FigureType"
                                                     SelectedValue="EditModel.FigureSpecialtyTypeId"
                                                     SelectionChanged="(p) => EditModel.FigureSpecialtyTypeId = p" />
                    </Div>
                </DivRowFormGroup>
            </AdditionalContent>
        </EditMemorabiliaItem>   
    </Content>
</EditMemorabiliaPage>