@inherits MemorabiliaItem<SaveFigureViewModel>

<EditPage ContinueNavigationPath="@ViewModel.ContinueNavigationPath"
          DomainImageRootPath="@DomainImageRootPath"
          EditMode="ViewModel.EditModeType"
          ExitNavigationPath="@ViewModel.ExitNavigationPath"
          ImageFileName="@ViewModel.ImageFileName"
          ItemName="@ViewModel.ItemType.Name"
          Model="ViewModel"
          OnLoad="OnLoad"
          OnSave="OnSave"
          PageFooterButtonText="@ViewModel.ExitButtonText"
          PageFooterNavigationPath="@ViewModel.ExitNavigationPath"
          PageTitle="@ViewModel.PageTitle"
          TItem="SaveFigureViewModel"
          UseMultipleButtons="true">
    <TimelineContent>
        <MemorabiliaItemTimeline EditMode="ViewModel.EditModeType"
                                 ItemTypeName="@ViewModel.ItemType.Name"
                                 MemorabiliaId="ViewModel.MemorabiliaId"
                                 MemorabiliaItemStep="ViewModel.MemorabiliaItemStep" />
    </TimelineContent>
    <Content>
        <MemorabiliaItemEditor DisplayItemTypeGameStyle="false" 
                               DisplayMultiPersonSelector="true"
                               DisplayMultiTeamSelector="true"
                               DisplaySingleSportSelector="true"
                               TItem="SaveFigureViewModel"
                               ViewModel="ViewModel">
            <AdditionalContent>
                <DivRowCol3>
                    <Content>
                        <NullableIntField Label="Year"
                                          Maximum="int.MaxValue"
                                          Value="ViewModel.Year"
                                          ValueChanged="@((p) => ViewModel.Year = p)" />
                    </Content>
                    <ContentColumn2>
                        <FigureTypeDropDown SelectedValue="ViewModel.FigureTypeId"
                                            SelectionChanged="(p) => ViewModel.FigureTypeId = p" />
                    </ContentColumn2>
                    <ContentColumn3>
                        <FigureSpecialtyTypeDropDown FigureType="ViewModel.FigureType"
                                                     SelectedValue="ViewModel.FigureSpecialtyTypeId"
                                                     SelectionChanged="(p) => ViewModel.FigureSpecialtyTypeId = p" />
                    </ContentColumn3>
                </DivRowCol3>
            </AdditionalContent>
        </MemorabiliaItemEditor>        
    </Content>
</EditPage>