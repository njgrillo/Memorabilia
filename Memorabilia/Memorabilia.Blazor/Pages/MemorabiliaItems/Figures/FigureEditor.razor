@inherits MemorabiliaItem<SaveFigureViewModel>

<EditPage ContinueNavigationPath="@ViewModel.ContinueNavigationPath"
          EditMode="ViewModel.EditModeType"
          ExitNavigationPath="@ViewModel.ExitNavigationPath"
          ImagePath="@ViewModel.ImagePath"
          ItemName="@ViewModel.ItemType.Name"
          Model="ViewModel"
          OnLoad="OnLoad"
          OnSave="OnSave"
          PageFooterButtonText="@ViewModel.ExitButtonText"
          PageFooterNavigationPath="@ViewModel.ExitNavigationPath"
          PageTitle="@ViewModel.PageTitle"
          TItem="SaveFigureViewModel"
          UseMultipleButtons="true">
    <TimelineContent>
        <MemorabiliaItemTimeline EditMode="ViewModel.EditModeType"
                                 ItemTypeName="@ViewModel.ItemType.Name"
                                 MemorabiliaId="ViewModel.MemorabiliaId"
                                 MemorabiliaItemStep="ViewModel.MemorabiliaItemStep" />
    </TimelineContent>
    <Content>
        <DivRowCol3>
            <Content>
                <ItemTypeLevelDropDown ItemType="ViewModel.ItemType"
                                       SelectedValue="ViewModel.LevelTypeId"
                                       SelectionChanged="(p) => ViewModel.LevelTypeId = p" />
            </Content>
            <ContentColumn2>
                <ItemTypeBrandDropDown ItemType="ViewModel.ItemType"
                                       SelectedValue="ViewModel.BrandId"
                                       SelectionChanged="(p) => ViewModel.BrandId = p" />
            </ContentColumn2>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <ItemTypeSizeDropDown ItemType="ViewModel.ItemType"
                                      SelectedValue="@ViewModel.SizeId"
                                      SelectionChanged="(p) => ViewModel.SizeId = p" />
            </Content>
            <ContentColumn2>
                <BaseballTypeDropDown SelectedValue="ViewModel.FigureTypeId"
                                      SelectionChanged="(p) => ViewModel.FigureTypeId = p" />
            </ContentColumn2>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <MudNumericField @bind-Value="ViewModel.Year" 
                                 Label="Year" 
                                 Variant="Variant.Outlined" />  
            </Content>
            <ContentColumn2>
                @*<FigureSpecialtyTypeDropDown @bind-Value="@ViewModel.FigureSpecialtyTypeId" 
                                             @bind-Value:event="ValueChanged"
                                             FigureType="FigureType.Find(ViewModel.FigureTypeId)" />*@
            </ContentColumn2>
        </DivRowCol3>
        <MultiPersonSelector CanToggle="true"
                             ItemType="ViewModel.ItemType"
                             People="ViewModel.People" />    
        <MultiSportSelector CanToggle="true"
                            ItemType="ViewModel.ItemType"
                            SelectedSportIdsChanged="SelectedSportIdsChanged"
                            SportIds="ViewModel.SportIds" />
        <MultiTeamSelector CanToggle="true" 
                           ItemType="ViewModel.ItemType"
                           Teams="ViewModel.Teams" />
    </Content>
</EditPage>