@inherits MemorabiliaItem<JerseyNumberEditModel>

<EditMemorabiliaPage ContinueNavigationPath="@($"{NavigationPath.MemorabiliaImage}/{EditModeType.Update.Name}/{DataProtectorService.EncryptId(MemorabiliaId)}")" 
                     EditModel="EditModel"
                     ExitNavigationPath="@NavigationPath.Memorabilia"
                     OnSave="OnSave" 
                     TItem="JerseyNumberEditModel">
    <Content>
        <EditMemorabiliaItem DisplayItemTypeBrand="false"
                             DisplayItemTypeGameStyle="false"
                             DisplayItemTypeLevel="false"
                             DisplayItemTypeSize="false"
                             DisplaySinglePersonSelector="true"
                             DisplaySingleSportSelector="true"
                             DisplaySingleTeamSelector="true"
                             Model="EditModel"
                             TItem="JerseyNumberEditModel">
            <AdditionalContent>
                <DivRowFormGroup>
                    <Div Class="@DivClass.Column3">
                        <NullableIntField Label="Number"
                                          Maximum="99"
                                          Value="EditModel.Number"
                                          ValueChanged="@((p) => EditModel.Number = p)" />
                    </Div>
                </DivRowFormGroup>
            </AdditionalContent>
        </EditMemorabiliaItem>
    </Content>
</EditMemorabiliaPage>