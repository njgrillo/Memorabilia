@inherits MemorabiliaItem<SaveBookViewModel>

<EditPage ContinueNavigationPath="@ViewModel.ContinueNavigationPath"
          DomainImageRootPath="@DomainImageRootPath"
          EditMode="ViewModel.EditModeType"
          ExitNavigationPath="@ViewModel.ExitNavigationPath"
          ImageFileName="@ViewModel.ImageFileName"
          ItemName="@ViewModel.ItemType.Name"
          Model="ViewModel"
          OnLoad="OnLoad"
          OnSave="OnSave"
          PageFooterButtonText="@ViewModel.ExitButtonText"
          PageFooterNavigationPath="@ViewModel.ExitNavigationPath"
          PageTitle="@ViewModel.PageTitle"
          TItem="SaveBookViewModel"
          UseMultipleButtons="true">
    <TimelineContent>
        <MemorabiliaItemTimeline EditMode="ViewModel.EditModeType"
                                 ItemTypeName="@ViewModel.ItemType.Name"
                                 MemorabiliaId="ViewModel.MemorabiliaId"
                                 MemorabiliaItemStep="ViewModel.MemorabiliaItemStep" />
    </TimelineContent>
    <Content>
        <MemorabiliaItemEditor DisplayItemTypeBrand="false" 
                               DisplayItemTypeGameStyle="false"
                               DisplayItemTypeLevel="false"
                               DisplayItemTypeSize="false"
                               DisplayMultiPersonSelector="true"
                               DisplayMultiSportSelector="true"
                               DisplayMultiTeamSelector="true"
                               TItem="SaveBookViewModel"
                               ViewModel="ViewModel">
            <AdditionalContent>
                <DivRowCol3>
                    <Content>
                        <TextField Label="Title"
                                   MaxLength="200"
                                   SelectedText="@ViewModel.Title"
                                   SelectedTextChanged="@((p) => ViewModel.Title = p)" />
                    </Content>
                    <ContentColumn2>
                        <TextField Label="Edition"
                                   MaxLength="5"
                                   SelectedText="@ViewModel.Edition"
                                   SelectedTextChanged="@((p) => ViewModel.Edition = p)" />
                    </ContentColumn2>
                    <ContentColumn3>
                        <TextField Label="Publisher"
                                   MaxLength="200"
                                   SelectedText="@ViewModel.Publisher"
                                   SelectedTextChanged="@((p) => ViewModel.Publisher = p)" />
                    </ContentColumn3>
                    <ContentColumn4>
                        <BooleanCheckBox Checked="@ViewModel.HardCover"
                                         CheckedChanged="(p) => ViewModel.HardCover = p"
                                         Label="Hard Cover" />
                    </ContentColumn4>
                </DivRowCol3>
            </AdditionalContent>
        </MemorabiliaItemEditor>
    </Content>
</EditPage>