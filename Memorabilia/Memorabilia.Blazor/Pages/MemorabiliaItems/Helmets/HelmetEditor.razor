@inherits MemorabiliaItem<HelmetEditModel>

<EditMemorabiliaPage Item="EditModel"
                     OnSave="OnSave" 
                     TItem="HelmetEditModel">
    <Content>
        <MemorabiliaItemEditor DisplayMultiPersonSelector="true"
                               DisplayMultiSportSelector="true"
                               DisplayMultiTeamSelector="true"
                               Model="EditModel"
                               TItem="HelmetEditModel">
            <AdditionalContent>
                <Div Class="row">
                    <Div Class="col-3">
                        <HelmetTypeDropDown GameStyleType="EditModel.GameStyleType"
                                            SelectedValue="EditModel.HelmetTypeId"
                                            SelectionChanged="(p) => EditModel.HelmetTypeId = p" />
                    </Div>
                    <Div Class="col-3"
                         Hidden="@(!EditModel.DisplayHelmetQualityType)">
                        <Div Hidden="@(!EditModel.DisplayHelmetQualityType)">
                            <HelmetQualityTypeDropDown Disabled="!EditModel.CanEditHelmetQualityType"
                                                       SelectedValue="EditModel.HelmetQualityTypeId"
                                                       SelectionChanged="(p) => EditModel.HelmetQualityTypeId = p" />
                        </Div>
                    </Div>
                    <Div Class="col-3"
                         Hidden="@(!EditModel.DisplayHelmetFinish)">
                        <HelmetFinishDropDown SelectedValue="EditModel.HelmetFinishId"
                                              SelectionChanged="(p) => EditModel.HelmetFinishId = p" />
                    </Div>
                </Div>
                <Div Class="row">
                    <Div Class="col-3">
                        <MudSwitch Checked="@EditModel.Throwback"
                                   CheckedChanged="(p) => EditModel.Throwback = p"
                                   Color="MudBlazor.Color.Success"
                                   Label="Is a Throwback?"
                                   T="bool" />
                    </Div>
                </Div>
            </AdditionalContent>
        </MemorabiliaItemEditor>
    </Content>
</EditMemorabiliaPage>