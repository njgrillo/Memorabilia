<MudTooltip Text="@TooltipText">
    <MudCard>
        <MudCardMedia @onclick="OnImageClick"
                      Class="rounded-sm can-click"
                      Height="100"
                      Image="@(ImageService.GetPersonImageData(ImageFileName))" />
        <MudCardContent>
            <Text Typography="Typo.body2">@Title</Text>
        </MudCardContent>
        <MudCardActions>
            <CustomButton OnClick="OnEditClick"
                          Text="Edit Autograph"
                          Variant="Variant.Text" />
        </MudCardActions>
    </MudCard>
</MudTooltip>