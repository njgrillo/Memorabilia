@inherits MemorabiliaItem<SaveMagazineViewModel>

<EditMemorabiliaPage DomainImageRootPath="@DomainImageRootPath"
                     Item="ViewModel"
                     OnLoad="OnLoad"
                     OnSave="OnSave" 
                     TItem="SaveMagazineViewModel">
    <Content>
        <MemorabiliaItemEditor DisplayItemTypeGameStyle="false"
                               DisplayItemTypeLevel="false"
                               DisplayMultiPersonSelector="true"
                               DisplayMultiSportSelector="true"
                               DisplayMultiTeamSelector="true"
                               TItem="SaveMagazineViewModel"
                               ViewModel="ViewModel">
            <AdditionalContent>
                <DivRowCol3>
                    <Content>
                        <OrientationDropDown SelectedValue="ViewModel.OrientationId"
                                             SelectionChanged="(p) => ViewModel.OrientationId = p" />
                    </Content>
                    <ContentColumn2>
                        <MudDatePicker @bind-Date="ViewModel.Date"
                                       DateFormat="MM/dd/yyyy"
                                       Editable="true"
                                       Label="Date"
                                       Mask="@(new DateMask("MM/dd/yyyy"))"
                                       Variant="Variant.Outlined" />
                    </ContentColumn2>
                </DivRowCol3>
                <DivRowCol3>
                    <Content>
                        <MudSwitch Checked="@ViewModel.Matted"
                                   CheckedChanged="(p) => ViewModel.Matted = p"
                                   Color="MudBlazor.Color.Success"
                                   Label="Is Matted?"
                                   T="bool" />
                    </Content>
                </DivRowCol3>
            </AdditionalContent>
        </MemorabiliaItemEditor>
    </Content>
</EditMemorabiliaPage>