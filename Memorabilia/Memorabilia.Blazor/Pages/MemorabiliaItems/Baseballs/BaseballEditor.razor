@inherits MemorabiliaItem<SaveBaseballViewModel>

<EditPage ContinueNavigationPath="@ViewModel.ContinueNavigationPath"
          DomainImageRootPath="@DomainImageRootPath"
          EditMode="ViewModel.EditModeType"
          ExitNavigationPath="@ViewModel.ExitNavigationPath"
          ImageFileName="@ViewModel.ImageFileName"
          ItemName="@ViewModel.ItemType.Name"
          Model="ViewModel"
          OnLoad="OnLoad"
          OnSave="OnSave"
          PageFooterButtonText="@ViewModel.ExitButtonText"
          PageFooterNavigationPath="@ViewModel.BackNavigationPath"
          PageTitle="@ViewModel.PageTitle"
          TItem="SaveBaseballViewModel"
          UseMultipleButtons="true">
    <TimelineContent>
        <MemorabiliaItemTimeline EditMode="ViewModel.EditModeType"
                                 ItemTypeName="@ViewModel.ItemType.Name"
                                 MemorabiliaId="ViewModel.MemorabiliaId"
                                 MemorabiliaItemStep="ViewModel.MemorabiliaItemStep" />
    </TimelineContent>
    <Content>
        <DivRowCol3 HideColumn3="@(!ViewModel.DisplayGameStyleType)"
                    HideColumn4="@(!ViewModel.DisplayBaseballType)">
            <Content>
                <ItemTypeBrandDropDown ItemType="ViewModel.ItemType"
                                       SelectedValue="ViewModel.BrandId"
                                       SelectionChanged="(p) => ViewModel.BrandId = p" />
            </Content>
            <ContentColumn2>
                <ItemTypeLevelDropDown ItemType="ViewModel.ItemType"
                                       SelectedValue="ViewModel.LevelTypeId"
                                       SelectionChanged="(p) => ViewModel.LevelTypeId = p" />
            </ContentColumn2>
            <ContentColumn3>
                <ItemTypeGameStyleDropDown ItemType="ViewModel.ItemType"
                                           SelectedValue="ViewModel.GameStyleTypeId"
                                           SelectionChanged="(p) => ViewModel.GameStyleTypeId = p" />
            </ContentColumn3>
            <ContentColumn4>                
                <BaseballTypeDropDown SelectedValue="ViewModel.BaseballTypeId"
                                      SelectionChanged="(p) => ViewModel.BaseballTypeId = p" />
            </ContentColumn4>
        </DivRowCol3>
        <DivRowCol3 HideColumn2="@(!ViewModel.DisplayCommissioner)"
                    HideColumn3="@(!ViewModel.DisplayGameDate)">
            <Content>
                <ItemTypeSizeDropDown ItemType="ViewModel.ItemType"
                                      SelectedValue="@ViewModel.SizeId"
                                      SelectionChanged="(p) => ViewModel.SizeId = p" />
            </Content>
            <ContentColumn2>
                <CommissionerDropDown SelectedValue="@ViewModel.CommissionerId"
                                      SelectionChanged="(p) => ViewModel.CommissionerId = p"
                                      SportLeagueLevelId="SportLeagueLevel.MajorLeagueBaseball.Id" />
            </ContentColumn2>
            <ContentColumn3>
                <MudDatePicker @bind-Date="ViewModel.GameDate"
                               Label="Game Date"
                               Variant="Variant.Outlined" />                
            </ContentColumn3>
            <ContentColumn4>
                <PrettyBlazor.Condition Evaluation="ViewModel.DisplayBaseballTypeYear">
                    <Match>
                        <NullableIntField Label="Year"
                                          Value="ViewModel.BaseballTypeYear"
                                          ValueChanged="@((p) => ViewModel.BaseballTypeYear = p)" />
                    </Match>
                </PrettyBlazor.Condition>
                <PrettyBlazor.Condition Evaluation="ViewModel.DisplayBaseballTypeAnniversary">
                    <Match>
                        <TextField HelperText="Example: 25th"
                                   Label="Anniversary"
                                   SelectedText="@ViewModel.BaseballTypeAnniversary"
                                   SelectedTextChanged="@((p) => ViewModel.BaseballTypeAnniversary = p)" />
                    </Match>
                </PrettyBlazor.Condition>  
            </ContentColumn4>
        </DivRowCol3>
        <PersonSelector CanFilterBySport="true"
                        CanToggle="true"
                        ItemType="ViewModel.ItemType"
                        SelectedPerson="ViewModel.Person"
                        SelectedPersonChanged="(p) => ViewModel.Person = p"
                        Sport="ViewModel.Sport" />  
        <MultiTeamSelector CanToggle="true" 
                           ItemType="ViewModel.ItemType"
                           Teams="ViewModel.Teams" />
    </Content>
</EditPage>

