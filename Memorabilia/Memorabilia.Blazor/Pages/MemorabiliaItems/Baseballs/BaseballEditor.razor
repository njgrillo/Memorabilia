@inherits MemorabiliaItem<SaveBaseballViewModel>

<EditMemorabiliaPage DomainImageRootPath="@DomainImageRootPath"
                     Item="ViewModel"
                     OnLoad="OnLoad"
                     OnSave="OnSave"
                     TItem="SaveBaseballViewModel">
    <Content>
        <MemorabiliaItemEditor DisplaySinglePersonSelector="true"
                               DisplayMultiTeamSelector="true"
                               TItem="SaveBaseballViewModel"
                               ViewModel="ViewModel">
            <AdditionalContent>
                <DivRowCol3 HideColumn1="@(!ViewModel.DisplayBaseballType)"
                            HideColumn2="@(!ViewModel.DisplayCommissioner && !ViewModel.DisplayLeaguePresident)">
                    <Content>
                        <BaseballTypeDropDown GameStyleType="ViewModel.GameStyleType"
                                              SelectedValue="ViewModel.BaseballTypeId"
                                              SelectionChanged="(p) => ViewModel.BaseballTypeId = p" />
                    </Content>
                    <ContentColumn2>
                        <PrettyBlazor.Condition Evaluation="ViewModel.DisplayCommissioner">
                            <Match>
                                <CommissionerDropDown SelectedValue="@ViewModel.CommissionerId"
                                                      SelectionChanged="(p) => ViewModel.CommissionerId = p"
                                                      SportLeagueLevel="SportLeagueLevel.MajorLeagueBaseball" />
                            </Match>
                        </PrettyBlazor.Condition>
                        <PrettyBlazor.Condition Evaluation="ViewModel.DisplayLeaguePresident">
                            <Match>
                                <LeaguePresidentDropDown League="@ViewModel.League"
                                                         SelectedValue="@ViewModel.LeaguePresidentId"
                                                         SelectionChanged="(p) => ViewModel.LeaguePresidentId = p"
                                                         SportLeagueLevel="SportLeagueLevel.MajorLeagueBaseball" />
                            </Match>
                        </PrettyBlazor.Condition>
                    </ContentColumn2>
                    <ContentColumn3>
                        <PrettyBlazor.Condition Evaluation="ViewModel.DisplayBaseballTypeYear">
                            <Match>
                                <NullableIntField Label="Year"
                                                  Maximum="int.MaxValue"
                                                  Value="ViewModel.BaseballTypeYear"
                                                  ValueChanged="@((p) => ViewModel.BaseballTypeYear = p)" />
                            </Match>
                        </PrettyBlazor.Condition>
                        <PrettyBlazor.Condition Evaluation="ViewModel.DisplayBaseballTypeAnniversary">
                            <Match>
                                <TextField HelperText="Example: 25th"
                                           Label="Anniversary"
                                           MaxLength="5"
                                           SelectedText="@ViewModel.BaseballTypeAnniversary"
                                           SelectedTextChanged="@((p) => ViewModel.BaseballTypeAnniversary = p)" />
                            </Match>
                        </PrettyBlazor.Condition>
                    </ContentColumn3>
                </DivRowCol3>
            </AdditionalContent>
        </MemorabiliaItemEditor>
    </Content>
</EditMemorabiliaPage>