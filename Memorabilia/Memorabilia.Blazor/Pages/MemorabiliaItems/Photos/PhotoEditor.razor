@inherits MemorabiliaItem<SavePhotoViewModel>

<EditMemorabiliaPage DomainImageRootPath="@DomainImageRootPath"
                     Item="ViewModel"
                     OnLoad="OnLoad"
                     OnSave="OnSave" 
                     TItem="SavePhotoViewModel">
    <Content>
        <MemorabiliaItemEditor DisplayItemTypeLevel="false"
                               DisplayMultiPersonSelector="true"
                               DisplayMultiSportSelector="true"
                               DisplayMultiTeamSelector="true"
                               TItem="SavePhotoViewModel"
                               ViewModel="ViewModel">
            <AdditionalContent>
                <DivRowCol3>
                    <Content>
                        <PhotoTypeDropDown SelectedValue="ViewModel.PhotoTypeId"
                                           SelectionChanged="(p) => ViewModel.PhotoTypeId = p" />
                    </Content>
                    <ContentColumn2>
                        <OrientationDropDown SelectedValue="ViewModel.OrientationId"
                                             SelectionChanged="(p) => ViewModel.OrientationId = p" />
                    </ContentColumn2>
                </DivRowCol3>
                <DivRowCol3>
                    <Content>
                        <BooleanCheckBox Checked="@ViewModel.Framed"
                                         CheckedChanged="(p) => ViewModel.Framed = p"
                                         Label="Framed" />
                    </Content>
                    <ContentColumn2>
                        <BooleanCheckBox Checked="@ViewModel.Matted"
                                         CheckedChanged="(p) => ViewModel.Matted = p"
                                         Label="Matted" />
                    </ContentColumn2>
                </DivRowCol3>
            </AdditionalContent>
        </MemorabiliaItemEditor>
    </Content>
</EditMemorabiliaPage>