<MemorabiliaFilter OnFilter="OnFilter" />
<DivPad2>
    <LeftRightSection>
        <Left>
            <Switch Checked="@IsDetailView"
                    CheckedChanged="(p) => IsDetailView = p"
                    Label="Detail View" />
        </Left>
        <Right>
            <AddButton OnClick="AddMemorabilia" />
        </Right>
    </LeftRightSection>    
</DivPad2>
<DivPad2>
    <Condition Evaluation="IsDetailView">
        <Match>
            <MemorabiliaDetailGrid Filter="_filter" />
        </Match>
        <NotMatch>
            <MemorabiliaGalleryGrid Filter="_filter" />
        </NotMatch>
    </Condition>
</DivPad2>
<DivRowCol12Center>
    <MudTooltip Text="@Model.AddText">
        <MudFab Color="MudBlazor.Color.Primary"
                Icon="@Icons.Material.Outlined.AddCircleOutline"
                OnClick="@(_ => NavigationManager.NavigateTo(@Model.AddRoute))" />
    </MudTooltip>
</DivRowCol12Center>
