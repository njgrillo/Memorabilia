<MemorabiliaFilter OnFilter="OnFilter" />
<DivPad2>
    <LeftRightSection>
        <Left>
            <Switch Checked="IsDetailView"
                    CheckedChanged="(p) => IsDetailView = p"
                    Label="Detail View" />
        </Left>
        <Right>
            <AddButton OnClick="AddMemorabilia" />
        </Right>
    </LeftRightSection>    
</DivPad2>
<DivPad2>
    <HiddenControl Visible="IsDetailView">
        <MemorabiliaDetailGrid Filter="_filter"
                               GridLoaded="@(() => ReloadGrid = false)"
                               ReloadGrid="ReloadGrid" />
    </HiddenControl>
    <HiddenControl Visible="@(!IsDetailView)">
        <MemorabiliaGalleryGrid Filter="_filter" />
    </HiddenControl>
</DivPad2>
<DivRowCol12Center>
    <Fab Color="MudBlazor.Color.Primary"
         OnClick="@(_ => NavigationManager.NavigateTo($"{NavigationPath.Memorabilia}/{Constant.EditModeType.Update.Name}"))"
         StartIcon="@Icons.Material.Outlined.AddCircleOutline"
         TooltipText="Add Memorabilia" />
</DivRowCol12Center>
