@inherits MemorabiliaItem<BatEditModel>

<EditMemorabiliaPage Item="EditModel"
                     OnLoad="OnLoad"
                     OnSave="OnSave" 
                     TItem="BatEditModel">
    <Content>
        <MemorabiliaItemEditor DisplayItemTypeLevel="false" 
                               DisplaySinglePersonSelector="true"
                               DisplaySingleTeamSelector="true"
                               Model="EditModel"
                               TItem="BatEditModel">
            <AdditionalContent>
                <DivRowCol3>
                    <Content>
                        <BatTypeDropDown GameStyleType="EditModel.GameStyleType"
                                         SelectedValue="EditModel.BatTypeId"
                                         SelectionChanged="(p) => EditModel.BatTypeId = p" />
                    </Content>
                    <ContentColumn2>
                        <ColorDropDown ItemType="EditModel.ItemType"
                                       SelectedValue="EditModel.ColorId"
                                       SelectionChanged="(p) => EditModel.ColorId = p" />
                    </ContentColumn2>
                    <ContentColumn3>
                        <NullableIntField Label="Length"
                                          Maximum="int.MaxValue"
                                          Value="EditModel.Length"
                                          ValueChanged="@((p) => EditModel.Length = p)" />
                    </ContentColumn3>
                </DivRowCol3>
            </AdditionalContent>
        </MemorabiliaItemEditor>
    </Content>
</EditMemorabiliaPage>