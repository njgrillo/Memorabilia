<div style="border: 1px solid black; margin-top: 2%; margin-bottom: 2%; margin-left: 2%; margin-right: 2%;">
    <MudExpansionPanels MultiExpansion="true">
        <MudExpansionPanel Text="Memorabilia Filters">
            <div class="row">
                <div class="col-2">
                    <div class="form-group">
                        <ItemTypeDropDown MultiSelect="true"
                                          SelectedItems="Model.ItemTypeIds"
                                          SelectedItemsChanged="(p) => Model.ItemTypeIds = p" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <BrandDropDown MultiSelect="true"
                                       SelectedItems="Model.BrandIds"
                                       SelectedItemsChanged="(p) => Model.BrandIds = p" />
                    </div>
                </div>                
                <div class="col-2">
                    <div class="form-group">
                        <SizeDropDown MultiSelect="true"
                                      SelectedItems="Model.SizeIds"
                                      SelectedItemsChanged="(p) => Model.SizeIds = p" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <AcquisitionTypeDropDown MultiSelect="true"
                                                 SelectedItems="Model.AcquisitionTypeIds"
                                                 SelectedItemsChanged="(p) => Model.AcquisitionTypeIds = p" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <MudDatePicker @bind-Date="Model.AcquiredDateBegin"
                                       DateFormat="MM/dd/yyyy"
                                       Editable="true"
                                       Label="Acquired Date - Begin"
                                       Mask="@(new DateMask("MM/dd/yyyy"))"
                                       Variant="Variant.Outlined" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <MudDatePicker @bind-Date="Model.AcquiredDateEnd"
                                       DateFormat="MM/dd/yyyy"
                                       Editable="true"
                                       Label="Acquired Date - End"
                                       Mask="@(new DateMask("MM/dd/yyyy"))"
                                       Variant="Variant.Outlined" />
                    </div>
                </div>                
            </div>
            <div class="row">                
                <div class="col-2">
                    <div class="form-group">
                        <ConditionDropDown MultiSelect="true"
                                           SelectedItems="Model.ConditionIds"
                                           SelectedItemsChanged="(p) => Model.ConditionIds = p" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <LevelTypeDropDown MultiSelect="true"
                                           SelectedItems="Model.LevelTypeIds"
                                           SelectedItemsChanged="(p) => Model.LevelTypeIds = p" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <NullableDecimalField Label="Estimated Value Low ($)"
                                              Value="Model.EstimatedValueLow"
                                              ValueChanged="@((p) => Model.EstimatedValueLow = p)" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <NullableDecimalField Label="Estimated Value High ($)"
                                              Value="Model.EstimatedValueHigh"
                                              ValueChanged="@((p) => Model.EstimatedValueHigh = p)" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <NullableDecimalField Label="Cost Low ($)"
                                              Value="Model.CostLow"
                                              ValueChanged="@((p) => Model.CostLow = p)" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <NullableDecimalField Label="Cost High ($)"
                                              Value="Model.CostHigh"
                                              ValueChanged="@((p) => Model.CostHigh = p)" />
                    </div>
                </div>
            </div>
            <div class="row">                
                <div class="col-2">
                    <div class="form-group">
                        <SportDropDown MultiSelect="true"
                                       SelectedItems="Model.SportIds"
                                       SelectedItemsChanged="(p) => Model.SportIds = p" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <SportLeagueLevelDropDown MultiSelect="true"
                                                  SelectedItems="Model.SportLeagueLevelIds"
                                                  SelectedItemsChanged="(p) => Model.SportLeagueLevelIds = p" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <FranchiseDropDown MultiSelect="true"
                                           SelectedItems="Model.FranchiseIds"
                                           SelectedItemsChanged="(p) => Model.FranchiseIds = p" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <PrivacyTypeDropDown MultiSelect="true"
                                             SelectedItems="Model.PrivacyTypeIds"
                                             SelectedItemsChanged="(p) => Model.PrivacyTypeIds = p" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <PurchaseTypeDropDown MultiSelect="true"
                                              SelectedItems="Model.PurchaseTypeIds"
                                              SelectedItemsChanged="(p) => Model.PurchaseTypeIds = p" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <GameStyleTypeDropDown MultiSelect="true"
                                               SelectedItems="Model.GameStyleTypeIds"
                                               SelectedItemsChanged="(p) => Model.GameStyleTypeIds = p" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <SearchPersonSelector SelectedPeople="Model.People"
                                              SelectedPeopleChanged="@((people) => Model.People = people)" />
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <SearchTeamSelector SelectedTeams="Model.Teams"
                                            SelectedTeamsChanged="(teams) => Model.Teams = teams" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <RadioField EmptyValue="ImageFilter.None"
                                    Options="ImageFilter.FilterItems"
                                    SelectionChanged="(p) => Model.ImageFilter = p"
                                    SelectedOption="Model.ImageFilter"
                                    TItemType="ImageFilter" />
                    </div>
                </div>
            </div>
        </MudExpansionPanel>
        <MudExpansionPanel Text="Autograph Filters">            
            <div class="row">   
                <div class="col-2">
                    <div class="form-group">
                        <ColorDropDown DisplayAutographColorsOnly="true"
                                       MultiSelect="true"
                                       SelectedItems="Model.AutographSearchCriteria.ColorIds"
                                       SelectedItemsChanged="(p) => Model.AutographSearchCriteria.ColorIds = p" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <WritingInstrumentDropDown MultiSelect="true"
                                                   SelectedItems="Model.AutographSearchCriteria.WritingInstrumentIds"
                                                   SelectedItemsChanged="(p) => Model.AutographSearchCriteria.WritingInstrumentIds = p" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <ConditionDropDown MultiSelect="true"
                                           SelectedItems="Model.AutographSearchCriteria.ConditionIds"
                                           SelectedItemsChanged="(p) => Model.AutographSearchCriteria.ConditionIds = p" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <AcquisitionTypeDropDown IsAutograph="true"
                                                 MultiSelect="true"
                                                 SelectedItems="Model.AutographSearchCriteria.AcquisitionTypeIds"
                                                 SelectedItemsChanged="(p) => Model.AutographSearchCriteria.AcquisitionTypeIds = p" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <MudDatePicker @bind-Date="Model.AutographSearchCriteria.AcquiredDateBegin"
                                       DateFormat="MM/dd/yyyy"
                                       Editable="true"
                                       Label="Acquired Date - Begin"
                                       Mask="@(new DateMask("MM/dd/yyyy"))"
                                       Variant="Variant.Outlined" />
                    </div>
                </div> 
                <div class="col-2">
                    <div class="form-group">
                        <MudDatePicker @bind-Date="Model.AutographSearchCriteria.AcquiredDateEnd"
                                       DateFormat="MM/dd/yyyy"
                                       Editable="true"
                                       Label="Acquired Date - End"
                                       Mask="@(new DateMask("MM/dd/yyyy"))"
                                       Variant="Variant.Outlined" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <div class="form-group">
                        <NullableIntField HideSpinButtons="false" 
                                          Label="Grade"
                                          Maximum="10"                                          
                                          Value="Model.AutographSearchCriteria.Grade"
                                          ValueChanged="@((p) => Model.AutographSearchCriteria.Grade = p)" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <SpotDropDown MultiSelect="true"
                                      SelectedItems="Model.AutographSearchCriteria.SpotIds"
                                      SelectedItemsChanged="(p) => Model.AutographSearchCriteria.SpotIds = p" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <NullableDecimalField Label="Cost Low ($)"
                                              Value="Model.AutographSearchCriteria.CostLow"
                                              ValueChanged="@((p) => Model.AutographSearchCriteria.CostLow = p)" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <NullableDecimalField Label="Cost High ($)"
                                              Value="Model.AutographSearchCriteria.CostHigh"
                                              ValueChanged="@((p) => Model.AutographSearchCriteria.CostHigh = p)" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <NullableDecimalField Label="Estimated Value Low ($)"
                                              Value="Model.AutographSearchCriteria.EstimatedValueLow"
                                              ValueChanged="@((p) => Model.AutographSearchCriteria.EstimatedValueLow = p)" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <NullableDecimalField Label="Estimated Value High ($)"
                                              Value="Model.AutographSearchCriteria.EstimatedValueHigh"
                                              ValueChanged="@((p) => Model.AutographSearchCriteria.EstimatedValueHigh = p)" />
                    </div>
                </div>                
            </div>
            <div class="row">
                <div class="col-2">
                    <div class="form-group">
                        <SportDropDown MultiSelect="true"
                                       SelectedItems="Model.AutographSearchCriteria.SportIds"
                                       SelectedItemsChanged="(p) => Model.AutographSearchCriteria.SportIds = p" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <SportLeagueLevelDropDown MultiSelect="true"
                                                  SelectedItems="Model.AutographSearchCriteria.SportLeagueLevelIds"
                                                  SelectedItemsChanged="(p) => Model.AutographSearchCriteria.SportLeagueLevelIds = p" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <FranchiseDropDown MultiSelect="true"
                                           SelectedItems="Model.AutographSearchCriteria.FranchiseIds"
                                           SelectedItemsChanged="(p) => Model.AutographSearchCriteria.FranchiseIds = p" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    <div class="form-group">
                        <RadioField EmptyValue="AuthenticationFilter.None"
                                    Options="AuthenticationFilter.FilterItems"
                                    SelectionChanged="(p) => Model.AutographSearchCriteria.AuthenticationFilter = p"
                                    SelectedOption="Model.AutographSearchCriteria.AuthenticationFilter"
                                    TItemType="AuthenticationFilter" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <RadioField EmptyValue="InscriptionFilter.None"
                                    Options="InscriptionFilter.FilterItems"
                                    SelectionChanged="(p) => Model.AutographSearchCriteria.InscriptionFilter = p"
                                    SelectedOption="Model.AutographSearchCriteria.InscriptionFilter"
                                    TItemType="InscriptionFilter" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <RadioField EmptyValue="PersonalizationFilter.None" 
                                    Options="PersonalizationFilter.FilterItems"
                                    SelectionChanged="(p) => Model.AutographSearchCriteria.PersonalizationFilter = p"
                                    SelectedOption="Model.AutographSearchCriteria.PersonalizationFilter"
                                    TItemType="PersonalizationFilter" />
                    </div>
                </div>
                <div class="col-2">
                    <div class="form-group">
                        <RadioField EmptyValue="ImageFilter.None"
                                    Options="ImageFilter.FilterItems"
                                    SelectionChanged="(p) => Model.AutographSearchCriteria.ImageFilter = p"
                                    SelectedOption="Model.AutographSearchCriteria.ImageFilter"
                                    TItemType="ImageFilter" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <SearchPersonSelector SelectedPeople="Model.AutographSearchCriteria.People"
                                              SelectedPeopleChanged="@((people) => Model.AutographSearchCriteria.People = people)" />
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <SearchTeamSelector SelectedTeams="Model.AutographSearchCriteria.Teams"
                                            SelectedTeamsChanged="(teams) => Model.AutographSearchCriteria.Teams = teams" />
                    </div>
                </div>
            </div>
        </MudExpansionPanel>
    </MudExpansionPanels>
    <DivPad2>
        <Content>
            <DivRowCol12Center>
                <Content>
                    <CustomButton OnClick="FilterItems"
                                  Text="Filter" />
                    <CustomButton Color="MudBlazor.Color.Secondary"
                                  OnClick="ResetCriteria"
                                  Text="Reset Criteria" />
                </Content>
            </DivRowCol12Center>
        </Content>
    </DivPad2>
</div>

