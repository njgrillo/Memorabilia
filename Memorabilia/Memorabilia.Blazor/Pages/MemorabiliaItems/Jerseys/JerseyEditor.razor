@inherits MemorabiliaItem<SaveJerseyViewModel>

<EditPage ContinueNavigationPath="@ViewModel.ContinueNavigationPath"
          DomainImageRootPath="@DomainImageRootPath"
          EditMode="ViewModel.EditModeType"
          ExitNavigationPath="@ViewModel.ExitNavigationPath"
          ImageFileName="@ViewModel.ImageFileName"
          ItemName="@ViewModel.ItemType.Name"
          Model="ViewModel"
          OnLoad="OnLoad"
          OnSave="OnSave"
          PageFooterButtonText="@ViewModel.ExitButtonText"
          PageFooterNavigationPath="@ViewModel.ExitNavigationPath"
          PageTitle="@ViewModel.PageTitle"
          TItem="SaveJerseyViewModel"
          UseMultipleButtons="true">
    <TimelineContent>
        <MemorabiliaItemTimeline EditMode="ViewModel.EditModeType"
                                 ItemTypeName="@ViewModel.ItemType.Name"
                                 MemorabiliaId="ViewModel.MemorabiliaId"
                                 MemorabiliaItemStep="ViewModel.MemorabiliaItemStep" />
    </TimelineContent>
    <Content>
        <MemorabiliaItemEditor DisplayMultiPersonSelector="true"                               
                               DisplayMultiTeamSelector="true"
                               DisplaySingleSportSelector="true"
                               TItem="SaveJerseyViewModel"
                               ViewModel="ViewModel">
            <AdditionalContent>
                <DivRowCol3>
                    <Content>
                        <JerseyQualityTypeDropDown Disabled="!ViewModel.IsGameWorthly"
                                                   SelectedValue="ViewModel.JerseyQualityTypeId"
                                                   SelectionChanged="(p) => ViewModel.JerseyQualityTypeId = p" />
                    </Content>
                    <ContentColumn2>
                        <JerseyTypeDropDown GameStyleType="ViewModel.GameStyleType"
                                            SelectedValue="ViewModel.JerseyTypeId"
                                            SelectionChanged="(p) => ViewModel.JerseyTypeId = p" />
                    </ContentColumn2>
                    <ContentColumn3>
                        <JerseyStyleTypeDropDown SelectedValue="ViewModel.JerseyStyleTypeId"
                                                 SelectionChanged="(p) => ViewModel.JerseyStyleTypeId = p" />
                    </ContentColumn3>
                </DivRowCol3>
            </AdditionalContent>
        </MemorabiliaItemEditor>        
    </Content>
</EditPage>