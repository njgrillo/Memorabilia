@inherits MemorabiliaItem<SaveCanvasViewModel>

<EditMemorabiliaPage DomainImageRootPath="@DomainImageRootPath"
                     Item="ViewModel"
                     OnLoad="OnLoad"
                     OnSave="OnSave" 
                     TItem="SaveCanvasViewModel">
    <Content>
        <MemorabiliaItemEditor DisplayItemTypeGameStyle="false"
                               DisplayItemTypeLevel="false"
                               DisplayMultiPersonSelector="true"
                               DisplayMultiSportSelector="true"
                               DisplayMultiTeamSelector="true"
                               TItem="SaveCanvasViewModel"
                               ViewModel="ViewModel">
            <AdditionalContent>
                <DivRowCol3>
                    <Content>
                        <OrientationDropDown SelectedValue="ViewModel.OrientationId"
                                             SelectionChanged="(p) => ViewModel.OrientationId = p" />
                    </Content>                    
                </DivRowCol3>
                <DivRowCol3>
                    <Content>
                        <MudSwitch Checked="@ViewModel.Framed"
                                   CheckedChanged="(p) => ViewModel.Framed = p"
                                   Color="MudBlazor.Color.Success"
                                   Label="Framed?"
                                   T="bool" />
                    </Content>
                    <ContentColumn2>
                        <MudSwitch Checked="@ViewModel.Matted"
                                   CheckedChanged="(p) => ViewModel.Matted = p"
                                   Color="MudBlazor.Color.Success"
                                   Label="Matted?"
                                   T="bool" />
                    </ContentColumn2>
                    <ContentColumn3>
                        <MudSwitch Checked="@ViewModel.Stretched"
                                   CheckedChanged="(p) => ViewModel.Stretched = p"
                                   Color="MudBlazor.Color.Success"
                                   Label="Stretched?"
                                   T="bool" />
                    </ContentColumn3>
                </DivRowCol3>
            </AdditionalContent>
        </MemorabiliaItemEditor>
    </Content>
</EditMemorabiliaPage>