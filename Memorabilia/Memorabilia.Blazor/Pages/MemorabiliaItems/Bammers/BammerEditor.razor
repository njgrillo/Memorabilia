@inherits MemorabiliaItem<SaveBammerViewModel>

<EditMemorabiliaPage DomainImageRootPath="@DomainImageRootPath"
                     Item="ViewModel"
                     OnLoad="OnLoad"
                     OnSave="OnSave" 
                     TItem="SaveBammerViewModel">
    <Content>
        <MemorabiliaItemEditor DisplayItemTypeGameStyle="false" 
                               DisplayItemTypeSize="false"
                               DisplayMultiPersonSelector="true"
                               DisplayMultiTeamSelector="true"
                               DisplaySingleSportSelector="true"
                               TItem="SaveBammerViewModel"
                               ViewModel="ViewModel">
            <AdditionalContent>
                <DivRowCol3>
                    <Content>
                        <BammerTypeDropDown SelectedValue="ViewModel.BammerTypeId"
                                            SelectionChanged="(p) => ViewModel.BammerTypeId = p" />               
                    </Content>
                    <ContentColumn2>
                        <NullableIntField Label="Year"
                                          Maximum="int.MaxValue"
                                          Value="ViewModel.Year"
                                          ValueChanged="@((p) => ViewModel.Year = p)" />                
                    </ContentColumn2>
                    <ContentColumn3>
                        <BooleanCheckBox Checked="@ViewModel.InPackage"
                                         CheckedChanged="(p) => ViewModel.InPackage = p"
                                         Label="In Package" />
                    </ContentColumn3>
                </DivRowCol3>
            </AdditionalContent>
        </MemorabiliaItemEditor>  
    </Content>
</EditMemorabiliaPage>
