@inherits MemorabiliaItem<BammerEditModel>

<EditMemorabiliaPage Item="EditModel"
                     OnLoad="OnLoad"
                     OnSave="OnSave" 
                     TItem="BammerEditModel">
    <Content>
        <MemorabiliaItemEditor CanFilterPersonBySport="true" 
                               DisplayItemTypeGameStyle="false" 
                               DisplayItemTypeLevel="false"
                               DisplayItemTypeSize="false"
                               DisplayMultiPersonSelector="true"
                               DisplayMultiTeamSelector="true"
                               DisplaySingleSportSelector="true"
                               Model="EditModel"
                               TItem="BammerEditModel">
            <AdditionalContent>
                <Condition Evaluation="EditModel.CanHaveBammerType">
                    <Match>
                        <DivRowCol3>
                            <Content>
                                <BammerTypeDropDown SelectedValue="EditModel.BammerTypeId"
                                                    SelectionChanged="(p) => EditModel.BammerTypeId = p" />
                            </Content>
                        </DivRowCol3>
                    </Match>
                </Condition>                
                <DivRowCol3>
                    <Content>
                        <NullableIntField Label="Year"
                                          Maximum="int.MaxValue"
                                          Value="EditModel.Year"
                                          ValueChanged="@((p) => EditModel.Year = p)" />
                    </Content>
                    <ContentColumn2>
                        <MudSwitch Checked="@EditModel.InPackage"
                                   CheckedChanged="(p) => EditModel.InPackage = p"
                                   Color="MudBlazor.Color.Success"
                                   Label="Is In Package?"
                                   T="bool" />
                    </ContentColumn2>
                </DivRowCol3>
            </AdditionalContent>
        </MemorabiliaItemEditor>  
    </Content>
</EditMemorabiliaPage>
