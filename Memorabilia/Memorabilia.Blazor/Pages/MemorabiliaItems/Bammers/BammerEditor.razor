@inherits MemorabiliaItem<BammerEditModel>

<EditMemorabiliaPage Item="ViewModel"
                     OnLoad="OnLoad"
                     OnSave="OnSave" 
                     TItem="BammerEditModel">
    <Content>
        <MemorabiliaItemEditor CanFilterPersonBySport="true" 
                               DisplayItemTypeGameStyle="false" 
                               DisplayItemTypeLevel="false"
                               DisplayItemTypeSize="false"
                               DisplayMultiPersonSelector="true"
                               DisplayMultiTeamSelector="true"
                               DisplaySingleSportSelector="true"
                               TItem="BammerEditModel"
                               ViewModel="ViewModel">
            <AdditionalContent>
                <PrettyBlazor.Condition Evaluation="ViewModel.CanHaveBammerType">
                    <Match>
                        <DivRowCol3>
                            <Content>
                                <BammerTypeDropDown SelectedValue="ViewModel.BammerTypeId"
                                                    SelectionChanged="(p) => ViewModel.BammerTypeId = p" />
                            </Content>
                        </DivRowCol3>
                    </Match>
                </PrettyBlazor.Condition>                
                <DivRowCol3>
                    <Content>
                        <NullableIntField Label="Year"
                                          Maximum="int.MaxValue"
                                          Value="ViewModel.Year"
                                          ValueChanged="@((p) => ViewModel.Year = p)" />
                    </Content>
                    <ContentColumn2>
                        <MudSwitch Checked="@ViewModel.InPackage"
                                   CheckedChanged="(p) => ViewModel.InPackage = p"
                                   Color="MudBlazor.Color.Success"
                                   Label="Is In Package?"
                                   T="bool" />
                    </ContentColumn2>
                </DivRowCol3>
            </AdditionalContent>
        </MemorabiliaItemEditor>  
    </Content>
</EditMemorabiliaPage>
