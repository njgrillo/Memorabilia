@inherits MemorabiliaItem<SaveBobbleheadViewModel>

<EditMemorabiliaPage Item="ViewModel"
                     OnLoad="OnLoad"
                     OnSave="OnSave" 
                     TItem="SaveBobbleheadViewModel">
    <Content>
        <MemorabiliaItemEditor DisplayItemTypeBrand="false" 
                               DisplayItemTypeGameStyle="false"
                               DisplaySinglePersonSelector="true"
                               DisplaySingleSportSelector="true"
                               DisplaySingleTeamSelector="true"
                               TItem="SaveBobbleheadViewModel"
                               ViewModel="ViewModel">
            <AdditionalContent>
                <DivRowCol3>
                    <Content>
                        <NullableIntField Label="Year"
                                          Maximum="int.MaxValue"
                                          Value="ViewModel.Year"
                                          ValueChanged="@((p) => ViewModel.Year = p)" />
                    </Content>
                    <ContentColumn2>
                        <MudSwitch Checked="@ViewModel.HasBox"
                                   CheckedChanged="(p) => ViewModel.HasBox = p"
                                   Color="MudBlazor.Color.Success"
                                   Label="Has Box?"
                                   T="bool" />
                    </ContentColumn2>
                </DivRowCol3>
            </AdditionalContent>
        </MemorabiliaItemEditor>
    </Content>
</EditMemorabiliaPage>