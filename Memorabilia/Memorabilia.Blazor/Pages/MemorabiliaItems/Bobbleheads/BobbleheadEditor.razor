@inherits MemorabiliaItem<SaveBobbleheadViewModel>

<EditMemorabiliaPage DomainImageRootPath="@DomainImageRootPath"
                     Item="ViewModel"
                     OnLoad="OnLoad"
                     OnSave="OnSave" 
                     TItem="SaveBobbleheadViewModel">
    <Content>
        <MemorabiliaItemEditor DisplayItemTypeGameStyle="false"
                               DisplaySinglePersonSelector="true"
                               DisplaySingleSportSelector="true"
                               DisplaySingleTeamSelector="true"
                               TItem="SaveBobbleheadViewModel"
                               ViewModel="ViewModel">
            <AdditionalContent>
                <DivRowCol3>
                    <Content>
                        <NullableIntField Label="Year"
                                          Maximum="int.MaxValue"
                                          Value="ViewModel.Year"
                                          ValueChanged="@((p) => ViewModel.Year = p)" />
                    </Content>
                    <ContentColumn2>
                        <BooleanCheckBox Checked="@ViewModel.HasBox"
                                         CheckedChanged="(p) => ViewModel.HasBox = p"
                                         Label="Has Box" />
                    </ContentColumn2>
                </DivRowCol3>
            </AdditionalContent>
        </MemorabiliaItemEditor>
    </Content>
</EditMemorabiliaPage>