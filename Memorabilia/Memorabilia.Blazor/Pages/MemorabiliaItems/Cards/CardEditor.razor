@inherits MemorabiliaItem<SaveCardViewModel>

<EditMemorabiliaPage DomainImageRootPath="@DomainImageRootPath"
                     Item="ViewModel"
                     OnLoad="OnLoad"
                     OnSave="OnSave" 
                     TItem="SaveCardViewModel">
    <Content>
        <MemorabiliaItemEditor DisplayItemTypeGameStyle="false" 
                               DisplayMultiPersonSelector="true"
                               DisplayMultiSportSelector="true"
                               DisplayMultiTeamSelector="true"
                               TItem="SaveCardViewModel"
                               ViewModel="ViewModel">
            <AdditionalContent>
                <DivRowCol3>
                    <Content>
                        <OrientationDropDown SelectedValue="ViewModel.OrientationId"
                                             SelectionChanged="(p) => ViewModel.OrientationId = p" />
                    </Content>
                    <ContentColumn2>
                        <NullableIntField Label="Year"
                                          Value="ViewModel.Year"
                                          ValueChanged="@((p) => ViewModel.Year = p)" />
                    </ContentColumn2>
                    <ContentColumn3>
                        <MudSwitch Checked="@ViewModel.Licensed"
                                   CheckedChanged="(p) => ViewModel.Licensed = p"
                                   Color="MudBlazor.Color.Success"
                                   Label="Licensed?"
                                   T="bool" />
                    </ContentColumn3>
                    <ContentColumn4>
                        <MudSwitch Checked="@ViewModel.Custom"
                                   CheckedChanged="(p) => ViewModel.Custom = p"
                                   Color="MudBlazor.Color.Success"
                                   Label="Custom?"
                                   T="bool" />
                    </ContentColumn4>
                </DivRowCol3>
            </AdditionalContent>
        </MemorabiliaItemEditor>
    </Content>
</EditMemorabiliaPage>