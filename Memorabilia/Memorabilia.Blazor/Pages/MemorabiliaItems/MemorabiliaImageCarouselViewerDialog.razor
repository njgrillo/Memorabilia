<MudDialog Style="max-height:85vh;">
    <DialogContent>
        <Condition Evaluation="Images.Any()">
            <Match>
                <Div Class="row" 
                     Style="text-align:center;">
                    <MudCarousel AutoCycle="true"
                                 ShowArrows="true"
                                 ShowBullets="true"
                                 Style="height:600px;width:600px;"
                                 TData="object">
                        <Iterations Context="image"
                                    Items="Images">
                            <MudCarouselItem Color="@MudBlazor.Color.Primary"
                                             Transition="Transition.Slide">
                                <Image Height="600"
                                       ImageData="@(ImageService.GetUserImageData(image.FileName, UserId))"
                                       ObjectFit="@ObjectFit.Fill"                                          
                                       Width="600" />
                            </MudCarouselItem>
                        </Iterations>
                    </MudCarousel>
                </Div>                
            </Match>
            <NotMatch>
                <Image Height="600"
                       ImageData="@(ImageService.GetDomainImageData(ImageFileName.ImageNotAvailable))"
                       ObjectFit="@ObjectFit.Fill"                          
                       Width="600" />
            </NotMatch>
        </Condition>
    </DialogContent>
    <DialogActions>
        <CustomButton OnClick="Close"
                      Text="Close" />
    </DialogActions>
</MudDialog>
