@inherits MemorabiliaItem<BasketballEditModel>

<EditMemorabiliaPage Item="EditModel"
                     OnLoad="OnLoad"
                     OnSave="OnSave" 
                     TItem="BasketballEditModel">
    <Content>
        <MemorabiliaItemEditor DisplayItemTypeGameStyle="true" 
                               DisplaySinglePersonSelector="true"
                               DisplaySingleTeamSelector="true"
                               Model="EditModel"
                               TItem="BasketballEditModel">
            <AdditionalContent>
                <DivRowCol3>
                    <Content>
                        <BasketballTypeDropDown GameStyleType="@EditModel.GameStyleType"
                                                SelectedValue="@EditModel.BasketballTypeId"
                                                SelectionChanged="(p) => EditModel.BasketballTypeId = p" />
                    </Content>
                    <ContentColumn2>
                        <CommissionerDropDown SelectedValue="@EditModel.CommissionerId"
                                              SelectionChanged="(p) => EditModel.CommissionerId = p"
                                              SportLeagueLevel="@SportLeagueLevel.NationalBasketballAssociation" />
                    </ContentColumn2>
                </DivRowCol3>
            </AdditionalContent>
        </MemorabiliaItemEditor>
    </Content>
</EditMemorabiliaPage>