<DivRowFormGroup>
    <RowStack Class="@DivClass.Column12"
              Style="@Style.MarginBottomPad1">
        <PrivateSigningPersonDropDown AvailablePeople="People.Select(person => person.Person).ToArray()"
                                      SelectedValue="EditModel.Person.Id"
                                      SelectionChanged="(p) => EditModel.Person.Id = p" />
        <ItemTypeAutoComplete SelectedValue="EditModel.ItemType"
                              SelectionChanged="(p) => EditModel.ItemType = p" />
        <AddFab OnAdd="Add" />
    </RowStack>
</DivRowFormGroup>
<DivRowFormGroup>
    <RowStack Class="@DivClass.Column12"
              Style="@Style.MarginBottomPad1">
        <TextField Label="Note"
                   Lines="10"
                   SelectedText="@EditModel.Note"
                   SelectedTextChanged="@((p) => EditModel.Note = p)" />
    </RowStack>
</DivRowFormGroup>
<MudTable Bordered="false"
          Dense="false"
          Hover="true"
          Items="Items"
          Striped="true">
    <ToolBarContent>
        <ToolbarTitle>Excluded Items</ToolbarTitle>
    </ToolBarContent>
    <HeaderContent>
        <MudTh></MudTh>
        <MudTh>Name</MudTh>
        <MudTh>Item</MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>
            <PersonGridImage ImageData="@(ImageService.GetPersonImageData(GetPerson(context.Person.Id).ImageFileName))"
                             ImageLoaded="StateHasChanged"
                             PersonId="context.Person.Id" />
        </MudTd>
        <MudTd DataLabel="Name">@GetPerson(context.Person.Id).ProfileName</MudTd>
        <MudTd DataLabel="Item">@context.ItemType?.Name</MudTd>
        <MudTd>
            <DeleteGridButton OnDelete="@(_ => context.IsDeleted = true)" />
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
