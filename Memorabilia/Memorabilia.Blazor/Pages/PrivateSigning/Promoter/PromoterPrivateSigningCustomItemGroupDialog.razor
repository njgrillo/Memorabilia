<Dialog DisplayCancelButton="true"
        OnCancel="Cancel">
    <DialogContent>
        <DivRowFormGroup>
            <RowStack Class="@DivClass.Column12"
                      Style="@Style.MarginBottomPad1">
                <TextField Label="Name"
                           SelectedText="@EditModel.Name"
                           SelectedTextChanged="@((p) => EditModel.Name = p)" />

                <AddUpdateFab EditMode="EditMode"
                              OnAdd="Add"
                              OnUpdate="Update" />
            </RowStack>
        </DivRowFormGroup>
        <MudTable Bordered="false"
                  Dense="false"
                  Hover="true"
                  Items="CustomItemGroups"
                  Striped="true">
            <ToolBarContent>
                <ToolbarTitle>Custom Item Groups</ToolbarTitle>
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Name</MudTh>
                <MudTh>Items</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="Items">
                    <Iterations Context="item" 
                                Items="context.Items">
                        @item.ItemType.Name<br />                        
                    </Iterations>
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
    </DialogContent>
    <ActionsContent>
        <AddButton OnClick="Add" />
    </ActionsContent>
</Dialog>
