<DivRowFormGroup>
    <RowStack Class="@DivClass.Column12"
              Style="@Style.MarginBottomPad1">
        <PaymentOptionAutoComplete Disabled="@(EditMode == EditModeType.Update)"
                                   SelectedValue="EditModel.PaymentOption"
                                   SelectionChanged="(p) => EditModel.PaymentOption = p" />
        <TextField Label="Handle"
                   MaxLength="100"
                   SelectedText="@EditModel.PaymentHandle"
                   SelectedTextChanged="@((p) => EditModel.PaymentHandle = p)" />
        <Switch Checked="@(EditModel.PaymentOptionType == PaymentOptionType.Primary)"
                CheckedChanged="OnPaymentOptionTypeChange"
                Label="Is Primary?" />
        <AddUpdateFab EditMode="EditMode"
                      OnAdd="Add"
                      OnUpdate="Update" />
    </RowStack>
</DivRowFormGroup>
<DivRowCol12>
    <MudTable Bordered="false"
              Dense="false"
              Hover="true"
              Items="PaymentOptions.Where(paymentOption => !paymentOption.IsDeleted).OrderBy(x => x.PaymentOptionTypeName).ThenBy(paymentOption => paymentOption.PaymentOptionName).ToList()"
              Striped="true">
        <HeaderContent>
            <MudTh>Payment Type</MudTh>
            <MudTh>Handle</MudTh>
            <MudTh>Type</MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="PaymentType">@context.PaymentOptionName</MudTd>
            <MudTd DataLabel="Handle">@context.PaymentHandle</MudTd>
            <MudTd DataLabel="Type">@context.PaymentOptionTypeName</MudTd>
            <TableDataRightAligned>
                <EditGridButton OnEdit="@(_ => Edit(context))" />
                <DeleteGridButton OnDelete="@(_ => Delete(context))" />
            </TableDataRightAligned>
        </RowTemplate>
    </MudTable>
</DivRowCol12>

