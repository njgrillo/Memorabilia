<PageHeader PageTitle="@Model.PageTitle" />

<div style="border: 1px solid black; margin-top: 5%; margin-bottom: 5%; margin-left: 25%; margin-right: 25%;">
    <div class="row" style="margin-top: 1%; margin-bottom: 1%; margin-left: 1%; margin-right: 1%;">
        <div class="col-lg-12" style="text-align: center;">
            <MudImage Class="rounded-lg"
                      Elevation="5"
                      Height="150"
                      ObjectFit="@ObjectFit.Cover"
                      Src="@(ImageService.GetDomainImageData(Constant.ImageFileName.HelmetFinishes))"
                      Width="150" />
        </div>
    </div>
    <div class="row" style="margin-top: 5%; margin-bottom: 5%; margin-left: 5%; margin-right: 5%;">
        <div class="col-md-4" />
        <span class="col-md-4" style="text-align: center">
            <EditForm Model="Model" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <div style="text-align: left">
                    <TextField Label="Username"
                               SelectedText="@Model.Username"
                               SelectedTextChanged="@((p) => Model.Username = p)"/>
                </div>
                <div style="text-align: left">
                    <TextField InputType="InputType.Password" 
                               Label="Password"
                               SelectedText="@Model.Password"
                               SelectedTextChanged="@((p) => Model.Password = p)" />
                </div>
                <br />
                <div class="text-center">
                    <SaveButton Text="Login" />
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12" style="text-align: center">
                        <MudLink Href="Register">Register</MudLink>
                    </div>
                </div>
            </EditForm>
        </span>
    </div>
</div>
