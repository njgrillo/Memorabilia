<Div Style="border: 1px solid black; margin-top: 1%; margin-bottom: 1%; margin-left: 1%; margin-right: 1%;">
    <Div Class="row" Style="margin-left:2%;margin-right:2%;margin-bottom:5%;">
        <span><b>@Title</b>@_price</span>
        <br />
    </Div>    
    <Iterations Context="feature"
                Items="Constant.Feature.All">
        <MudStack Row="true">
            <Condition Evaluation="@Features.Contains(feature)">
                <Match>
                    <MudIconButton Icon="@Icons.Material.Filled.CheckCircle" />
                </Match>
                <NotMatch>
                    <MudIconButton Icon="@Icons.Material.Filled.Cancel" />
                </NotMatch>
            </Condition>
            <span>
                @feature.Name
            </span>           
            <MudTooltip Text="View Description">
                <MudIconButton Icon="@Icons.Material.Filled.Info"
                               OnClick="@(() => ShowDescription(feature))" />
            </MudTooltip>
        </MudStack>
    </Iterations>
    <br />
    <DivPad5>
        <DivRowFormGroup>
            <CustomButton ButtonType="ButtonType.Button"
                          OnClick="Select"
                          Text="Select" />
        </DivRowFormGroup>
    </DivPad5>    
</Div>
