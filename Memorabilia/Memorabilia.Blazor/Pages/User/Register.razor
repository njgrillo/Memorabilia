<Page>
    <Content>
        <PageHeader PageTitle="@Model.PageTitle" />
        <div class="row">
            <EditForm Model="Model" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />
                <div class="form-group">
                    <TextField Label="Username"
                               SelectedText="@Model.Username"
                               SelectedTextChanged="@((p) => Model.Username = p)" />
                </div>
                <div class="form-group">
                    <TextField InputType="InputType.Password" 
                               Label="Password"
                               SelectedText="@Model.Password"
                               SelectedTextChanged="@((p) => Model.Password = p)" />
                </div>
                <div class="form-group">
                    <TextField InputType="InputType.Password" 
                               Label="Confirm Password"
                               SelectedText="@Model.ConfirmPassword"
                               SelectedTextChanged="@((p) => Model.ConfirmPassword = p)" />
                </div>
                <div class="form-group">
                    <MudTextField @bind-Value="Model.FirstName"
                                  Label="First Name"
                                  Variant="Variant.Outlined" />
                </div>
                <div class="form-group">
                    <TextField Label="Last Name"
                               SelectedText="@Model.LastName"
                               SelectedTextChanged="@((p) => Model.LastName = p)" />
                </div>
                <div class="form-group">
                    <TextField Label="Email Address"
                               SelectedText="@Model.EmailAddress"
                               SelectedTextChanged="@((p) => Model.EmailAddress = p)" />
                </div>
                <div class="form-group">
                    <TextField Label="Phone"
                               SelectedText="@Model.Phone"
                               SelectedTextChanged="@((p) => Model.Phone = p)" />
                </div>
                <div class="text-right">
                    <SaveButton Text="Save" />
                </div>
                <ValidationSummary />
            </EditForm>
        </div>
    </Content>
</Page>
