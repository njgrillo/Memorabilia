@using Memorabilia.Application.Features.Admin.HelmetFinish
@using Memorabilia.Domain.Constants

<InputSelect id="HelmetFinishDropDown" class="form-control" @bind-Value="@Value" @oninput="OnInputChange" >
    <option value="0">--Select--</option>
    @foreach (var helmetFinish in HelmetFinish.All)
    {
        <option value="@helmetFinish.Id">@helmetFinish.Name</option>
    }
</InputSelect>

@code {
    [Parameter]
    public HelmetFinish InitialValue { get; set; }

    [Parameter]
    public int Value { get; set; }

    [Parameter]
    public EventCallback<int> ValueChanged { get; set; }

    protected override Task OnInitializedAsync()
    {
        if ((InitialValue?.Id ?? 0) > 0)
            Value = InitialValue.Id;

        return base.OnInitializedAsync();
    }

    private async Task OnInputChange(ChangeEventArgs args)
    {
        Value = Convert.ToInt32(args.Value);
        await ValueChanged.InvokeAsync(Value).ConfigureAwait(false);
    }
}