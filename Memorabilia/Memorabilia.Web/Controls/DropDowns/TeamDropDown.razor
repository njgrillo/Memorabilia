<MudSelect Label="Team"           
           T="int"           
           Value="@SelectedValue"
           ValueChanged="@OnInputChange"
           Variant="Variant.Outlined">
    <MudSelectItem Value="@(0)">--Select--</MudSelectItem>
    <Iterations Items="_teams" Context="team">
        <MudSelectItem Value="@team.Id">@team.DisplayName</MudSelectItem>
    </Iterations>	
</MudSelect>