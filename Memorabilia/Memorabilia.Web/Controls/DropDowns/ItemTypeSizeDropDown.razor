           T="int"           
           Value="@SelectedValue"
           ValueChanged="@OnInputChange"
           Variant="Variant.Outlined">
    <MudSelectItem Value="@(0)">--Select--</MudSelectItem>
    <Iterations Items="_itemTypeSizes" Context="itemTypeSize">
        <MudSelectItem Value="@itemTypeSize.SizeId">@itemTypeSize.SizeName</MudSelectItem>
    </Iterations>		
</MudSelect>
