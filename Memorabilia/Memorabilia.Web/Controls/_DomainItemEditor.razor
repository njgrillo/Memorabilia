@using Memorabilia.Application.Features.Admin

@inject NavigationManager _navigation
@inject IToastService _toastService

<div class="row">
    <div class="col-md-12" style="text-align: center">
        <h1>@PageTitle</h1>
    </div>
</div>
<br />
<div style="border: 1px solid black; margin-top: 2%; margin-bottom: 2%; margin-left: 2%; margin-right: 2%;">
    <div class="row" style="margin-top: 2%; margin-bottom: 2%; margin-left: 1%; margin-right: 1%;">
        <div class="col-lg-12" style="text-align: center">
            <img src="@ImagePath" alt="Image" height="150" width="150" />
        </div>
        <EditForm Model="Item" OnValidSubmit="HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="form-group">
                <label for="name">Name</label>
                <InputText id="name" class="form-control" @bind-Value="Item.Name" />
            </div>
            <div class="form-group">
                <label for="abbreviation">Abbreviation</label>
                <InputText id="abbreviation" class="form-control" @bind-Value="Item.Abbreviation" />
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </EditForm>
    </div>
    <div class="row">
        <div class="col-md-12" style="text-align: center">
            <a href="@NavigationPath">Back</a>
        </div>
    </div>
    <br />
</div>

@code {
    [Parameter]
    public string ImagePath { get; set; }

    [Parameter]
    public SaveDomainViewModel Item { get; set; }

    [Parameter]
    public string ItemName { get; set; }

    [Parameter]
    public string NavigationPath { get; set; }

    [Parameter]
    public EventCallback<SaveDomainViewModel> OnSave { get; set; }  

    [Parameter]
    public string PageTitle { get; set; }

    protected async Task HandleValidSubmit()
    {
        await OnSave.InvokeAsync(Item).ConfigureAwait(false);

        _navigation.NavigateTo(NavigationPath);

        _toastService.ShowSuccess($"{ItemName} was added successfully!", PageTitle);
    }  
}
