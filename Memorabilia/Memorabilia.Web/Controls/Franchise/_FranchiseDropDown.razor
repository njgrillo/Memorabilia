@using Memorabilia.Domain.Constants

<InputSelect id="FranchiseDropDown" class="form-control" @bind-Value="@Value" @oninput="OnInputChange">
    <option value="0">--Select--</option>
    @foreach (var franchise in Franchise.GetFranchises(SportLeagueLevel))
    {
        <option value="@franchise.Id">@franchise.Name</option>
    }
</InputSelect>

@code {
    [Parameter]
    public Franchise InitialValue { get; set; }

    [Parameter]
    public SportLeagueLevel SportLeagueLevel { get; set; }

    [Parameter]
    public int Value { get; set; }

    [Parameter]
    public EventCallback<int> ValueChanged { get; set; }

    protected override Task OnInitializedAsync()
    {
        if ((InitialValue?.Id ?? 0) > 0)
            Value = InitialValue.Id;

        return base.OnInitializedAsync();
    }

    private async Task OnInputChange(ChangeEventArgs args)
    {
        Value = Convert.ToInt32(args.Value);
        await ValueChanged.InvokeAsync(Value);
    }
}

