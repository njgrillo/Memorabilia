@using Memorabilia.Application.Features.Admin.Team
@using Memorabilia.Domain.Constants
@using Memorabilia.Web.Controls.Division

<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <_DivisionDropDown @bind-Value="@_viewModel.DivisionId" 
                               @bind-Value:event="ValueChanged"
                               SportLeagueLevel="SportLeagueLevel" /> 
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="form-group">
            <label for="beginYear">Begin Year</label>
            <InputNumber id="beginYear" class="form-control" @bind-Value="_viewModel.BeginYear" />
        </div>
    </div>
        <div class="col-lg-6">
        <div class="form-group">
            <label for="endYear">End Year</label>
            <InputNumber id="endYear" class="form-control" @bind-Value="_viewModel.EndYear" />
        </div>
    </div>
</div>
<div class="text-right">
    <button type="button" class="btn btn-secondary" @onclick="Add">Add</button>
</div>
<br />
<_Table Items="Divisions.Where(x => !x.IsDeleted).OrderBy(x => x.BeginYear).ToList()" 
        ItemsPerPage="5"   
        TItem="SaveTeamDivisionViewModel">
    <HeaderTemplate>
        <th scope="col">Division</th>
        <th scope="col">Begin Year</th>
        <th scope="col">End Year</th>
        <th scope="col"></th>
    </HeaderTemplate>
    <RowTemplate>
        <td>@context.DivisionName</td>
        <td>@context.BeginYear</td>
        <td>@context.EndYear</td>
        <td>
            <_Tooltip Text="Delete">
                <img class="can-click" 
                     src="images/trash.png" 
                     height="25" 
                     width="25" 
                     @onclick="@(_ => Remove(context.DivisionId, context.BeginYear))" />
            </_Tooltip>
        </td>
    </RowTemplate>
</_Table>

@code {
    [Parameter]
    public List<SaveTeamDivisionViewModel> Divisions { get; set; } = new();

    [Parameter]
    public SportLeagueLevel SportLeagueLevel { get; set; }

    private SaveTeamDivisionViewModel _viewModel = new SaveTeamDivisionViewModel();

    private void Add()
    {        
        Divisions.Add(_viewModel);

        _viewModel = new SaveTeamDivisionViewModel();
    }

    private void Remove(int divisionId, int? beginYear)
    {
        var division = Divisions.SingleOrDefault(division => division.DivisionId == divisionId && division.BeginYear == beginYear);

        if (division == null)
            return;

        division.IsDeleted = true;                                                                             
    } 
}
