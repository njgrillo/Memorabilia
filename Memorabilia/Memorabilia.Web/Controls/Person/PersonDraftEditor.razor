@using Memorabilia.Application.Features.Admin.People
@using Memorabilia.Web.Controls.DropDowns

<DivRowCol3>
    <Content>
        <MudSelect @bind-Value="@_viewModel.FranchiseId"
                   @bind-Value:event="ValueChanged" 
                   Disabled="@(!_canEditFranchise)"
                   Label="Franchise"
                   Variant="Variant.Outlined">
            <MudSelectItem Value="@(0)">--Select--</MudSelectItem>
            <Iterations Items="_viewModel.Franchises" Context="franchise">
                <MudSelectItem Value="@franchise.Id">@franchise.Name</MudSelectItem>
            </Iterations>	
        </MudSelect> 
    </Content>
</DivRowCol3>
<DivRowCol3>
    <Content>
        <MudNumericField @bind-Value="_viewModel.Year" 
                         Label="Year"
                         Variant="Variant.Outlined" />
    </Content>
    <ContentColumn2>
        <MudNumericField @bind-Value="_viewModel.Round" 
                         Label="Round"
                         Variant="Variant.Outlined" />
    </ContentColumn2>
</DivRowCol3>
<DivRowCol3>
    <Content>
        <MudNumericField @bind-Value="_viewModel.Pick" 
                         Label="Pick"
                         Variant="Variant.Outlined" />
    </Content>
    <ContentColumn2>
        <MudNumericField @bind-Value="_viewModel.Overall" 
                         Label="Overall"
                         Variant="Variant.Outlined" />
    </ContentColumn2>
</DivRowCol3>
<DivLeftAlign>
    <Content>
        <MudButton hidden="@(!_canAdd)"
                   ButtonType="MudBlazor.ButtonType.Button" 
                   Color="MudBlazor.Color.Secondary"
                   OnClick="Add"
                   Size="MudBlazor.Size.Medium"                                  
                   Variant="Variant.Filled">Add</MudButton>
        <MudButton hidden="@(!_canUpdate)"
                   ButtonType="MudBlazor.ButtonType.Button" 
                   Color="MudBlazor.Color.Secondary"
                   OnClick="Update"
                   Size="MudBlazor.Size.Medium"                                  
                   Variant="Variant.Filled">Update</MudButton>
    </Content>
</DivLeftAlign>
<DivRowCol6>
    <Content>
         <MudTable Bordered="false"
                   Dense="false" 
                   Hover="true"
                   Items="@Drafts.Where(draft => !draft.IsDeleted).ToList()"    
                   Striped="true">
            <HeaderContent>
                <MudTh>Franchise</MudTh>
                <MudTh>Year</MudTh>
                <MudTh>Round</MudTh>
                <MudTh>Pick</MudTh>
                <MudTh>Overall</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Franchise">@context.FranchiseName</MudTd>
                <MudTd DataLabel="Year">@context.Year</MudTd>
                <MudTd DataLabel="Round">@context.Round</MudTd>
                <MudTd DataLabel="Pick">@context.Pick</MudTd>
                <MudTd DataLabel="Overall">@context.Overall</MudTd>
                <MudTd DataLabel="">
                    <MudTooltip Text="Edit">
                        <MudFab Color="MudBlazor.Color.Primary"                                
                                Icon="@Icons.Outlined.ModeEditOutline"
                                OnClick="@(_ => Edit(context))" />
                    </MudTooltip> 
                    <MudTooltip Text="Delete">
                        <MudFab Color="MudBlazor.Color.Secondary"
                                Icon="@Icons.Outlined.DeleteOutline"
                                OnClick="@(_ => Remove(context.FranchiseId, context.Year))" />
                    </MudTooltip>  
                </MudTd>
            </RowTemplate>
        </MudTable>
    </Content>
</DivRowCol6>


