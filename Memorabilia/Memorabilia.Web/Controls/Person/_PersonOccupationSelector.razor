@using Memorabilia.Application.Features.Admin.Person
@using Memorabilia.Web.Controls.Occupation
@using Memorabilia.Web.Controls.OccupationType

<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <label for="occupation">Occupation</label>
            <_OccupationDropDown @bind-Value="@_viewModel.OccupationId"
                                 @bind-Value:event="ValueChanged" /> 
        </div> 
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <label for="occupationType">Type</label>
            <_OccupationTypeDropDown @bind-Value="@_viewModel.OccupationTypeId"
                                     @bind-Value:event="ValueChanged" /> 
        </div>
    </div>
</div>
<div class="text-right">
    <button type="button" class="btn btn-secondary" @onclick="Add">Add</button>
</div>
<br />
<table class="table" style="border: 1px solid black;">
    <thead>
        <tr>
            <th>Occupation</th>
            <th>Occupation Type</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var occupation in Occupations.Where(x => !x.IsDeleted).OrderBy(x => x.OccupationName))
        {
            <tr>
                <td>@occupation.OccupationName</td>
                <td>@occupation.OccupationTypeName</td>
                <td>
                    <_Tooltip Text="Delete">
                        <img class="can-click" 
                             src="images/trash.png" 
                             height="25" 
                             width="25" 
                             @onclick="@(_ => Remove(occupation.OccupationId))" />
                    </_Tooltip>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    [Parameter]
    public List<SavePersonOccupationViewModel> Occupations { get; set; } = new();

    private SavePersonOccupationViewModel _viewModel = new SavePersonOccupationViewModel();

    private void Add()
    {        
        Occupations.Add(_viewModel);

        _viewModel = new SavePersonOccupationViewModel();
    }

    private void Remove(int occupationId)
    {
        var occupation = Occupations.SingleOrDefault(occupation => occupation.OccupationId == occupationId);

        if (occupation == null)
            return;

        occupation.IsDeleted = true;                                                                               
    } 
}
