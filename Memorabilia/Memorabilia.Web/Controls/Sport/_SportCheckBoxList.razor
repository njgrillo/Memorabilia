<_CheckBoxList Data="@Sports"
               SelectedValues="@SelectedValues"
               TextField="@((sport)=>sport.Name)"
               ValueField="@((sport)=>@Sports.First(x => x.Name == sport.Name).Id)" />

@code {
    [Parameter]
    public List<int> SelectedValues { get; set; } = new List<int>();

    [Parameter]
    public IEnumerable<Domain.Constants.Sport> Sports { get; set; }

    protected override Task OnInitializedAsync()
    {
        return base.OnInitializedAsync();
    }
}
