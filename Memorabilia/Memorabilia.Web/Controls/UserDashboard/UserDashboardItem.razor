<div style="border: 1px solid black; margin-top: 2%; margin-bottom: 2%; margin-left: 2%; margin-right: 2%;">
    <div class="row" style="margin-top: 5%; margin-bottom: 5%; margin-left: 5%; margin-right: 5%;">
        <div class="col-lg-12" style="text-align: center;">
            <h3>@DashboardItem.Name</h3>
        </div>
    </div>
    <div class="row" style="margin-top: 1%; margin-bottom: 1%; margin-left: 1%; margin-right: 1%;">
        <div class="col-lg-12" style="text-align: center;">
            <PrettyBlazor.Condition Evaluation="DashboardItem.DashboardChartType == DashboardChartType.Donut">
                <Match>
                    <MudPaper Class="pa-4">
                        <MudChart ChartType="ChartType.Donut" 
                                  Height="300px"
                                  InputData="@Data"  
                                  InputLabels="@Labels" 
                                  Width="300px">
                            <CustomGraphics>
		                        <text class="donut-inner-text"
                                      dominant-baseline="middle"
                                      fill="black" 
                                      font-family="Helvetica"
                                      font-size="2"
                                      text-anchor="middle" 
                                      x="47%" 
                                      y="35%">Total</text>
		                        <text class="donut-inner-text"  
                                      dominant-baseline="middle" 
                                      fill="black"
                                      font-family="Helvetica" 
                                      font-size="5"
                                      text-anchor="middle"   
                                      x="47%" 
                                      y="50%">@Data.Sum().ToString()</text>
	                        </CustomGraphics>
                        </MudChart>                        
                    </MudPaper>
                </Match>
            </PrettyBlazor.Condition>
            <PrettyBlazor.Condition Evaluation="DashboardItem.DashboardChartType == DashboardChartType.Pie">
                <Match>
                    <MudPaper Class="pa-4">
                        <MudChart ChartType="ChartType.Pie" 
                                  Height="300px"
                                  InputData="@Data"  
                                  InputLabels="@Labels" 
                                  Width="300px" />
                    </MudPaper>
                </Match>
            </PrettyBlazor.Condition>            
        </div>
    </div>
    <div class="row" style="margin-top: 1%; margin-bottom: 1%; margin-left: 1%; margin-right: 1%;">
        <div class="col-lg-12" style="text-align: center;">
            <p>@DashboardItem.Description</p>
        </div>
    </div>
</div>
