@page "/AuthenticationCompanies"

@using Memorabilia.Application.Features.Admin
@using Memorabilia.Application.Features.Admin.AuthenticationCompany

@inject CommandRouter _commandRouter
@inject QueryRouter _queryRouter

<_DomainItems DomainItems="_viewModel"
              OnDelete="OnDelete"
              OnLoad="OnLoad" />

@code {
    private AuthenticationCompaniesViewModel _viewModel;

    protected async Task OnDelete(SaveDomainViewModel viewModel)
    {
        await _commandRouter.Send(new SaveAuthenticationCompany.Command(viewModel)).ConfigureAwait(false);
    }

    protected async Task OnLoad()
    {
        _viewModel = await _queryRouter.Send(new GetAuthenticationCompanies.Query()).ConfigureAwait(false);
    }
}
