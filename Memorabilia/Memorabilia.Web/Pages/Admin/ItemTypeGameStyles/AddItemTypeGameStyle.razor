@page "/ItemTypeGameStyles/Add"

@using Memorabilia.Application.Features.Admin
@using Memorabilia.Application.Features.Admin.ItemTypeGameStyle
@using Memorabilia.Web.Controls.GameStyleType
@using Memorabilia.Web.Controls.ItemType

@inject CommandRouter _commandRouter
@inject ProtectedLocalStorage _localStorage
@inject NavigationManager _navigation
@inject QueryRouter _queryRouter
@inject IToastService _toastService

@if (_viewModel == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-12" style="text-align: center">
            <h1>@_viewModel.PageTitle</h1>
        </div>
    </div>
    <br />
    <div style="border: 1px solid black; margin-top: 2%; margin-bottom: 2%; margin-left: 2%; margin-right: 2%;">
        <div class="row" style="margin-top: 2%; margin-bottom: 2%; margin-left: 1%; margin-right: 1%;">
            <div class="col-lg-12" style="text-align: center">
                <img src="images/authentictypes.png" alt="Image" height="150" width="150" />
            </div>
            <EditForm Model="_viewModel" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <div class="form-group">
                    <label for="itemType">Item Type</label>
                    <_ItemTypeDropDown @bind-Value="@_viewModel.ItemTypeId" 
                                       @bind-Value:event="ValueChanged" /> 
                </div>
                <div class="form-group">
                    <label for="authenticType">AuthenticType</label>
                    <_GameStyleTypeDropDown @bind-Value="@_viewModel.GameStyleTypeId" 
                                            @bind-Value:event="ValueChanged" /> 
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </EditForm>
        </div>
        <div class="row">
            <div class="col-md-12" style="text-align: center">
                <a href="ItemTypeGameStyles">Back</a>
            </div>
        </div>
        <br />
    </div>
}

@code {
    private SaveItemTypeGameStyleViewModel _viewModel = new SaveItemTypeGameStyleViewModel();

    protected async Task HandleValidSubmit()
    {
        var command = new SaveItemTypeGameStyle.Command(_viewModel);

        await _commandRouter.Send(command).ConfigureAwait(false);

        _navigation.NavigateTo("ItemTypeGameStyles");

        _toastService.ShowSuccess("Item Type Game Style was added successfully!", _viewModel.PageTitle);
    }
}