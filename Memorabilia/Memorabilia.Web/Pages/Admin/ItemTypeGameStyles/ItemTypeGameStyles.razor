@page "/ItemTypeGameStyles"

@using Memorabilia.Application.Features.Admin.ItemTypeGameStyle

<PageView AddRoute="@_viewModel.AddRoute" 
          AddTitle="@_viewModel.AddTitle"
          DisplayPageHeader="false"
          NavigationPath="@_viewModel.ExitNavigationPath"
          OnLoad="OnLoad"
          PageTitle="@_viewModel.PageTitle">
    <Content>
        <DivPad2>
            <Content>
                <MudTable Bordered="false"
                          Dense="false" 
                          Filter="new Func<ItemTypeGameStyleViewModel,bool>(FilterFunc1)"
                          Hover="true"
                          Items="@_viewModel.ItemTypeGameStyles"    
                          Striped="true">
                    <ToolBarContent>
                        <MudText Typo="Typo.h6">@_viewModel.PageTitle</MudText>
                        <MudSpacer />
                        <MudTextField @bind-Value="_search"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.Search"
                                      Class="mt-0"
                                      IconSize="MudBlazor.Size.Medium"
                                      Placeholder="Search" />
                    </ToolBarContent>
                    <HeaderContent>
                        <MudTh>Item Type</MudTh>
                        <MudTh>Game Style</MudTh>
                        <MudTh></MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="Item Type">@context.ItemTypeName</MudTd>
                        <MudTd DataLabel="Game Style">@context.GameStyleTypeName</MudTd>
                        <MudTd DataLabel="">
                            <GridEditButton NavigationPath="@($"{_viewModel.RoutePrefix}/Edit/{context.Id}")" />    
                            <MudTooltip Text="Delete">
                                <MudFab Color="MudBlazor.Color.Secondary"
                                        Icon="@Icons.Outlined.DeleteOutline"
                                        OnClick="@(_ => ShowDeleteConfirm(@context.Id))" />
                            </MudTooltip>
                        </MudTd>
                    </RowTemplate>
                    <PagerContent>
                        <MudTablePager />
                    </PagerContent>
                </MudTable>
            </Content>
        </DivPad2>  
    </Content>
</PageView>