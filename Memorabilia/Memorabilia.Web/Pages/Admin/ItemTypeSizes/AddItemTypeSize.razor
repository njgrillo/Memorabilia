@page "/ItemTypeSizes/Add"

@using Memorabilia.Application.Features.Admin
@using Memorabilia.Application.Features.Admin.ItemTypeSize

@inject CommandRouter _commandRouter
@inject ProtectedLocalStorage _localStorage
@inject NavigationManager _navigation
@inject QueryRouter _queryRouter
@inject IToastService _toastService

@if (_viewModel == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-12" style="text-align: center">
            <h1>@_viewModel.PageTitle</h1>
        </div>
    </div>
    <br />
    <div style="border: 1px solid black; margin-top: 2%; margin-bottom: 2%; margin-left: 2%; margin-right: 2%;">
        <div class="row" style="margin-top: 2%; margin-bottom: 2%; margin-left: 1%; margin-right: 1%;">
            <div class="col-lg-12" style="text-align: center">
                <img src="images/sizes.jpg" alt="Image" height="150" width="150" />
            </div>
            <EditForm Model="_viewModel" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <div class="form-group">
                    <label for="itemType">Item Type</label>
                    <InputSelect id="itemType" @bind-Value="_viewModel.ItemTypeId" class="form-control">
                        @foreach (var itemType in Domain.Constants.ItemType.All)
                        {
                            <option value="@itemType.Id">@itemType.Name</option>
                        }
                    </InputSelect>
                </div>
                <div class="form-group">
                    <label for="size">Size</label>
                    <InputSelect id="size" @bind-Value="_viewModel.SizeId" class="form-control">
                        @foreach (var size in Domain.Constants.Size.All)
                        {
                            <option value="@size.Id">@size.Name</option>
                        }
                    </InputSelect>
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </EditForm>
        </div>
        <div class="row">
            <div class="col-md-12" style="text-align: center">
                <a href="ItemTypeSizes">Back</a>
            </div>
        </div>
        <br />
    </div>
}

@code {
    private SaveItemTypeSizeViewModel _viewModel = new SaveItemTypeSizeViewModel();

    protected async Task HandleValidSubmit()
    {
        var command = new SaveItemTypeSize.Command(_viewModel);

        await _commandRouter.Send(command).ConfigureAwait(false);

        _navigation.NavigateTo("ItemTypeSizes");

        _toastService.ShowSuccess("Item Type Size was added successfully!", _viewModel.PageTitle);
    }
}