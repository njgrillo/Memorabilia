@page "/PhotoTypes"

@using Memorabilia.Application.Features.Admin
@using Memorabilia.Application.Features.Admin.PhotoType

@inject CommandRouter _commandRouter
@inject QueryRouter _queryRouter

<_DomainItems DomainItems="_viewModel"
              OnDelete="OnDelete"
              OnLoad="OnLoad" />

@code {
    private PhotoTypesViewModel _viewModel;

    protected async Task OnDelete(SaveDomainViewModel viewModel)
    {
        await _commandRouter.Send(new SavePhotoType.Command(viewModel)).ConfigureAwait(false);
    }

    protected async Task OnLoad()
    {
        _viewModel = await _queryRouter.Send(new GetPhotoTypes.Query()).ConfigureAwait(false);
    }
}
