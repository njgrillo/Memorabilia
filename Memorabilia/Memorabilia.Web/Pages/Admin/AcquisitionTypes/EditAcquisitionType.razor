@page "/AcquisitionTypes/Edit/{id:int}"

@using Memorabilia.Application.Features.Admin
@using Memorabilia.Application.Features.Admin.AcquisitionType
@using Memorabilia.Web.Controls.AcquisitionType

@inject CommandRouter _commandRouter
@inject QueryRouter _queryRouter

@if (!_pageLoaded)
{
    <_PageLoader />
}
else
{
    <_AcquisitionTypeEditor EditModeType="@_editModeType" 
                            Item="@_viewModel"                  
                            OnSave="Save" />
}

@code {
    [Parameter]
    public int Id { get; set; }

    private EditModeType _editModeType;
    private bool _pageLoaded;
    private SaveDomainViewModel _viewModel = new SaveDomainViewModel();

    protected override async Task OnInitializedAsync()
    {
        _editModeType = Id > 0 ? EditModeType.Update : EditModeType.Add;

        if (Id == 0)
        {
            _pageLoaded = true;
            return;
        }

        var query = new GetAcquisitionType.Query(Id);

        _viewModel = new SaveDomainViewModel(await _queryRouter.Send(query).ConfigureAwait(false));
        _pageLoaded = true;
    }

    protected async Task Save()
    {
        var command = new SaveAcquisitionType.Command(_viewModel);

        await _commandRouter.Send(command).ConfigureAwait(false);
    }
}
