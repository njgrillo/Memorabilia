@page "/AcquisitionTypes"

@using Memorabilia.Application.Features.Admin
@using Memorabilia.Application.Features.Admin.AcquisitionType

@inject CommandRouter _commandRouter
@inject QueryRouter _queryRouter

<_DomainItems DomainItems="_viewModel"
              OnDelete="OnDelete"
              OnLoad="OnLoad" />

@code {
    private AcquisitionTypesViewModel _viewModel;

    protected async Task OnDelete(SaveDomainViewModel viewModel)
    {
        await _commandRouter.Send(new SaveAcquisitionType.Command(viewModel)).ConfigureAwait(false);
    }

    protected async Task OnLoad()
    {
        _viewModel = await _queryRouter.Send(new GetAcquisitionTypes.Query()).ConfigureAwait(false);
    }
}

