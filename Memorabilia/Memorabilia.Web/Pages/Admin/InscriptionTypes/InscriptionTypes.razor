@page "/InscriptionTypes"

@using Memorabilia.Application.Features.Admin
@using Memorabilia.Application.Features.Admin.InscriptionType

@inject CommandRouter _commandRouter
@inject QueryRouter _queryRouter

<_DomainItems DomainItems="_viewModel"
              OnDelete="OnDelete"
              OnLoad="OnLoad" />

@code {
    private InscriptionTypesViewModel _viewModel;

    protected async Task OnDelete(SaveDomainViewModel viewModel)
    {
        await _commandRouter.Send(new SaveInscriptionType.Command(viewModel)).ConfigureAwait(false);
    }

    protected async Task OnLoad()
    {
        _viewModel = await _queryRouter.Send(new GetInscriptionTypes.Query()).ConfigureAwait(false);
    }
}
