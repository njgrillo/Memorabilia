@page "/People/Edit"
@page "/People/Edit/{id:int}"

@using Memorabilia.Application.Features.Admin.People
@using Memorabilia.Web.Controls.Person

<EditPage ContinueNavigationPath="@_viewModel.ContinueNavigationPath"
          EditMode="_viewModel.EditModeType"
          ExitNavigationPath="@_viewModel.ExitNavigationPath"
          ImagePath="@_viewModel.ImagePath"
          ItemName="@_viewModel.ItemTitle"
          Model="_viewModel"
          OnLoad="OnLoad"
          OnSave="OnSave"
          PageFooterButtonText="@_viewModel.ExitButtonText"
          PageFooterNavigationPath="@_viewModel.BackNavigationPath"
          PageTitle="@_viewModel.PageTitle"
          TItem="SavePersonViewModel"
          UseMultipleButtons="true">
    <TimelineContent>
        <PersonTimeline EditMode="_viewModel.EditModeType"
                        PersonId="_viewModel.Id"
                        PersonStep="_viewModel.PersonStep" />
    </TimelineContent>
    <Content>        
        <DivRowCol3>
            <Content>
                <MudTextField @bind-Value="_viewModel.FirstName" 
                              @onblur="OnNameFieldBlur"
                              Label="First Name" 
                              Variant="Variant.Outlined" />
            </Content>
            <ContentColumn2>
                <MudTextField @bind-Value="_viewModel.LastName" 
                              @onblur="OnNameFieldBlur"
                              Label="Last Name" 
                              Variant="Variant.Outlined" />
            </ContentColumn2>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <MudTextField @bind-Value="_viewModel.MiddleName"
                              Label="Middle Name" 
                              Variant="Variant.Outlined" />
            </Content>
            <ContentColumn2>
                <MudTextField @bind-Value="_viewModel.Suffix"
                              @onblur="OnNameFieldBlur"
                              Label="Suffix" 
                              Variant="Variant.Outlined" />
            </ContentColumn2>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <MudTextField @bind-Value="_viewModel.Nickname"
                              @onblur="OnNameFieldBlur"
                              Label="Calling Name" 
                              Variant="Variant.Outlined" />
            </Content>
            <ContentColumn2>
                <MudTextField @bind-Value="_viewModel.LegalName"
                              Label="Legal Name" 
                              Variant="Variant.Outlined" />
            </ContentColumn2>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <MudTextField @bind-Value="_viewModel.DisplayName"
                              Label="Display Name" 
                              Variant="Variant.Outlined" />
            </Content>
            <ContentColumn2>
                <MudTextField @bind-Value="_viewModel.ProfileName"
                              Label="Profile Name" 
                              Variant="Variant.Outlined" />
            </ContentColumn2>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <MudDatePicker @bind-Date="_viewModel.BirthDate"
                               DateFormat="MM/dd/yyyy"
                               Editable="true"
                               Label="Birth Date"
                               Mask="@(new DateMask("MM/dd/yyyy"))" 
                               Variant="Variant.Outlined" />
            </Content>
            <ContentColumn2>
                <MudDatePicker @bind-Date="_viewModel.DeathDate" 
                               DateFormat="MM/dd/yyyy"
                               Editable="true"
                               Label="Death Date"
                               Mask="@(new DateMask("MM/dd/yyyy"))" 
                               Variant="Variant.Outlined" />
            </ContentColumn2>
        </DivRowCol3>
        <DivRowCol12>
            <Content>
                <PersonNicknameEditor Nicknames="_viewModel.Nicknames" />
            </Content>
        </DivRowCol12>
    </Content>
</EditPage>