@page "/Orientations"

@using Memorabilia.Application.Features.Admin
@using Memorabilia.Application.Features.Admin.Orientation

@inject CommandRouter _commandRouter
@inject QueryRouter _queryRouter

<_DomainItems DomainItems="_viewModel"
              OnDelete="OnDelete"
              OnLoad="OnLoad" />

@code {
    private OrientationsViewModel _viewModel;

    protected async Task OnDelete(SaveDomainViewModel viewModel)
    {
        await _commandRouter.Send(new SaveOrientation.Command(viewModel)).ConfigureAwait(false);
    }

    protected async Task OnLoad()
    {
        _viewModel = await _queryRouter.Send(new GetOrientations.Query()).ConfigureAwait(false);
    }
}
