@page "/SportLeagueLevels/Edit"
@page "/SportLeagueLevels/Edit/{id:int}"

<EditPage ContinueNavigationPath="@_viewModel.RoutePrefix"
          EditMode="_viewModel.EditModeType" 
          ExitNavigationPath="@_viewModel.RoutePrefix" 
          ImagePath="@_viewModel.ImagePath" 
          ItemName="@_viewModel.ItemTitle"
          Model="_viewModel"
          OnLoad="OnLoad"
          OnSave="HandleValidSubmit"
          PageFooterButtonText="@_viewModel.ExitButtonText"
          PageFooterNavigationPath="@_viewModel.ExitNavigationPath"
          PageTitle="@_viewModel.PageTitle"
          TItem="SaveSportLeagueLevelViewModel">
    <Content>
        <DivRowCol3>
            <Content>
                <MudSelect @bind-Value="@_viewModel.SportId"
                           @bind-Value:event="ValueChanged" 
                           Label="Sports"
                           Variant="Variant.Outlined">
                    <MudSelectItem Value="@(0)">--Select--</MudSelectItem>
                    <Iterations Items="_viewModel.Sports" Context="sport">
                        <MudSelectItem Value="@sport.Id">@sport.Name</MudSelectItem>
                    </Iterations>	
                </MudSelect> 
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <MudSelect @bind-Value="@_viewModel.LevelTypeId"
                           @bind-Value:event="ValueChanged" 
                           Label="Levels"
                           Variant="Variant.Outlined">
                    <MudSelectItem Value="@(0)">--Select--</MudSelectItem>
                    <Iterations Items="_viewModel.LevelTypes" Context="levelType">
                        <MudSelectItem Value="@levelType.Id">@levelType.Name</MudSelectItem>
                    </Iterations>	
                </MudSelect> 
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <MudTextField @bind-Value="_viewModel.Name" 
                              Label="Name" 
                              Variant="Variant.Outlined" />
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <MudTextField @bind-Value="_viewModel.Abbreviation" 
                              Label="Abbreviation" 
                              Variant="Variant.Outlined" />
            </Content>
        </DivRowCol3>
    </Content>
</EditPage>