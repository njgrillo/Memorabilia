@page "/HelmetTypes"

@using Memorabilia.Application.Features.Admin
@using Memorabilia.Application.Features.Admin.HelmetType

@inject CommandRouter _commandRouter
@inject QueryRouter _queryRouter

<_DomainItems DomainItems="_viewModel"
              OnDelete="OnDelete"
              OnLoad="OnLoad" />

@code {
    private HelmetTypesViewModel _viewModel;

    protected async Task OnDelete(SaveDomainViewModel viewModel)
    {
        await _commandRouter.Send(new SaveHelmetType.Command(viewModel)).ConfigureAwait(false);
    }

    protected async Task OnLoad()
    {
        _viewModel = await _queryRouter.Send(new GetHelmetTypes.Query()).ConfigureAwait(false);
    }
}
