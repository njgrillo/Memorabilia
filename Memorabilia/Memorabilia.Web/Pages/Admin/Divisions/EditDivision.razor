@page "/Divisions/Edit"
@page "/Divisions/Edit/{id:int}"

@using Memorabilia.Application.Features.Admin.Divisions
@using Memorabilia.Web.Controls.DropDowns

<EditPage ContinueNavigationPath="@_viewModel.RoutePrefix"
          EditMode="_viewModel.EditModeType" 
          ExitNavigationPath="@_viewModel.RoutePrefix"
          ImagePath="@_viewModel.ImagePath" 
          ItemName="@_viewModel.ItemTitle"
          Model="_viewModel"
          OnLoad="OnLoad"
          OnSave="HandleValidSubmit"
          PageFooterButtonText="@_viewModel.ExitButtonText"
          PageFooterNavigationPath="@_viewModel.ExitNavigationPath"
          PageTitle="@_viewModel.PageTitle"
          TItem="SaveDivisionViewModel">
    <Content>
        <DivRowCol3>
            <Content>
                <MudSelect @bind-Value="@_viewModel.ConferenceId"
                           @bind-Value:event="ValueChanged" 
                           Label="Conference"
                           Variant="Variant.Outlined">
                    <MudSelectItem Value="@(0)">--Select--</MudSelectItem>
                    <Iterations Items="_viewModel.Conferences" Context="conference">
                        <MudSelectItem Value="@conference.Id">@conference.Name</MudSelectItem>
                    </Iterations>	
                </MudSelect>
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <MudSelect @bind-Value="@_viewModel.LeagueId"
                           @bind-Value:event="ValueChanged"  
                           Label="League"
                           Variant="Variant.Outlined">
                    <MudSelectItem Value="@(0)">--Select--</MudSelectItem>
                    <Iterations Items="_viewModel.Leagues" Context="league">
                        <MudSelectItem Value="@league.Id">@league.Name</MudSelectItem>
                    </Iterations>	
                </MudSelect>  
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <MudTextField @bind-Value="_viewModel.Name" 
                              Label="Name" 
                              Variant="Variant.Outlined" />
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <MudTextField @bind-Value="_viewModel.Abbreviation" 
                              Label="Abbreviation" 
                              Variant="Variant.Outlined" />
            </Content>
        </DivRowCol3>
    </Content>
</EditPage>