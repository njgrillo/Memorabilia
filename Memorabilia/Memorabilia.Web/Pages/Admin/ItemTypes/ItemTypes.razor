@page "/ItemTypes"

@using Memorabilia.Application.Features.Admin
@using Memorabilia.Application.Features.Admin.ItemType

@inject CommandRouter _commandRouter
@inject QueryRouter _queryRouter

<_DomainItems DomainItems="_viewModel"
              OnDelete="OnDelete"
              OnLoad="OnLoad" />

@code {
    private ItemTypesViewModel _viewModel;

    protected async Task OnDelete(SaveDomainViewModel viewModel)
    {
        await _commandRouter.Send(new SaveItemType.Command(viewModel)).ConfigureAwait(false);
    }

    protected async Task OnLoad()
    {
        _viewModel = await _queryRouter.Send(new GetItemTypes.Query()).ConfigureAwait(false);
    }
}
