@page "/PurchaseTypes"

@using Memorabilia.Application.Features.Admin
@using Memorabilia.Application.Features.Admin.PurchaseType

@inject CommandRouter _commandRouter
@inject QueryRouter _queryRouter

<_DomainItems DomainItems="_viewModel"
              OnDelete="OnDelete"
              OnLoad="OnLoad" />

@code {
    private PurchaseTypesViewModel _viewModel;

    protected async Task OnDelete(SaveDomainViewModel viewModel)
    {
        await _commandRouter.Send(new SavePurchaseType.Command(viewModel)).ConfigureAwait(false);
    }

    protected async Task OnLoad()
    {
        _viewModel = await _queryRouter.Send(new GetPurchaseTypes.Query()).ConfigureAwait(false);
    }
}
