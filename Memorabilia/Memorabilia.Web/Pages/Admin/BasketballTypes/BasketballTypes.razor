@page "/BasketballTypes"

@using Memorabilia.Application.Features.Admin
@using Memorabilia.Application.Features.Admin.BasketballType

@inject CommandRouter _commandRouter
@inject QueryRouter _queryRouter

<_DomainItems DomainItems="_viewModel"
              OnDelete="OnDelete"
              OnLoad="OnLoad" />

@code {
    private BasketballTypesViewModel _viewModel;

    protected async Task OnDelete(SaveDomainViewModel viewModel)
    {
        await _commandRouter.Send(new SaveBasketballType.Command(viewModel)).ConfigureAwait(false);
    }

    protected async Task OnLoad()
    {
        _viewModel = await _queryRouter.Send(new GetBasketballTypes.Query()).ConfigureAwait(false);
    }
}
