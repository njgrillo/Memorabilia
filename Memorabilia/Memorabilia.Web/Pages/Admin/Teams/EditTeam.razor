@page "/Teams/Edit"
@page "/Teams/Edit/{id:int}"

@using Memorabilia.Application.Features.Admin.Teams

<EditPage ContinueNavigationPath="@_viewModel.ContinueNavigationPath"
          EditMode="_viewModel.EditModeType"
          ExitNavigationPath="@_viewModel.ExitNavigationPath"
          ImagePath="@_viewModel.ImagePath"
          ItemName="@_viewModel.ItemTitle"
          Model="_viewModel"
          OnLoad="OnLoad"
          OnSave="OnSave"
          PageFooterButtonText="@_viewModel.ExitButtonText"
          PageFooterNavigationPath="@_viewModel.BackNavigationPath"
          PageTitle="@_viewModel.PageTitle"
          TItem="SaveTeamViewModel"
          UseMultipleButtons="true">
    <TimelineContent>
        <TeamTimeline DisplayConference="_viewModel.CanHaveConference" 
                      EditMode="_viewModel.EditModeType"
                      SportLeagueLevel="_viewModel.SportLeagueLevel"
                      TeamId="_viewModel.Id"
                      TeamStep="_viewModel.TeamStep" />
    </TimelineContent>
    <Content>
        <DivRowCol3 Hidden="@(!_viewModel.DisplayFranchise)">
            <Content>
                <MudSelect @bind-Value="@_viewModel.SportLeagueLevelId"
                           @bind-Value:event="ValueChanged" 
                           Label="Sport League"
                           Variant="Variant.Outlined">
                    <MudSelectItem Value="@(0)">--Select--</MudSelectItem>
                    <Iterations Context="sportLeagueLevel" 
                                Items="SportLeagueLevel.All" >
                        <MudSelectItem Value="@sportLeagueLevel.Id">@sportLeagueLevel.Name</MudSelectItem>
                    </Iterations>	
                </MudSelect>  
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <MudSelect @bind-Value="@_viewModel.FranchiseId"
                           @bind-Value:event="ValueChanged" 
                           Label="Franchise"
                           Variant="Variant.Outlined">
                    <MudSelectItem Value="@(0)">--Select--</MudSelectItem>
                    <Iterations Items="_viewModel.Franchises" Context="franchise">
                        <MudSelectItem Value="@franchise.Id">@franchise.Name</MudSelectItem>
                    </Iterations>	
                </MudSelect>
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <MudTextField @bind-Value="_viewModel.Name" 
                              Label="Name" 
                              Variant="Variant.Outlined" />
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <MudTextField @bind-Value="_viewModel.Location" 
                              Label="Location" 
                              Variant="Variant.Outlined" />
            </Content>
        </DivRowCol3>
        <DivRowCol3>
            <Content>
                <MudTextField @bind-Value="_viewModel.Nickname" 
                              Label="Nickname" 
                              Variant="Variant.Outlined" />
            </Content>
            <ContentColumn2>
                <MudTextField @bind-Value="_viewModel.Abbreviation" 
                              Label="Abbreviation" 
                              Variant="Variant.Outlined" />
            </ContentColumn2>
        </DivRowCol3>
         <DivRowCol3>
            <Content>
                <MudTextField @bind-Value="_viewModel.BeginYear" 
                              Label="BeginYear" 
                              Variant="Variant.Outlined" />
            </Content>
            <ContentColumn2>
                <MudTextField @bind-Value="_viewModel.EndYear" 
                              Label="EndYear" 
                              Variant="Variant.Outlined" />
            </ContentColumn2>
        </DivRowCol3>
    </Content>
</EditPage>