@page "/ItemTypeSports/Edit"
@page "/ItemTypeSports/Edit/{id:int}"

@using Memorabilia.Application.Features.Admin
@using Memorabilia.Application.Features.Admin.ItemTypeSport
@using Memorabilia.Web.Controls.ItemType
@using Memorabilia.Web.Controls.Sport

@inject CommandRouter _commandRouter
@inject ProtectedLocalStorage _localStorage
@inject NavigationManager _navigation
@inject QueryRouter _queryRouter
@inject IToastService _toastService

@if (_viewModel == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-12" style="text-align: center">
            <h1>@_viewModel.PageTitle</h1>
        </div>
    </div>
    <br />
    <div style="border: 1px solid black; margin-top: 2%; margin-bottom: 2%; margin-left: 2%; margin-right: 2%;">
        <div class="row" style="margin-top: 2%; margin-bottom: 2%; margin-left: 1%; margin-right: 1%;">
            <div class="col-lg-12" style="text-align: center">
                <img src="images/sports.jpg" alt="Image" height="150" width="150" />
            </div>
            <EditForm Model="_viewModel" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />
                <div class="form-group" hidden="@(!_displayItemType)">
                    <label for="itemType">Item Type</label>
                    <_ItemTypeDropDown @bind-Value="@_viewModel.ItemTypeId" 
                                       @bind-Value:event="ValueChanged" /> 
                </div>
                <div class="form-group">
                    <label for="sport">Sport</label>
                    <_SportDropDown @bind-Value="@_viewModel.SportId" 
                                    @bind-Value:event="ValueChanged" /> 
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </EditForm>
        </div>
        <div class="row">
            <div class="col-md-12" style="text-align: center">
                <a href="ItemTypeSports">Back</a>
            </div>
        </div>
        <br />
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private bool _displayItemType;
    private SaveItemTypeSportViewModel _viewModel = new SaveItemTypeSportViewModel();

    protected async Task HandleValidSubmit()
    {
        var command = new SaveItemTypeSport.Command(_viewModel);

        await _commandRouter.Send(command).ConfigureAwait(false);

        _navigation.NavigateTo("ItemTypeSports");

        _toastService.ShowSuccess("Item Type Sport was saved successfully!", _viewModel.PageTitle);
    }

    protected override async Task OnInitializedAsync()
    {
        if (Id == 0)
        {
            _displayItemType = true;
            return;
        }

        var query = new GetItemTypeSport.Query(Id);

        _viewModel = new SaveItemTypeSportViewModel(await _queryRouter.Send(query).ConfigureAwait(false));
    }
}

