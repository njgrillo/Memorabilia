@page "/Register"

<Page>
    <Content>
        <PageHeader PageTitle="@_viewModel.PageTitle" />
        <div class="row">
            <EditForm Model="_viewModel" OnValidSubmit="HandleValidSubmit">
                <DataAnnotationsValidator />
                <div class="form-group">
                    <MudTextField @bind-Value="_viewModel.Username" 
                                  Label="User Name" 
                                  Variant="Variant.Outlined" />
                </div>
                <div class="form-group">
                    <MudTextField @bind-Value="_viewModel.Password" 
                                  Label="Password" 
                                  Variant="Variant.Outlined" />
                </div>
                <div class="form-group">
                    <MudTextField @bind-Value="_viewModel.ConfirmPassword" 
                                  Label="Confirm Password"
                                  Variant="Variant.Outlined" />
                </div>
                <div class="form-group">
                    <MudTextField @bind-Value="_viewModel.FirstName" 
                                  Label="First Name" 
                                  Variant="Variant.Outlined" />
                </div>
                <div class="form-group">
                    <MudTextField @bind-Value="_viewModel.LastName" 
                                  Label="Last Name" 
                                  Variant="Variant.Outlined" />
                </div>
                <div class="form-group">
                    <MudTextField @bind-Value="_viewModel.EmailAddress" 
                                  Label="Email Address" 
                                  Variant="Variant.Outlined" />
                </div>
                <div class="form-group">
                    <MudTextField @bind-Value="_viewModel.Phone" 
                                  Label="Phone" 
                                  Variant="Variant.Outlined" />
                </div>
                <div class="text-right">
                    <MudButton ButtonType="MudBlazor.ButtonType.Submit" 
                               Color="MudBlazor.Color.Info"
                               Size="MudBlazor.Size.Medium"
                               StartIcon="@Icons.Material.Filled.Save"                                   
                               Variant="Variant.Filled">Save</MudButton>
                </div>
                <ValidationSummary />
            </EditForm>
        </div>
    </Content>
</Page>