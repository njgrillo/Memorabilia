@page "/Tools/Baseball/Accomplishments"

<DivPad2>
    <Content>
        <DivRowCol3>
            <Content>
                <MudSelect Label="Accomplishment" 
                           T="int" 
                           ValueChanged="@OnInputChange"
                           Variant="Variant.Outlined">
                    <MudSelectItem Value="@(0)">--Select--</MudSelectItem>
                    <Iterations Items="_viewModel.AccomplishmentTypes" Context="accomplishmentType">
                        <MudSelectItem Value="@accomplishmentType.Id">@accomplishmentType.Name</MudSelectItem>
                    </Iterations>	
                </MudSelect>
            </Content>
        </DivRowCol3>
        <DivRowCol6>
            <Content>
                 <MudTable Bordered="false"
                           Dense="false" 
                           Hover="true"
                           Items="@_viewModel.PersonAccomplishments.ToList()"    
                           Striped="true">
                    <HeaderContent>
                        <MudTh></MudTh>
                        <MudTh>Person</MudTh>
                        <MudTh>Date</MudTh>
                        <MudTh>Year</MudTh>
                    </HeaderContent>
                    <RowTemplate>
                        <MudTd DataLabel="">
                            <MudTooltip>
                                <MudImage Class="rounded-lg can-click" 
                                          Elevation="5" 
                                          Height="200"
                                          ObjectFit="@ObjectFit.Cover"
                                          Src="@context.PersonImagePath"
                                          Width="200" />
                            </MudTooltip> 
                        </MudTd>
                        <MudTd DataLabel="Person">                            
                            <MudLink Href="@context.ProfileLink">@context.PersonName</MudLink>
                        </MudTd>
                        <MudTd DataLabel="Date">@context.Date</MudTd>
                        <MudTd DataLabel="Year">@context.Year</MudTd>
                    </RowTemplate>
                    <PagerContent>
                        <MudTablePager />
                    </PagerContent>
                </MudTable>
            </Content>
        </DivRowCol6>
    </Content>
</DivPad2>

